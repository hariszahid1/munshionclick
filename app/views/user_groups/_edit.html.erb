<div class="modal fade" id="showdData" tabindex="-1" role="dialog" aria-labelledby="showdDataLabel">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title ml-4" id="myModalLabel">Edit User Group</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="card-body">
          <% if user_group.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(user_group.errors.count, "error") %> prohibited this user group from being saved:</h2>
              <ul>
                <% user_group.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <%= render 'form', user_group: @user_group %>
        </div>
      </div>
    </div>
  </div>
</div>