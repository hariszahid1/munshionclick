<tr>
  <td><%= check_box_tag 'object_ids[]', user_group.id %></td>
  <td><%= user_group.id %></td>
  <td class= 'urdu-font'><%= user_group.title %></td>
  <td><span title="<%= user_group.comment %>" class='truncate-text'><%= user_group.comment %></span></td>
  <td class="p-3">
    <div class="icon-container-1">
      <div class="my-icon-1 my-view-1">
        <div class="my-tooltip-1">
          <div class="icon-container">
            <div class="my-icon my-view">
              <div class="my-tooltip">
                Edit
              </div>
              <% if can?(:update, :all) %>
                <%= link_to edit_user_group_path(user_group), remote: true, class:"icon-div" do %>
                  <i class="fa fa-edit mt-2" aria-hidden="true"></i>
                <%end %>
              <% end %>
            </div>

            <div class="my-icon my-view">
              <div class="my-tooltip">
                Delete
              </div>
                <% if can?(:delete, :all) %>
                  <%= link_to user_group, method: :delete, data: {title: 'Confirmation' ,confirm: 'Are you sure?', commit: 'Sure!'}, :remote => true, :class => 'delete icon-div' do %>
                    <i class="fa fa-trash mt-2" aria-hidden="true"></i>
                  <%end %>
                <% end %>
            </div>

            <div class="my-icon my-view">
              <div class="my-tooltip">
                Show
              </div>
              <% if can?(:view, :all) %>
                <%= link_to user_group_path(user_group), remote: true, class:"icon-div" do %>
                  <i class="fa fa-eye mt-2" aria-hidden="true"></i>
                <%end %>
              <%end%>
            </div>

            <div class="my-icon my-view">
              <div class="my-tooltip">
                PDF
              </div>
              <%= link_to user_groups_path('q[id_eq]':user_group.id,'pdf':true), title: 'Download PDF', target: '_blank', class:"icon-div" do %>
      			    <i class="fa fa-file-pdf text-danger mt-2 " aria-hidden="true"></i>
              <%end %>
            </div>

            <div class="my-icon my-view">
              <div class="my-tooltip">
                CSV
              </div>
              <%= link_to user_groups_path('q[id_eq]':user_group.id,'csv':true), title: 'Download CSV', class:"icon-div" do%>
                <i class="fa fa-file-excel mt-2 text-success" aria-hidden="true"></i>
              <%end %>
            </div>

          </div>
        </div>
        <span class="icon-div-1">
          <i class="fa fa-ellipsis-v mt-2" aria-hidden="true"></i>
        </span>
      </div>
    </div>
  </td>
</tr>
