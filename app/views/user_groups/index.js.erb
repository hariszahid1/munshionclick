$( document ).ready(function() {
  
  const ctx = document.getElementById('myChart');
  var userGroupTitle=$('#userGroupTitle').val().split(' ')
  var userGroupCount=$('#userGroupCount').val().split(' ')
  Chart.defaults.font.size = 16;
  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: userGroupTitle,
      datasets: [{
        label: 'Total Users ',
        data: userGroupCount,
        borderWidth: 1,
        backgroundColor: '#FF5C5C'
      }],
    },
    options: {
      
      maintainAspectRatio: false,
      plugins: {
            title: {
                display: true,
                text: 'Bar Chart',
                font: {
                  size: 16
                }
            }
          

        }
      
    }
  });
  
});
  

