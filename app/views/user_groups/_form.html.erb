<%= bootstrap_form_for(user_group) do |f| %>
  <% if user_group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user_group.errors.count, "error") %> prohibited this user_group from being saved:</h2>
      <ul>
        <% user_group.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-lg-12 row">
    <div class="col-lg-12 form-group float-left text-black">

      <%= f.text_field :title,required:true, placeholder: "Enter Title", hide_label: true ,class: 'urdu-font' %>
    </div>

    <div class="col-lg-12 form-group float-left text-black">
      <%= f.text_area :comment, placeholder: "Enter Comment" %>
    </div>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    <%=f.object.id.nil? ? (f.submit class: "btn btn-success mr-4", style: "float: right")  :  (f.submit class: "btn btn-warning mr-4", style: "float: right")%>
  </div>
<% end %>
