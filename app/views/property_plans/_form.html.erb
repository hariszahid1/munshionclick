<%= bootstrap_form_for(property_plan) do |f| %>
<div class="col-lg-12 row">
  <div class="installments_div installments_div_cash col-lg-12 col-md-3 col-sm-6 form-group float-left ">
    <%= f.date_select :due_date,class:"form-control" %>
  </div>
  <div class="installments_div installments_div_cash col-lg-12 col-md-3 col-sm-6 form-group float-left">
    <%= f.select :due_status, options_for_select(PropertyPlan.due_statuses.map { |key, value| [key.humanize, key] }, f.object.due_status), { class: "form-control", prompt: 'Select Paid Status' },class:"form-control"%>
  </div>
  <div class="col-lg-12 col-md-3 col-sm-6 form-group float-left">
    <%= f.select :payment_method, options_for_select(PropertyPlan.payment_methods.map { |key, value| [key, key] }, f.object.payment_method), { class: "form-control", prompt: 'Select Payment method' },class:"form-control"%>
  </div>
  <div class="col-lg-12 col-md-3 col-sm-6 form-group float-left">
    <%= f.text_field :bank_detail %>
  </div>
</div>

  <div class="modal-footer">
    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    <%=f.object.id.nil? ? (f.submit class: "btn btn-success mr-4", style: "float: right")  :  (f.submit class: "btn btn-warning mr-4", style: "float: right")%>
  </div>
<% end %>
