<table data-toggle="table" data-search="true">
    <tbody>
      <% @property_installments.each_with_index do |property_plan, index| %>
        <% collapse_id = "collapse_id#{index}"%>
        <% sys_user = property_plan&.order&.sys_user %>
        <tr>
          <th>User</th>
          <th>Phone</th>
          <th>Plot</th>
          <th>Size</th>
          <th>Last Payment</th>
          <th>Last Payment Date</th>
          <th>No. of Installments</th>
          <th>Total Installments</th>
        </tr>
        <tr class='text-center'>
          <td style='text-align: center;'><%= sys_user&.name %></td>
          <td style='text-align: center;'><%= sys_user&.contact&.phone %></td>
          <% order_items = property_plan&.order&.order_items_names_and_quantity %>
          <% if order_items != 0 %>
            <td style='text-align: center;'><%= order_items&.first&.first %></td>
            <td style='text-align: center;'><%= order_items&.first.try(:[], 8) %>-M <%= order_items&.first.try(:[], 9) %>-sqr</td>
          <% else %>
            <td style='text-align: center;'></td>
            <td style='text-align: center;'></td>
          <% end %>
          <td style='text-align: center;'><%= number_with_delimiter property_plan.order&.sys_user&.ledger_books&.where('credit>0')&.last&.credit %></td>
          <td style='text-align: center;'><%= property_plan.order&.sys_user&.ledger_books&.where('credit>0')&.last&.created_at&.strftime("%d%b%y at %I:%M%p")%></td>
          <td style='text-align: center;'><%= @installments_count[property_plan.id] %></td>
          <td style='text-align: center;'><%= number_with_delimiter(property_plan&.property_installments.pluck(:installment_price)&.sum) %></td>
        </tr>
        <tr>
          <td colspan='8' class="hiddenRow">
            <table>
              <tr class='bg-info text-light'>
                <th>Installment</th>
                <th>Due</th>
                <th>Dealer</th>
              </tr>
              <% property_plan&.property_installments.each do |pi| %>
                <tr class='text-aling: center'>
                  <td style='text-align: center;'><%= number_with_delimiter pi.installment_price %></td>
                  <td style='text-align: center;'><%= pi.due_date.present? ? pi.due_date.strftime("%d%b%y") : '' %></td>
                  <td style='text-align: center;'><%= pi&.property_plan&.order&.order_plot_dealer&.first&.staff&.name if pi&.property_plan&.order&.order_plot_dealer != 0 %></td>
                </tr>
              <% end %>
            </table>
          </td>
        </tr>

      <% end %>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td style='text-align: center;'><h4>Total:</h4></td>
        <td style='text-align: center;'><h4><%= number_with_delimiter @short_pay_total%></h4></td>
      </tr>
    </tbody>
  </table>