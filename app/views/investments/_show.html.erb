<div class="modal fade" id="showdData" tabindex="-1" role="dialog" aria-labelledby="showdDataLabel">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title ml-2" id="myModalLabel">Investment Details</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
             </button>
          </div>
          <div class="modal-body">
            <div class="card-body">
              <div class="collapse show" id="collapseCardExample" style="">
                  <table class="table table-bordered table-shadow">
                      <thead class="thead-color">
                        <th>Id</th>
                        <%# <th>Invest</th> %>
                        <th>Account</th>
                        <th>Created at</th>
                        <th>Comment</th>
                      </thead>
                      <tbody>
                        <tr>
                          <td><%= @investment.id %></td>
                          <%# <td><%= @investment.invest %></td>
                          <td><%= @investment.account.title %> </td>
                          <td><%= @investment.created_at %></td>
                          <td><%= @investment.comment %></td>
                        </tr>
                      </tbody>
                  </table>
               </div>
            </div>
          </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
</div>