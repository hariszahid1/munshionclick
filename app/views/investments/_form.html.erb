<%= bootstrap_form_for(investment ,remote: true) do |f| %>
  <% if investment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(investment.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
      <% investment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%if params[:credit].present?%>
<div class="col-lg-12 form-group float-left">
	<%= f.text_field :credit, required: true, placeholder: "Enter the Amount", onkeyup:"price_in_words(this.value,'price_in_words');", onchange:"price_in_words(this.value,'price_in_words');" %>
</div>
<div  class="col-lg-12 form-group float-left">
  <h5>Credit in Words: <span id="price_in_words" style="font-size:20px;color:blue;">0.0</span></h5>
</div>
<%else%>
<div class="col-lg-12 form-group float-left">
	<%= f.text_field :debit, required: true, placeholder: "Enter the Amount", onkeyup:"price_in_words(this.value,'price_in_words');", onchange:"price_in_words(this.value,'price_in_words');" %>
</div>
<div  class="col-lg-12 form-group float-left">
  <h5>Debit in Words: <span id="price_in_words" style="font-size:20px;color:blue;">0.0</span></h5>
</div>
<%end%>
  <div class="col-lg-12 form-group float-left">
    <%= f.select :account_id , options_from_collection_for_select(@accounts, 'id', 'title', f.object.account_id), {prompt: "Select the Account"}, required: true%>
  </div>
  <div class="col-lg-12 form-group float-left">
    <%= f.date_select :created_at %>
  </div>
  <div class="col-lg-12 form-group float-left">
    <%= f.label :comment do %>
          <%= Investment.human_attribute_name :comment %>
          <i class="fas fa-language"></i>
        <% end %>
    <%= f.text_area :comment, placeholder:"Enter Comment", hide_label: true ,class: 'urdu-font'%>
  </div>

  <div class="clearfix">
  <hr>
  <div class="col-lg-12 row ">

              <div class="col-lg-6 form-group float-left">
                <%= link_to investments_path, class:"btn btn-info" do %>
                <i class="fa fa-arrow-left mr-2" aria-hidden="true"></i>Back to Investments
                <% end %>
              </div>
                
              <div class="col-lg-6 form-group float-left">
                <%=f.object.id.nil? ? (f.submit class: "btn btn-success", style: "float: right")  :  (f.submit class: "btn btn-warning", style: "float: right")%>
              </div>
                
              <% end %>
  </div>
