<tr>
  <td><%= investment.id %></td>
  <td><%= investment.invest.to_f.round(2) %></td>
  <td><%= investment.account_id.present? ? investment.account.title : ''%></td>
  <td><span title="<%= investment.comment %>" class='truncate-text'><%= investment.comment %></span></td>
  <td>
    <%if investment.created_at.strftime("%d%b%y")!=investment.updated_at.strftime("%d%b%y")%>
      <%= investment.created_at.present? ? investment.created_at.strftime("%A,  %d-%b-%y at %H:%M%p") : '' %> | <%= investment.updated_at.present? ? investment.updated_at.strftime("%A,  %d-%b-%y at %H:%M%p") : '' %>
    <%else%>
      <%= investment.created_at.present? ? investment.created_at.strftime("%A,  %d-%b-%y at %H:%M%p") : '' %>
    <%end%>
  </td>
  <td>
    <% if can?(:update, :all) %>
      <%= link_to edit_investment_path(investment) do %>
        <i class="fa fa-edit " aria-hidden="true"></i> |
      <%end %>
    <% end %>
    <% if can?(:delete, :all) %>
      <%= link_to investment, method: :delete, data: {title: 'Confirmation' ,confirm: 'Are you sure?', commit: 'Sure!'}, :remote => true, :class => 'delete' do %>
        <i class="fa fa-trash " aria-hidden="true"></i> |
      <%end %>
    <% end %>
    <% if can?(:view, :all) %>
      <%= link_to investment do %>
        <i class="fa fa-eye " aria-hidden="true"></i>
      <%end %>
    <%end%>
  </td>
</tr>
