$( document ).ready(function() {
  var dcSum=$('#dcSum').val().split(' ')
  const ctx = document.getElementById('myChart4');
  Chart.defaults.font.size = 16;
  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['Debit','Credit'],
      datasets: [{
        label: 'Total: ',
        data: dcSum,
        borderWidth: 1,
        backgroundColor: ["red", "green"],
      }],
    },
    options: {
      
      maintainAspectRatio: false,
      plugins: {
            title: {
                display: true,
                text: 'Total Balance Bar Chart',
                font: {
                  size: 16
                }
            }
          

        }
      
    }
  });
  
});

