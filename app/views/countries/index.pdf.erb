<% @date = Date.today  %>
<% @time = DateTime.now %>
<% @time = Time.zone.now %>
<p style="border-bottom: double 4px;  margin: 0;"></p>
<h1 style="text-align: center; margin: 0;">Countries List</h1>

<p style="border-bottom: double 4px;  margin: 0;"></p>
<p style="text-align: center;margin: 0;">Report by: <%=current_user.name%></p>
<div >
  <table>
    <thead class="lite-gray">
      <th>ID</th>
      <th>Title</th>
      <th>Comment</th>
    </thead>
    <tbody>
    <% data.each_with_index do |country, index| %>
      <tr>
        <th><%= country['id'] %></th>
        <td><%= country['title'] %></td>
        <td><%= country['comment'] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
