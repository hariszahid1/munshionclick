<div class="modal fade" id="showdData" tabindex="-1" role="dialog" aria-labelledby="showdDataLabel">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title ml-2" id="myModalLabel">Country Details</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
             </button>
        </div>
        <div class="modal-body">
          <div class="card-body">
              <div class="collapse show" id="collapseCardExample" style="">
                <div class="card">
                  <table class="table table-bordered table-shadow">
                    <thead class="thead-color">
                      <th>Id</th>
                      <th>Title</th>
                      <th>Comment</th>
                   </thead>
                    <tbody>
                      <tr>
                        <td><%= country.id %></td>
                        <td><%= country.title %> </td>
                        <td><%= country.comment %></td>
                      </tr>
                   </tbody>
                  </table>
                </div>
                <div class="card mt-3">
                    <table class="table table-bordered table-shadow">
                      <thead class="thead-color">
                        <th><h4>Modifier</h4></th>
                        <th><h4>Changes</h4></th>
                      </thead>
                      <tbody>
                        <%@country.versions.each do |version|%>
                          <tr>
                            <% next if version.whodunnit.nil? %>
                            <td><h6><%= User.find(version.whodunnit).user_name %></h6></td>
                                <td>
                                <table class="table table-bordered table-shadow">
                                <thead class="thead-color">
                                <th>Title</th>
                                <th>Comments</th>
                                <th>Updated at</th>
                                </thead>
                                <tbody>
                                <tr>
                                <td><h6><%= version.changeset.try(:[], 'title') %><h6></td>
                                <td><h6><%= version.changeset.try(:[], 'comment') %><h6></td>
                                <td><%= version.created_at.strftime("%d-%b-%y at %I:%M %p")%></td>
                                </tr>
                                </tbody>
                                </table>
                              </td>
                          </tr>
                        <% end%>
                      </tbody>
                    </table>
                  </div>
              </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
</div>