$( document ).ready(function() {

  const ctx = document.getElementById('myChart');
  var countryTitle=$('#countryTitle').val().split(' ')
  var countryUser=$('#countryUser').val().split(' ')
  Chart.defaults.font.size = 16;
  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: countryTitle,
      datasets: [{
        label: 'User ',
        data: countryUser,
        borderWidth: 1,
        backgroundColor: '#FF5C5C'
      }],
    },
    options: {
      
      maintainAspectRatio: false,
      plugins: {
            title: {
                display: true,
                text: 'Bar Chart',
                font: {
                  size: 16
                }
            }
          

        }
      
    }
  });
  
});
  

