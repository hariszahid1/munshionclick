<tr>
  <td><%= expense_entry_voucher.expense_type.title %></td>
  <td><%= number_with_delimiter(expense_entry_voucher.amount)%></td>
  <td><%= expense_entry_voucher.comment %></td>
  <td>
    <%if expense_entry_voucher.created_at.strftime("%d%b%y")!=expense_entry_voucher.updated_at.strftime("%d%b%y")%>
      <%= expense_entry_voucher.created_at.present? ? expense_entry_voucher.created_at.strftime("%d%b%y at %H:%M%p") : '' %> | <%= expense_entry_voucher.updated_at.present? ? expense_entry_voucher.updated_at.strftime("%d%b%y at %H:%M%p") : '' %>
    <%else%>
      <%= expense_entry_voucher.created_at.present? ? expense_entry_voucher.created_at.strftime("%A,  %d-%b-%y at %H:%M%p") : '' %>
    <%end%>
  </td>
  <td>
  <div class="icon-container-1">
      <div class="my-icon-1 my-view-1">
        <div class="my-tooltip-1">
          <div class="icon-container">
            <%if (check_can_update(@module_permission))%>
              <div class="my-icon my-view">
                <div class="my-tooltip">
                  Edit
                </div>
                  <%= link_to edit_expense_entry_voucher_path(expense_entry_voucher), remote: true, class:"icon-div" do %>
                    <i class="fa fa-edit mt-2" aria-hidden="true"></i>
                  <%end %>
              </div>
            <% end %>
            <%if (check_can_delete(@module_permission))%>    
              <div class="my-icon my-view">
                <div class="my-tooltip">
                  Delete
                </div>
                  <%= link_to expense_entry_voucher, method: :delete, data: {title: 'Confirmation' ,confirm: 'Are you sure?', commit: 'Sure!'}, :remote => true, :class => 'delete icon-div' do %>
                    <i class="fa fa-trash mt-2" aria-hidden="true"></i>
                  <%end %>
              </div>
            <% end %> 
            <%if (check_can_read(@module_permission))%>   
              <div class="my-icon my-view">
                <div class="my-tooltip">
                  Show
                </div>
                  <%= link_to expense_entry_voucher_path(expense_entry_voucher), remote: true, class:"icon-div" do %>
                    <i class="fa fa-eye mt-2" aria-hidden="true"></i>
                  <%end %>
              </div>
            <% end %>  
          </div>
        </div>
        <span class="icon-div-1">
              <i class="fa fa-ellipsis-v mt-2" aria-hidden="true"></i>
        </span>
      </div>
    </div>
  </td>
</tr>
