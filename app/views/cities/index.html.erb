<div id="custom-alert" class="alert alert-danger d-none">
  <span class="custom-alert-text"></span>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">Ã—</span>
  </button>
</div>

<div class="hidden m-4" id="city_list">
  <div class="main-content-header">
    <h1>Cities</h1>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="<%= root_path %>">Dashboard</a>
      </li>
      <li class="breadcrumb-item active">
        <a href="<%= cities_path %>">Cities</a>
      </li>
    </ol>
  </div>
  <%if (check_can_create(@module_permission))%>
      <div id="new_city">
        <%= link_to new_city_path, remote: true,class: "btn btn-success mb-4" do %>
          <i class="fa fa-plus" aria-hidden="false"></i>
              Create
        <% end %>
      </div>
  <% end %>
  <div class="float-right">
    <div class="dropdown ml-auto mr-4">
     <span class="btn btn-info" title= "About This page"><i class="fa fa-question-circle mr-1"></i>Help</span>
      <div class="dropdown-content">
        <% if @help.present? %>
        <% @help&.help_links.each do |link| %>
        <a type="button" class="" target="_blank" href="<%= link[1] %>" >Help in <%= link[0] %></a>
         <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <ul class="nav nav-pills" role="tablist">
     
      <li class="nav-item">
        <a class="nav-link tab-label active " data-toggle="tab" href="#search" role="tab">Search</a>
      </li>

       <li class="nav-item">
        <a class="nav-link tab-label " data-toggle="tab" href="#analytics" data-remote="true" role="tab">Analytics</a>
      </li>
			
			<%if (check_can_import_export(@module_permission))%>
				<li class="nav-item">
					<a class="nav-link tab-label" data-toggle="tab" href="#import-export" role="tab">Import/Export</a>
				</li>
			<%end%>
	</ul>
  <%= hidden_field_tag "cityTitle", @city_title, { :id => "cityTitle" } %>
  <%= hidden_field_tag "cityUser", @city_user, { :id => "cityUser" } %>
  <%= hidden_field_tag "cityTitle1", @city_title, { :id => "cityTitle1" } %>
  <%= hidden_field_tag "cityUser1", @city_user, { :id => "cityUser1" } %>
  <%= search_form_for @q, url: cities_path, class: "admin-controls", method: "get" do |f| %>
    <div class="tab-content">
      <div class="tab-pane active mb-3 card shadow mt-2 p-4 border-radius-1" id="search" role="tabpanel">
        <div class="row d-flex">
          <div class="col">
            <div class="col-lg-4 form-group float-left">
              <%= f.select :id_eq, options_for_select(@options_for_select.map{ |p| [p.title , p.id]}, f.object.id_eq),{:include_blank => "Select Title"},:class=>"form-control chosen-select" %>
            </div>
            <div class="col-lg-4 form-group float-left">
              <%= f.search_field :title_or_comment_cont, placeholder: "Search in city", title: "Enter city name" ,:class=>"form-control" %>
            </div>
            <div class="col-lg-3 form-group float-left">
              <button class="form-control btn btn-primary" title="search cities" name="search_submit"type="submit" value="Search" style="width:100px"><i class="fa fa-search"></i></button>
            </div>
          </div>
          <div class="col">           
            <%if (check_can_send_email(@module_permission))%>
              <button class="form-control btn btn-info d-flex justify-content-center float-right mr-2" type="button" data-toggle="modal" data-target="#exampleModalCenter" style="width:100px"><i class="fa fa-envelope mr-1 mt-1"></i>&nbsp;Mail</button>
              <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLongTitle">Enter your email to recieve files.</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                      </div>
                      <div class="modal-body">
                        <% @pos_setting = PosSetting.first %>
                        <label>Email:</label>
                        <%= text_field_tag 'email_value',{}, value: current_user.email, class: 'form-control email-fields', type: 'email'%>
                        <br />
                        <label>Subject:</label>
                        <%= text_field_tag 'subject', "#{@pos_setting.display_name} - Cities Detail report from MunshiOnClick", class: 'form-control email-fields'%>
                        <br />
                        <label>Body:</label><br />
                        <%= text_area_tag 'body', nil, class: 'form-control'%>
                        <br />
                        <label>Please select one of them.</label>
                        <div>
                          <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'CSV', required: 'required' %> CSV</label><br />
                          <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'PDF', required: 'required' %> PDF</label><br />
                          <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'Both', required: 'required' %> Both(CSV + PDF)</label><br />
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        <button name="email" type="submit" value="email" class="btn btn-primary email-send-btn">Send</button>
                      </div>
                    </div>
                  </div>
              </div>
            <% end %>
            <%if (check_can_download_csv(@module_permission))%>
              <button class="form-control btn btn-warning  mr-2  float-right mr-2" title= "download cities csv" name="csv" type="submit" value="csv" style="width:100px"><i class="fa fa-file-excel mr-2"></i>CSV</button>
            <% end %>
            <%if (check_can_download_pdf(@module_permission))%>
              <button class="form-control btn btn-danger mr-2  float-right justify-content-center" title= "download cities pdf" name="pdf" type="submit" value="pdf" formtarget="_blank" style="width:100px"><i class="fa fa-file-pdf mr-2"></i>PDF</button>
              <%if @pdf_template.present? %>
                <button class="form-control btn btn-danger mr-2 d-flex float-right justify-content-center" title= "download cities pdf" name="dynamic_pdf" type="submit" value="dynamic_pdf" formtarget="_blank" style="width:100px">Dynamic &nbsp;<i class="fa fa-file-pdf mt-1"></i></button>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="tab-pane mb-3 card shadow mt-2 border-radius-1 p-3" id="analytics" role="tabpanel">
        <div class="row d-flex border-radius-1">
          <div class="col-lg-6">
            <div class="my-chart-Container">
              <div class="mychartBox">
                <canvas id="myChart"></canvas>
              </div> 
            </div>
          </div>
          <div class="col-lg-6">
            <div class="my-chart-Container">
              <div class="mychartBox">
                <canvas id="myChart1"></canvas>
              </div> 
            </div>
          </div>  
        </div>  
      </div>
      <div class="tab-pane card shadow mt-2 border-radius-1 mb-3 p-3" id="import-export" role="tabpanel">
        <p>
          <div class="d-flex">
          <button class="btn btn-danger ml-4" name="export_data" type="submit" value="export_data">Export Data</button>
          <button class="btn btn-info ml-2" type="button" data-toggle="modal" data-target="#importFile">Import Data</button>
          </div>
        </p>
      </div>
      </div>
    <% end %>
  </div>
<div>

  <div class="card shadow border-radius-1 p-4 content m-4">
  <%# <button class='btn btn-outline-danger float-right delete-selected' type='button' style="width:163px"value='City' >Delete Selected</button> %>
    <%= render 'map_columns/map_column_partials' %>
  <div class="row d-flex" style="position: absolute;">
    
    <div>
      <%if (check_can_delete(@module_permission))%>
	      <button class="btn btn-outline-danger delete-selected mt-4 ml-3" type='button' value='City'>
	      	Delete Selected
	      </button>		
      <%end%>
    </div>  
    <%= search_form_for @q, url: cities_path, class: "admin-controls ml-4", method: "get" do |f| %>
      <div class="d-flex mt-4" style="width: 120%;">    
        <%= select_tag :limit, options_for_select(['Show Entries',5, 10, 15, 20, 25], selected: 'Show Entries'), id: 'pagination-limit', title:'Show Entries', style:'cursor: pointer;' %>
      </div>
    <% end %>
  </div>
  <div class="mt-3">
    <table data-toggle="table" data-search="true" id="city_table" class=" content-table">
      <thead>
        <tr>
         <th><input type="checkbox" id="master" class='select-all-checkbox' style="cursor: pointer;">
			</th>
         <th>ID<div class="float-right"><%= sort_link(@q, :id,"", {}, class: 'sorting-button') %></div></th>
          <th>Title<div class="float-right"><%= sort_link(@q, :title, "", {},  class: 'sorting-button') %></div></th>
          <th>Comment<div class="float-right"><%= sort_link(@q, :comment,"", {}, class: 'sorting-button') %></div></th>
          <th class="border_none">Action</th>
        </tr>
      </thead>

      <tbody>
        <%= render partial: 'city', collection: @cities %>
      </tbody>
   </table>
  </div>
  <div class="col-lg-12 digg_pagination mt-3">
    <div class="float-left page_info">
      <%= page_entries_info @cities %>
    </div>
    <div class="float-right">
    <%= paginate @cities, :container => false %>
    </div>
  </div>
</div>

<%= form_for :bulk_import, url: bulk_import_data_path, method: :post, html: {class: "bulk-import-form"} do |f| %>
  <div class="modal fade" id="importFile" tabindex="-1" role="dialog" aria-labelledby="importFileTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Import file</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= f.file_field :file, required: true, accept: '.csv' %>
          <%= f.hidden_field :table_name, value: 'City' %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit 'Import', class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="show-data"></div>

