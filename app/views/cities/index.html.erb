<div class="hidden" id="city_list">
  <div class="row">
    <div class="col-lg-12 col-sm-12">
      <h1>Cities</h1>
      <% if can?(:add, :all) %>
      <div id="new_city">
        <%= link_to new_city_path, remote: true,class: "btn btn-success" do %>
           <i class="fa fa-plus" aria-hidden="true"></i>
           New City
           <% end %>
      </div>
      <% end %>
      <h1 class = "btn btn-info float-right question" title= "About This page">?</h1>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="row">
    <div class="col-lg-12 col-sm-12">
      <%= search_form_for @q, url: cities_path, class: "admin-controls", method: "get" do |f| %>
        <div class="col-lg-3 form-group float-left">
          <%= f.search_field :title_or_comment_cont, placeholder: "Search in city", title: "Enter city name" ,:class=>"form-control" %>
        </div>
      
        <div class="col-lg-2 form-group float-left">
          <button class="form-control btn btn-primary" title="search cities" name="search_submit"type="submit" value="Search" style="width:100px"><i class="fa fa-search"></i></button>
        </div>
        <div class="col-lg-2 form-group d-flex float-right">
          <button class="form-control badge badge-pill badge-success" title= "download cities csv" name="csv" type="submit" value="csv" style="width:100px">Cities &nbsp;<i class="fa fa-file"></i></button>
       
          <button class="form-control badge badge-pill badge-danger" title= "download cities pdf" name="pdf" type="submit" value="pdf" formtarget="_blank" style="width:100px">Cities &nbsp;<i class="fa fa-file-pdf"></i></button>
        
        
          <button class="form-control badge badge-pill badge-info" type="button" data-toggle="modal" data-target="#exampleModalCenter" style="width:100px"><i class="fa fa-envelope"></i>Mail</button>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Enter your email to recieve files.</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%= text_field_tag 'email_value', {}, class: 'form-control', placeholder: 'Enter email to recieve pdf and csv...', type: 'email' %>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button name="email" type="submit" value="email" class="btn btn-primary">Send</button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <%= render 'map_columns/map_column_partials' %>

  <table data-toggle="table" data-search="true" id="city_table">
    <thead>
      <tr>
      <th>ID<div class="float-right"><%= sort_link(@q, :id,"", {}, class: 'sorting-button') %></div></th>
        <th>Title<div class="float-right"><%= sort_link(@q, :title, "", {},  class: 'sorting-button') %></div></th>
        <th>Comment<div class="float-right"><%= sort_link(@q, :comment,"", {}, class: 'sorting-button') %></div></th>

        <th class="border_none">Action</th>
      </tr>
    </thead>

    <tbody>
      <%= render partial: 'city', collection: @cities %>
    </tbody>
  </table>
</div>

<div class="clearfix"></div>
<div class="row">
  <div class="col-lg-4 col-sm-4">
    <%= page_entries_info @cities %>
  </div>
  <div class="col-lg-8 col-sm-8 pagination-left">
    <%= paginate @cities %>
  </div>
</div>

