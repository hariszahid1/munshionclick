$( document ).ready(function() {

  const ctx = document.getElementById('myChart');
  var cityTitle=$('#cityTitle').val().split(' ')
  var cityUser=$('#cityUser').val().split(' ')
  Chart.defaults.font.size = 16;
  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: cityTitle,
      datasets: [{
        label: 'Users ',
        data: cityUser,
        borderWidth: 1,
        backgroundColor: '#FF5C5C'
      }],
    },
    options: {
      
      maintainAspectRatio: false,
      plugins: {
            title: {
                display: true,
                text: 'Bar Chart',
                font: {
                  size: 16
                }
            }
          

        }
      
    }
  });
  
});
  
