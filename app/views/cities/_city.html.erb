<tr>
  <td><%= city.id %></td>
  <td class='urdu-font'><%= city.title %></td>
  <td><%= city.comment %></td>
  <td>
    <% if can?(:update, :all) %>
      <%= link_to edit_city_path(city), remote: true do %>
        <i class="fa fa-edit mr-2 ml-2 " aria-hidden="true"></i> |
      <%end %>
    <% end %>
    <% if can?(:delete, :all) %>
      <%= link_to city, method: :delete, data: {title: 'Confirmation' ,confirm: 'Are you sure?', commit: 'Sure!'}, :remote => true, :class => 'delete' do %>
        <i class="fa fa-trash mr-2 ml-2" aria-hidden="true"></i> |
      <%end %>
    <% end %>
    <% if can?(:view, :all) %>
      <%= link_to city_path(city), remote: true do %>
        <i class="fa fa-eye mr-2 ml-2" aria-hidden="true"></i>
      <%end %>
    <%end%>

  </td>
</tr>
