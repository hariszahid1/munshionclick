<tr>
  <td>
    <%= f.hidden_field :id %>
    <%= f.hidden_field :staff_id %>
    <%= f.object.staff.coded_full_name %>
  </td>
  <%= f.fields_for :salary_detail_product_quantities do |salary_detail_product_quantity| %>
    <%= render 'salary_detail_product_quantities_fields', f: salary_detail_product_quantity %>
  <% end %>

  <td class="hidden">
    <%= f.number_field :raw_wage_rate, hide_label:true, class: "raw-wage-rate", onchange: "cal_product_quantity()", onkeyup: "cal_product_quantity()"%>
  </td>
  <td class="hidden">
    <%= f.number_field :wage_rate,value: f.object.wage_rate.present? ? f.object.wage_rate : f.object.staff.wage_rate, hide_label:true, class: "wage-rate" , onchange: "cal_product_quantity()", onkeyup: "cal_product_quantity()"%>
  </td>
  <td>
    <span class="quantity_product">0.00</span>
  </td>
  <td>
    <%= f.hidden_field :wage_debit,value:0.00, class: "pay" %>
    <span class="pay">0.00</span>
  </td>
  <td>
    <%= f.hidden_field :amount,value:0.00, class: "total_pay" %>
    <span class="total_pay">0.00</span>
  </td>
</tr>
