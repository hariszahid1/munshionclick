          <%end%>
          </td>
        <td>
          <%if (@tile_rohra!=0 && @total_count!=0) %>
            <h5><%=total=((@tile_rohra/@total_count)*100).to_f.round(1)%></h5>
            <%total_avg+=total%>
          <%else%>
            <h5>0</h5>
          <%end%>
          </td>
        <td class="table-active"><h5><b><%=total_avg.round(0)%> %</b></h5></td>
        <td><h5></h5></td>

      </tr>
    </tbody>
  </table>
