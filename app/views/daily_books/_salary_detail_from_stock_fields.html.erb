<div class="col-lg-12 row bg-white nested-fields" >
  <div class="col-lg-2 form-group" style="float:left">
    <%= f.select :staff_id, options_from_collection_for_select(@khakar_staffs, 'id', 'name',f.object.staff_id.present? ? f.object.staff_id : ''), {prompt: "Select the Khakar",hide_label:true}, { onchange: 'set_khakar_info(this.value,this.id);',onkeyup:"set_khakar_info(this.value,this.id); ",class: "chosen-select",required: true }%>
  </div>
  <div class="col-lg-1 form-group" style="float:left">
    <%= f.hidden_field :id %>
    <%= f.select :raw_product_id, options_from_collection_for_select(@raw_products, 'id', 'title', f.object.raw_product_id), {prompt: "Select the RawProduct",hide_label:true},{required: true}%>
  </div>
  <div class="col-lg-1 form-group" style="float:left">
    <%= f.select :transaction_location, SalaryDetail.transaction_locations.map { |key, value| [key.humanize, key] },{ hide_label:true, class: "form-control", required: true} %>
  </div>
  <div class="col-lg-1 form-group" style="float:left">
    <%= f.number_field :khakar_quanity, {hide_label:true, class: "raw-quantity",onchange:"daily_book_khakar_stock_update()",onkeyup:"daily_book_khakar_stock_update()"}%>
  </div>
  <div class="col-lg-1 form-group" style="float:left">
    <span class="kat_quantity">0.00</span>
  </div>
  <div class="col-lg-1 form-group" style="float:left">
    <%= f.number_field :khakar_wast, hide_label:true, class: "wast",onchange:"daily_book_khakar_stock_update()",onkeyup:"daily_book_khakar_stock_update()" %>
  </div>
  <div class="col-lg-1 form-group" style="float:left">
    <%= f.hidden_field :khakar_remaning,value:0.00, class: "quantity" %>
    <span class="quantity">0.00</span>
  </div>
  <div class="col-lg-1 form-group" style="float:left">
    <%= f.number_field :raw_wage_rate, hide_label:true, class: "raw-wage-rate",onchange:"daily_book_khakar_stock_update()",onkeyup:"daily_book_khakar_stock_update()" %>
  </div>
  <div class="col-lg-1 form-group" style="float:left">
    <%= f.number_field :wage_rate, hide_label:true, class: "wage-rate",onchange:"daily_book_khakar_stock_update()",onkeyup:"daily_book_khakar_stock_update()" %>
  </div>
  <div class="col-lg-1 form-group" style="float:left">
    <%= f.hidden_field :khakar_debit,value:0.00, class: "pay" %>
    <span class="pay">0.00</span>
  </div>
  <div class="col-lg-1 form-group" style="float:left">
    <%= f.hidden_field :khakar_credit,value:0.00, class: "total_pay" %>
    <span class="total_pay">0.00</span>
  </div>
</div>
