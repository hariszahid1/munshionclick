<h1>Salaries Debit From Staff Balance</h1>

<div class="row col-lg-12 form-group float-left">
<% if can?(:add, :all) %>
  <div class="col-lg-2">
    <%= link_to new_salary_path, class: "btn btn-success" do %>
           <i class="fa fa-envelope-open" aria-hidden="true"></i>
           Pay Salary
    <% end %>
  </div>
  <% end %>
  <div class="col-lg-2">
    <%= link_to advance_salaries_path, class: "btn btn-success" do %>
           <i class="fa fa-envelope-open" aria-hidden="true"></i>
           Pay Dasti
    <% end %>
  </div>
  <div class="col-lg-2">
    <%= link_to loan_salaries_path, class: "btn btn-success" do %>
           <i class="fa fa-envelope-open" aria-hidden="true"></i>
           Loan/pashgyi
    <% end %>
  </div>
  <%if @pos_setting.sys_type=="batha"  or pos_setting_sys_type=="Factory"%>
    <div class="col-lg-3">
      <%= link_to advance_all_salaries_path, class: "btn btn-primary",style: "width:250" do %>
             <i class="fa fa-envelope-open" aria-hidden="true"></i>
             Weekly Labour Kharcha
      <% end %>
    </div>
    <div class="col-lg-3">
      <%= link_to work_detail_salaries_path, class: "btn btn-primary",style: "width:250" do %>
         <i class="fa fa-envelope-open" aria-hidden="true"></i>
         Work/Salary Detail
      <% end %>
    </div>
  <%end%>
</div>

<div class="clearfix"></div>
<div class="row">
  <div class="col-lg-12 col-sm-12">
    <%= search_form_for @q, url: salaries_path, class: "admin-controls", method: "get" do |f| %>
    <div class="col-lg-3 form-group float-left">
      <%= f.select :staff_id_eq, options_from_collection_for_select(@salary_searchs, "id", ->(st){"#{st.name} \u{27F6} #{st.father} \u{27F6} #{st.code}"},@id),{:include_blank => "Select Staff"},:class=>"form-control chosen-select" %>
    </div>
      <div class="col-lg-2 form-group float-left">
        <%= f.select :payment_type_eq, options_for_select(Salary.payment_types, @payment_type), {:include_blank => "Select Payment type"},:class=>"form-control chosen-select" %>
      </div>
      <div class="col-lg-2 form-group float-left">
          <%= f.select :staff_department_id_eq, options_from_collection_for_select(@departments, 'id', 'title', @department), {hide_label:true,title: "Select the Department" ,prompt: "Select the Department"},:class=>"form-control chosen-select"%>
        </div>
      <div class="col-lg-2 form-group float-left">
        <%= f.search_field :created_at_gteq, class: 'form-control input-sm datepicker',value: @created_at_gteq,placeholder: "YYYY-MM-DD" %>
      </div>
      <div class="col-sm-2 form-group float-left">
        <%= f.search_field :created_at_lteq, class: 'form-control input-sm datepicker' ,value: @created_at_lteq,placeholder: "YYYY-MM-DD"%>
      </div>
      <div class="col-sm-2 form-group float-left">
        <button class="form-control btn btn-primary" name="search_submit" type="submit" value="Search" style="width:100px"><i class="fa fa-search"></i></button>
      </div>
      <div class="col-lg-1 form-group float-right">
        <button class="form-control badge badge-pill badge-danger" name="submit_pdf" type="submit" value="Salaries Detail PDF A8" formtarget="_blank" ><i class="fa fa-file-pdf"></i>&nbsp; Salaries</button >
      </div>
    <% end %>
  </div>
</div>

<table data-toggle="table" data-search="true">
  <thead>
    <tr>
      <th><%= sort_link(@q, :id, 'ID') %></th>
      <th><%= sort_link(@q, :staff_name, 'Name') %></th>
      <th><%= sort_link(@q, :paid_salary, 'Paid') %></th>
      <th><%= sort_link(@q, :staff_wage_debit, 'Balance') %></th>
      <th><%= sort_link(@q, :staff_balance, 'OutSt Balance') %></th>
      <th><%= sort_link(@q, :leaves_in_month, 'Leaves') %></th>
      <th><%= sort_link(@q, :account_id, 'Paid By') %></th>
      <th><%= sort_link(@q, :updated_at, 'Date/Time') %></th>
      <th><%= sort_link(@q, :comment, 'Comment') %></th>
        <th class="border_none">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @salaries.each do |salary| %>
      <tr>
        <td><%= salary.id %></td>
        <td><%= salary.staff.full_name %></td>
        <td><%= salary.paid_salary.present? ? salary.paid_salary : "" %><%= salary.advance.present? ? salary.advance : "" %> </td>
        <td><%= salary.staff.wage_debit.to_f.round(2) %></td>
        <td><%= salary.total_balance.to_f.round(2) %></td>
        <td><%= salary.leaves_in_month %></td>
        <td><%= salary.account_id.present? ? salary.account.title : '' %></td>
        <td>
          <%if salary.created_at.strftime("%d%b%y")!=salary.updated_at.strftime("%d%b%y")%>
            <%= salary.created_at.present? ? salary.created_at.strftime("%A,  %d-%b-%y at %H:%M%p") : '' %> | <%= salary.updated_at.present? ? salary.updated_at.strftime("%d%b%y at %H:%M%p") : '' %>
          <%else%>
            <%= salary.created_at.present? ? salary.created_at.strftime("%A,  %d-%b-%y at %H:%M%p") : '' %>
          <%end%>
        </td>
        <td><%= salary.comment %> | <%= salary.payment_type %></td>
        <td>
          <%= link_to salary, target: "_blank" do %>
            <i class="fa fa-print" aria-hidden="true"></i> |
          <%end %>
          <% if can?(:update, :all) %>
          <%= link_to salary.Salary? ? edit_salary_path(salary) : edit_advance_salary_path(salary) do %>
                      <i class="fa fa-edit" aria-hidden="true"></i> |
          <% end %>
        <% end %>
        <% if can?(:delete, :all) %>
          <%= link_to salary, method: :delete, data: {title: 'Confirmation' ,confirm: 'Are you sure?', commit: 'Sure!'}, :remote => true, :class => 'delete' do %>
            <i class="fa fa-trash" aria-hidden="true"></i> |
          <% end %>
        <% end %>
          <%= link_to salary do %>
            <i class="fa fa-eye" aria-hidden="true"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td><h5>Total</h5></td>
      <td></td>
      <td></td>
      <td></td>
      <td><h5><%=@salaries.sum(:paid_salary)+@salaries.sum(:advance)%></h5></td>
      <td></td>
    </tr>
  </tbody>
</table>

<div class="clearfix"></div>
<div class="row">
  <div class="col-lg-4 col-sm-4">
    <%= page_entries_info @salaries %>
  </div>
  <div class="col-lg-8 col-sm-8 pagination-left">
    <%= paginate @salaries %>
  </div>
</div>

<script>
  $(document).ready(function() {
    if ($(".bootstrap-table").length == 0){
      $("table").bootstrapTable();
    }
    $("#students_list").removeClass('hidden');
    FontAwesome.dom.i2svg();
  });
</script>
