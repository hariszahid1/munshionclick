<%= search_form_for @q, url: analytics_salaries_path, class: "admin-controls col-12 row", remote: true, method: "get" do |f| %>
  <%= link_to 'Weekly', analytics_salaries_path(type: 'weekly'), class: 'btn btn-danger ml-2', remote: true %>
  <%= link_to 'Monthly', analytics_salaries_path(type: 'monthly'), class: 'btn btn-success ml-2', remote: true %>
  <%= link_to 'Yearly', analytics_salaries_path(type: 'yearly'), class: 'btn btn-warning ml-2', remote: true %>

  <div class="col-lg-2 ml-5">
    <%= f.search_field :created_at_gteq, class: 'form-control input-sm datepicker', datepicker: true, placeholder: "YYYY-MM-DD" %>
  </div>

  <div class="col-lg-2">
    <%= f.search_field :created_at_lteq, class: 'form-control button-sm datepicker', datepicker: true , placeholder: "YYYY-MM-DD" %>
  </div>
  <button class="btn btn-primary" name="search_submit" type="submit" value="Search"><i class="fa fa-search"></i></button>
<% end %>

