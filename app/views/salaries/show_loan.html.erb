<div class="row">
  <div class="col-sm-12"><h1>Advance Detail</h1></div>
</div>
<br />

<div class="row">
  <div class="col-sm-4"><strong>Paid To:</strong></div>
  <div class="col-sm-8"><%= @salary.paid_to %></div>
</div>
<br />

<div class="row">
  <div class="col-sm-4"><strong>Name</strong></div>
  <div class="col-sm-8"><%= @salary.staff.name %></div>
</div>
<br />

<div class="row">
  <div class="col-sm-4"><strong>Advance:</strong></div>
  <div class="col-sm-8"><%= @salary.advance %></div>
</div>
<br />

<div class="row">
  <div class="col-sm-4"><strong>Total Advance due</strong></div>
  <div class="col-sm-8"><%= @salary.staff.advance_amount %></div>
</div>
<br />

<div class="row">
  <div class="col-sm-4"><%= link_to 'Salaries', salaries_path, class: "btn btn-info" %></div>
  <div class="col-sm-2"><%= link_to 'Edit', edit_advance_salary_path(@salary), class: "btn btn-primary" %></div>
</div>
