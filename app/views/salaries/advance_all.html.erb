<h1>
  Weekly Pay To All Staff
</h1>
<div class="row">
  <div class="col-lg-12 col-sm-12">
    <div class="col-lg-3 float-left" >
      <%=select_tag "account", options_from_collection_for_select(@accounts, "id", "title"), {prompt: "Select the Account", onchange: 'set_account_info(this.value); return false;', class:"form-control"} %>
    </div>
    <%= search_form_for @q, url: advance_all_salaries_path, class: "admin-controls", method: "get" do |f| %>
      <div class="col-lg-4 form-group float-left">
        <%= f.select :department_id_eq, options_from_collection_for_select(@departments, 'id', 'title', f.object.department_id_eq), {hide_label:true,title: "Select the Department" ,prompt: "Select the Department"},class:"form-control"%>
      </div>
      <div class="col-lg-2 form-group float-left">
        <input class="form-control btn btn-primary" name="search_submit" type="submit" value="Search"></input>
      </div>
    <% end %>
  </div>
</div>
<br>
<div class="col-lg-12" >
  <div class="col-lg-3 form-group" style="float:left"><b>Staff</b></div>
  <div class="col-lg-2 form-group" style="float:left"><b>Dasti</b></div>
  <div class="col-lg-1 form-group" style="float:left"><b>Pashgi</b></div>
  <div class="col-lg-2 form-group" style="float:left"><b>kharcha</b></div>
  <div class="col-lg-3 form-group" style="float:left"><b>Account</b></div>
  <div class="col-lg-1 form-group" style="float:left"><b>Action</b></div>
</div>
<%@staffs_list.each do |staff|%>
  <%= render 'advance_form_all', salary: @salary ,staff: staff%>
<%end%>
<div class="col-lg-12" >
  <div class="col-lg-3 form-group" style="float:left"><b>Total</b></div>
  <div class="col-lg-2 form-group" style="float:left"><b>.</b></div>
  <div class="col-lg-1 form-group" style="float:left"><b>.</b></div>
  <div class="col-lg-2 form-group" style="float:left"><b id="advance_all_total"></b></div>
  <div class="col-lg-3 form-group" style="float:left"><b></b></div>
  <div class="col-lg-1 form-group" style="float:left"><b>.</b></div>
</div>
<div class="actions" style="float:left">
  <%= link_to 'Salaries', salaries_path, class: "btn btn-info" %>
</div>
