$( document ).ready(function() {

  const ctx = document.getElementById('myChart');
  var salaries_to_staffs=$('#salaries_to_staffs').val().split(' ')
  var salary_paid_amount=$('#salary_paid_amount').val().split(' ')
  Chart.defaults.font.size = 16;
  new Chart(ctx, {
    type: 'pie',
    data: {
      labels: salaries_to_staffs,
      datasets: [{
        label: 'Total Amount',
        data: salary_paid_amount,
        borderWidth: 1,
      }],
    },
    options: {
      maintainAspectRatio: false,
      plugins: {
            title: {
                display: true,
                text: 'Total salaries paid to staffs.',
                font: {
                  size: 16
                }
            }
        }
    }
  });
});

