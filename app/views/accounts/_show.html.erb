<div class="modal fade" id="showdData" tabindex="-1" role="dialog" aria-labelledby="showdDataLabel">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-body">
          <div class="modal-header">
            <h2 class="modal-title" id="myModalLabel">Accounts Details</h2>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
              <div class="collapse show" id="collapseCardExample" style="">
                <div class="card-body">
                <div class="card shadow">
                   <ul class="list-group list-group-flush">
                      <li class="list-group-item mb-2"><span class="float-left h5">ID:</span><span class="float-right"><%= @account.id %></span></li>
                      <li class="list-group-item mb-2"><span class="float-left h5">Title:</span><span class="float-right"><%= @account.title %></span></li>
                      <li class="list-group-item mb-2"><span class="float-left h5">Bank Name:</span><span class="float-right"><%= @account.bank_name %></span></li>
                      <li class="list-group-item mb-2"><span class="float-left h5">Iban Number:</span><span class="float-right"><%= @account.iban_number %></span></li>
                      <li class="list-group-item"><span class="float-left h5">Amount:</span><span class="float-right"><%= @account.amount %></span></li>
                   </ul>
                 </div>                                        
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger float-right" data-dismiss="modal" aria-label="Close">
                <span class="text-light p-2">Close</span>
              </button>
            </div>
       </div>
      </div>
    </div>
  </div>
</div>
