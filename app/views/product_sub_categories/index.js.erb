$( document ).ready(function() {

  const ctx = document.getElementById('myChart');
  var subTitle=$('#subTitle').val().split(' ')
  var subUnit=$('#subUnit').val().split(' ')
  Chart.defaults.font.size = 16;
  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: subTitle,
      datasets: [{
        label: 'Units ',
        data: subUnit,
        borderWidth: 1,
        backgroundColor: '#FF5C5C'
      }],
    },
    options: {
      
      maintainAspectRatio: false,
      plugins: {
            title: {
                display: true,
                text: 'Bar Chart',
                font: {
                  size: 16
                }
            }
          

        }
      
    }
  });
  
});
  

