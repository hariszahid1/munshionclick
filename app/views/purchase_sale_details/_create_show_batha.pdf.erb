<table>
  <tbody>
    <tr>
      <td><h2 style="text-align: left; margin: 0;">Delivery no <%= @purchase_sale_detail.sys_user.purchase_sale_details.count.to_i%></h2></td>
      <td><h2 style="text-align: right; margin: 0;">Voucher no <%=@purchase_sale_detail.id.to_s %></h2></td>
    </tr>

  </tbody>
</table>
<p style="border-bottom: double 4px;  margin: 0;"></p>
<div style="width:90vw;">
  <table>
    <th></th>
    <th></th>
    <tr style=" font-size:15px;,font-family: Arial Black, Gadget, sans-serif">
      <td style="width:67vw;">Date Time: <span><%= @time.strftime("%d")%>/<%=@time.strftime("%b")%>/<%= @time.strftime("%y")%> <%=@time.strftime("at %I:%M%p")%></span> </td>
      <td style="width:33vw;">Customer Name: <span> <b><%=@purchase_sale_detail.sys_user.name %></b></span></td>
    </tr>
    <tr style=" font-size:15px;,font-family: Arial Black, Gadget, sans-serif">
      <td style="">Mobile: <%=@purchase_sale_detail.sys_user.contact.mobile%></td>
      <td style="">Address: <%=@purchase_sale_detail.sys_user.contact.address%></td>
    </tr>
  </table>
</div>
<p style="border-bottom: dotted 3px;  margin: 0;"></p>
<div style="width:90vw;">
  <table>
    <th style="width:40vw;">Items</th>
   <th style="width:20vw;">Qty</th>
    <th style="width:20vw;">Loader no#</th>
    <% @purchase_sale_detail.purchase_sale_items.each do |item|%>
      <tr style="text-align:center; font-size:15px;,font-family: Arial Black, Gadget, sans-serif">
        <td ><%=item.purchase_sale_type=="Sale_type" ? "S-" : "R-"%> <%=item.product.present? ? item.product.title : item.item.title %></td>
        <td ><%=item.quantity %></td>
        <td ><%=item.purchase_sale_detail.staff.name if item.purchase_sale_detail.staff.present? %></td>
      </tr>
    <% end %>
  </table>
</div>
<%if @purchase_sale_detail.comment.present?%>
  <p style="border-bottom: dotted 3px;  margin: 0;"></p>
  <p style="text-align: center;margin: 0;"><span>Comment: <%=@purchase_sale_detail.comment.titleize%></span></p>
<%end%>
