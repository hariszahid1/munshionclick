<div class="nested-fields">
  <div class="col-lg-2 form-group float-left font-weight-bold">
    <%= f.hidden_field :expense_id %>
    <%= f.hidden_field :id %>
    <%= f.hidden_field :expenseable_type %>
    <%= f.hidden_field :expenseable_id %>
    <%=f.number_field :amount,step: :any,class:'expense',placeholder: :Amount,onchange:"expense_total()",onkeyup:"expense_total()"%>
  </div>
  <div class="col-lg-2 form-group float-left font-weight-bold">
    <%= f.select :expense_type_id, options_from_collection_for_select(@expense_types, 'id', 'title', f.object.expense_type_id), {prompt: "Select the Expense Type"},class: "" %>
  </div>
  <div class="col-lg-2 form-group float-left font-weight-bold">
    <%= f.select :account_id , options_from_collection_for_select(@accounts, 'id', 'title', f.object.account_id), {prompt: "Select the Account"},class: ""%>
  </div>
  <div class="col-lg-4 form-group float-left font-weight-bold">
    <%= f.text_area :comment, value: "Purchase Expense", label: 'Expense Comment'%>
  </div>
  <div class="col-lg-2 form-group float-left text-xs font-weight-bold text-danger text-uppercase">
    <%= link_to_remove_association f do %>
      <i class="fa fa-minus-circle"></i> Drop
    <% end %>
  </div>
</div>
