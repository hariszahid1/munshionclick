$( document ).ready(function() {
  const ctx = document.getElementById('myChart');
  var total_purchase_customer_name=$('#total_purchase_customer_name').val().split(' ')
  var total_purchase_customer_amount=$('#total_purchase_customer_amount').val().split(' ')
  Chart.defaults.font.size = 16;
  new Chart(ctx, {
    type: 'pie',
    data: {
      labels: total_purchase_customer_name,
      datasets: [{
        label: 'Total Amount',
        data: total_purchase_customer_amount,
        borderWidth: 1,
      }],
    },
    options: {
      maintainAspectRatio: false,
      plugins: {
            title: {
                display: true,
                text: 'Total amount chart customer purchase/sale amount.',
                font: {
                  size: 16
                }
            }
        }
    }
  });
});

