<div id="custom-alert" class="alert alert-danger d-none">
  <span class="custom-alert-text"></span>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">Ã—</span>
  </button>
</div>
<div class="list_content_page">
  <div class="row">
    <div class="col-lg-12 col-sm-12">
      <div class="main-content-header">
        <h1><%= current_user.allowed_valid_roles.to_s.titleize+'s' %></h1>
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="<%= root_path %>">Dashboard</a>
          </li>
          <li class="breadcrumb-item active">
            <a href="<%= users_path %>">Admins</a>
          </li>
        </ol>
      </div>

      <div class="float-right">
          <div class="dropdown ml-auto mr-4">
           <span class="btn btn-info" title= "About This page">Help</span>
            <div class="dropdown-content">
              <% if @help.present? %>
              <% @help&.help_links.each do |link| %>
              <a type="button" class="" target="_blank" href="<%= link[1] %>" >Help in <%= link[0] %></a>
               <% end %>
              <% end %>
            </div>
          </div>
      </div>

      <ul class="nav nav-pills" role="tablist">
        <li class="nav-item">
          <a class="nav-link tab-label active" data-toggle="tab" href="#search" role="tab">Search</a>
        </li>
        
        <li class="nav-item">
         <a class="nav-link tab-label" data-toggle="tab" href="#import-export" role="tab">Import/Export</a>
        </li>

      </ul>

      <%= search_form_for @q, url: users_path, class: "admin-controls", method: "get" do |f| %>
        <div class="tab-content mb-5">
          <div class="tab-pane active mb-3 card shadow-sm mt-2 border-radius-1" id="search" role="tabpanel">
            <p>
             <div class="row search_form ml-2">
               <div class="col-lg-12 col-sm-12">
                  
                  <div class="col-lg-2 col-sm-2 form-group float-left padding_left_zero">
                    <%= f.search_field :name_or_user_name_or_email_or_father_name_cont, placeholder: "Search in Admins", title: "Name" ,class: "form-control" %>
                  </div>
      
                    <button class="btn btn-primary" name="search_submit" type="submit"><i class="fa fa-search"></i></button>
                   
                    <button class="btn btn-danger" title= "download users pdf" name="pdf" type="submit" value="pdf" formtarget="_blank">Admins &nbsp;<i class="fa fa-file-pdf"></i></button>
                   

                    
                    <button class="btn btn-success" title= "download users csv" name="csv" type="submit" value="csv">Admins &nbsp;<i class="fa fa-file-excel"></i></button>
                    

                     
                     <button class="form-control btn btn-info" type="button" data-toggle="modal" data-target="#exampleModalCenter" style="width:100px"><i class="fa fa-envelope"></i>&nbsp;Mail</button>
                      <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Enter your email to recieve files.</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                            </div>
                            <div class="modal-body">
                              <% @pos_setting = PosSetting.first %>
                              <label>Email:</label>
                              <%= text_field_tag 'email_value',{}, value: current_user.email, class: 'form-control email-fields', type: 'email'%>
                              <br />
                              <label>Subject:</label>
                              <%= text_field_tag 'subject', "#{@pos_setting.display_name} - Admins Detail report from MunshiOnClick", class: 'form-control email-fields'%>
                              <br />
                              <label>Body:</label><br />
                              <%= text_area_tag 'body', nil, class: 'form-control'%>
                              <br />
                              <label>Please select one of them.</label>
                              <div>
                                <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'CSV', required: 'required' %> CSV</label><br />
                                <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'PDF', required: 'required' %> PDF</label><br />
                                <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'Both', required: 'required' %> Both(CSV + PDF)</label><br />
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                              <button name="email" type="submit" value="email" class="btn btn-primary email-send-btn">Send</button>
                            </div>
                            </div>
                        </div>
                      </div>
              </div>
            </div>
          </p>
        </div>
           

           <div class="tab-pane mb-3 card shadow-sm mt-2 border-radius-1" id="import-export" role="tabpanel">
            <p>
              <div class="d-flex">
              <button class="btn btn-success ml-2" name="export_data" type="submit" value="export_data">Export Data</button>
              <button class="btn btn-primary ml-2" type="button" data-toggle="modal" data-target="#importFile">Import Data</button>
              </div>
            </p>
          </div>
      </div>
    <% end %>

  <div class="list_data_table card p-3">
    <table data-toggle="table" data-search="true" class="overflow-hidden border-radius-1">
      <thead>
        <tr>
          <th><input type="checkbox" id="master" class='select-all-checkbox'>
          

              <div class="icon-container float-center">
            <span class="ml-2 mt-2">
            <div class="my-icon my-view">
                        <button class="icon-div btn delete-selected p-2 " type='button' value='User'>
                                  <i class="fa fa-trash mb-2" title="Deleted Selected" aria-hidden="true"></i> 
                        </button>
                    </div>
                    </span>
              </div>

          
          </th>
          <th>ID<div class='float-right'><%= sort_link(@q, :id, "", {}, class: 'sorting-button') %></div></th>
          <th>Role<div class='float-right'><%= sort_link(@q, :roles_mask, "", {}, class: 'sorting-button') %></div></th>
          <th>Name<div class='float-right'><%= sort_link(@q, :name, "", {}, class: 'sorting-button') %></div></th>
          <th>User Name<div class='float-right'><%= sort_link(@q, :user_name, "", {}, class: 'sorting-button') %></div></th>
          <th>System Email<div class='float-right'><%= sort_link(@q, :draw_date, "", {}, class: 'sorting-button') %></div></th>
          <th>Email_on<div class='float-right'><%= sort_link(@q, :draw_date, "", {}, class: 'sorting-button') %></div></th>
          <th>Father Name<div class='float-right'><%= sort_link(@q, :father_name, "", {}, class: 'sorting-button') %></div></th>
          <th>Phone<div class='float-right'><%= sort_link(@q, :phone, "", {}, class: 'sorting-button') %></div></th>
          <th> Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= check_box_tag 'object_ids[]', user.id %></td>
            <td><%= user.id %></td>
            <td class='urdu-font'><%= user&.roles&.first %></td>
            <td class='urdu-font'><%= user.name %></td>
            <td><%= user.user_name %></td>
            <td><%= user.email %></td>
            <td><%= user.email_to %></td>
            <td class='urdu-font'><%= user.father_name %></td>
            <td><%= user.phone %></td>
            <td class="p-3">
              <div class="icon-container-1">
                <div class="my-icon-1 my-view-1">
                  <div class="my-tooltip-1">
                    <div class="icon-container">
		          				
                      	<div class="my-icon my-view">
                      	  <div class="my-tooltip">
                      	    Edit
                      	  </div>
                      	    <%= link_to edit_user_path(user), remote: true, class:"icon-div" do %>
                      	      <i class="fa fa-edit mt-2" aria-hidden="true"></i>
                      	    <%end %>
                      	</div>
		          			
		          				
                      	<div class="my-icon my-view">
                      	  <div class="my-tooltip">
                      	    Delete
                      	  </div>
                      	    <%= link_to user, method: :delete, data: {title: 'Confirmation' ,confirm: 'Are you sure?', commit: 'Sure!'}, :remote => true, :class => 'delete icon-div' do %>
                      	      <i class="fa fa-trash mt-2" aria-hidden="true"></i>
                      	    <%end %>
                      	</div>
		          				
		          				
                      	<div class="my-icon my-view">
                      	  <div class="my-tooltip">
                      	    Show
                      	  </div>
                      	    <%= link_to user_path(user), remote: true, class:"icon-div" do %>
                      	      <i class="fa fa-eye mt-2" aria-hidden="true"></i>
                      	    <%end %>
                      	</div>
		          				
		          				
                      	<div class="my-icon my-view">
                      	  <div class="my-tooltip">
                      	    PDF
                      	  </div>
                      	   <%= link_to users_path('q[id_eq]':user.id,'pdf':true), title: 'Download PDF', target: '_blank', class:"icon-div" do %>
                      	      <i class="fa fa-file-pdf text-danger mt-2 " aria-hidden="true"></i>
                      	    <%end %>  
                      	</div>
		          				 
		          				
                      	<div class="my-icon my-view">
                      	  <div class="my-tooltip">
                      	    CSV
                      	  </div>
                      	   <%= link_to users_path('q[id_eq]':user.id,'csv':true), title: 'Download CSV', class:"icon-div" do%>
                      	      <i class="fa fa-file-excel mt-2 text-success" aria-hidden="true"></i>
                      	    <%end %>
                      	</div>
		          				
                    </div>
                  </div>
                  <span class="icon-div-1">
                        <i class="fa fa-ellipsis-v mt-2" aria-hidden="true"></i>
                  </span>
                </div>
              </div>

            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="row">
      <div class="col-lg-4 col-sm-4">
        <%= page_entries_info @users %>
      </div>
      <div class="col-lg-8 col-sm-8 pagination-left">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>
<div class="show-data"></div>
