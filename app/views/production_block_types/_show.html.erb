<div class="modal fade" id="showdData" tabindex="-1" role="dialog" aria-labelledby="showdDataLabel">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
          <div class="modal-body">
            <!-- Card Header - Accordion -->
            <div class="modal-header">
          <h2 class="modal-title" id="myModalLabel">Production Block Type Details</h2>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

              <!-- Card Content - Collapse -->
              <div class="collapse show" id="collapseCardExample" style="">
                <div class="card-body">
                  <table>
                    <thead>
                      <th><h4>Id</h4></th> 
                      <th><h4>Title</h4></th>
                      <th><h4>Quantity</h4></th>
                      <th><h4>Status</h4></th>
                      <th><h4>Comment</h4></th>

                   </thead>
                    <tbody>
                      <tr>
                        <td><%= @production_block_type.id %></td>
                        <td><%= @production_block_type.title %> </td>
                        <td><%= @production_block_type.quantity %> </td>
                        <td><%= @production_block_type.status %> </td>
                        <td><%= @production_block_type.comment %></td>
                      </tr>
                   </tbody>
                  </table>
                </div>
            </div>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger float-right" data-dismiss="modal" aria-label="Close">
              <span class="text-light p-2">Close</span>
            </button>
          </div>
     </div>
    </div>
    </div>
  </div>
</div>
