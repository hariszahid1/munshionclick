<%= search_form_for @q, url: production_block_types_path, class: "admin-controls", method: "get" do |f| %>
    
  <div class="tab-content">
    <div class="tab-pane active mb-3 card shadow-sm mt-2" style="border-radius: 20px" id="search" role="tabpanel">
     <p>
     <div class="col-lg-10 form-group d-flex">
      <div class="col-lg-2 form-group float-left">
          <%= f.search_field :title_cont, value: @title, placeholder: "Title", title: "Title" ,:class=>"form-control" %>
        </div>
        <div class="col-lg-2 form-group float-left">
          <button class="form-control btn btn-primary" name="search_submit" type="submit" value="Search" style="width:100px"><i class="fa fa-search"></i></button>
        </div>
        </div>
      </p>
    </div>
    <div class="tab-pane card shadow-sm mt-2 border-radius-1" id="create" role="tabpanel">
        <p>
          <% if can?(:add, :all) %>
            <div id="new_production_block_type">

           <%= link_to new_production_block_type_path, remote: true ,class: "btn btn-success ml-3"  do %>
                      <i class="fa fa-plus" aria-hidden="true"></i>
                      New Production Block Type
          <% end %>
            </div>
            <% end %>
        </p>
    </div>
    <div class="tab-pane card shadow-sm mt-2 border-radius-1" id="pdf" role="tabpanel">
      <p>
        <div class="col-lg-2 d-flex">
        <button class="form-control btn btn-danger" title= "download production block type pdf" name="pdf" type="submit" value="pdf" formtarget="_blank">Production Block Type &nbsp;<i class="fa fa-file-pdf"></i></button>
        </div>
      </p>
    </div>
    <div class="tab-pane card shadow-sm mt-2 border-radius-1" id="csv" role="tabpanel">
      <p>
        <div class="col-lg-2 d-flex">
        <button class="btn btn-success" title= "download production block type csv" name="csv" type="submit" value="csv">Production Block Type &nbsp;<i class="fa fa-file-excel"></i></button>
        </div>
      </p>
    </div>
    <div class="tab-pane card shadow-sm mt-2 border-radius-1" id="emails" role="tabpanel">
      <p>
        <div class="col-lg-2 d-flex">
        <button class="form-control btn btn-info" type="button" data-toggle="modal" data-target="#exampleModalCenter" style="width:100px"><i class="fa fa-envelope mr-2"></i>&nbsp;Mail</button>
        </div>
     </p>
      <!-- Modal -->
      <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Enter your email to recieve files.</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
              <% @pos_setting = PosSetting.first %>
              <label>Email:</label>
              <%= text_field_tag 'email_value',{}, value: current_user.email, class: 'form-control email-fields', type: 'email'%>
              <br />
              <label>Subject:</label>
              <%= text_field_tag 'subject', "#{@pos_setting.display_name} - Production Block Type Detail report from MunshiOnClick", class: 'form-control email-fields'%>
              <br />
              <label>Body:</label><br />
              <%= text_area_tag 'body', nil, class: 'form-control'%>
              <br />

              <label>Please select one of them.</label>
              <div>
                <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'CSV', required: 'required' %> CSV</label><br />
                <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'PDF', required: 'required' %> PDF</label><br />
                <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'Both', required: 'required' %> Both(CSV + PDF)</label><br />
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
              <button name="email" type="submit" value="email" class="btn btn-primary email-send-btn">Send</button>
            </div>
            </div>
        </div>
      </div>
    </div>
    <div class="tab-pane card shadow-sm mt-2 border-radius-1" id="import-export" role="tabpanel">
      <p>
        <div class="d-flex">
        <button class="btn btn-success ml-2" name="export_data" type="submit" value="export_data">Export Data</button>
        <button class="btn btn-primary ml-2" type="button" data-toggle="modal" data-target="#importFile">Import Data</button>
        </div>
      </p>
    </div>
    </div>
  <% end %>
