
<div class="hidden" id="account_list">
  <div class="row">
    <div class="col-lg-12 col-sm-12">
      <h1>Logs Details</h1>
    </div>
  </div>
  <div class="clearfix"></div>

  <table data-toggle="table" data-search="true">
    <thead>
      <tr>
        <th>Done By</th>
        <th>Change</th>
        <th>Date</th>
      </tr>
    </thead>

    <tbody>
      <% @logs.each do |log| %>
        <tr>
          <td class="urdu-font"><%=log&.whodunnit %> <%=@users[log&.whodunnit.to_i] %></td>
          <td class="urdu-font">
            <span><%#=log&.changeset[:title].present? ? "TITLE: "+log&.changeset[:title].to_s : log&.reify&.title%></span>
            <span><%=log&.changeset%></span>
          </td>
          <td class="urdu-font">
            <span><%=log&.changeset[:updated_at].present? ? "Date: "+log&.changeset[:updated_at]&.last.to_s : log&.reify&.updated_at%></span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="clearfix"></div>
<div class="clearfix"></div>
<div class="row">
  <div class="col-lg-4 col-sm-4">
    <%= page_entries_info @logs %>
  </div>
  <div class="col-lg-8 col-sm-8 pagination-left">
    <%= paginate @logs %>
  </div>
</div>

<script>
  $(document).ready(function() {
    if ($(".bootstrap-table").length == 0){
      $("table").bootstrapTable();
    }
    $("#account_list").removeClass('hidden');
    FontAwesome.dom.i2svg();
  });
  $(document).ready(function() {
    setTimeout(function(){
      $(".chosen-select").chosen({
  allow_single_deselect: true,
  width: '100%'
});
    }, 50);
  });
</script>
