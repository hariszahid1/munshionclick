<%= bootstrap_form_for(profit_report) do |f| %>
  <% if profit_report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profit_report.errors.count, "error") %> prohibited this expense from being saved:</h2>
      <ul>
      <% profit_report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-lg-6 form-group float-left">
    <%= f.date_select :sale_from %>
  </div>
  <div class="col-lg-6 form-group float-left">
    <%= f.date_select :sale_to %>
  </div>
  <div class="col-lg-6 form-group float-left">
    <%= f.date_select :purchase_from %>
  </div>
  <div class="col-lg-6 form-group float-left">
    <%= f.date_select :purchase_to %>
  </div>
  <div class="col-lg-6 form-group float-left">
    <%= f.date_select :expense_from %>
  </div>
  <div class="col-lg-6 form-group float-left">
    <%= f.date_select :expense_to %>
  </div>
  <div class="col-lg-6 form-group float-left">
    <%= f.date_select :investment_from %>
  </div>
  <div class="col-lg-6 form-group float-left">
    <%= f.date_select :investment_to %>
  </div>
  <div class="col-lg-6 form-group float-left">
      <%= f.date_select :loan_from %>
  </div>
  <div class="col-lg-6 form-group float-left">
      <%= f.date_select :loan_to %>
  </div>
  <% if params[:action].eql?('edit') %>
    <div class="col-lg-3 form-group float-left">
      <%= f.number_field :total_sale %>
    </div>
    <div class="col-lg-3 form-group float-left">
      <%= f.number_field :total_purchase %>
    </div>
    <div class="col-lg-3 form-group float-left">
      <%= f.number_field :total_expense %>
    </div>
    <div class="col-lg-3 form-group float-left">
      <%= f.number_field :miscellaneous_amount %>
    </div>
    <div class="col-lg-3 form-group float-left">
      <%= f.number_field :total_loan_credit %>
    </div>
    <div class="col-lg-3 form-group float-left">
      <%= f.number_field :total_loan_debit %>
    </div>
    <div class="col-lg-3 form-group float-left">
      <%= f.number_field :total_investment_credit %>
    </div>
    <div class="col-lg-3 form-group float-left">
      <%= f.number_field :total_investment_debit %>
    </div>
  <% end %>
  <div class="clearfix">
  <hr>

  <div class="col-lg-12 row ">
    <div class="col-lg-6 form-group float-left">
      <%= link_to profit_reports_path do %>
        <i class="fa fa-arrow-left " aria-hidden="true"></i>
      <% end %>
    </div>

    <div class="col-lg-6 form-group float-left">
      <div class="col-lg-6 form-group float-left">
        <%=f.object.id.nil? ? (f.submit class: "btn btn-success", style: "float: left")  :  (f.submit class: "btn btn-warning", style: "float: left")%>
      </div>
    </div>
  </div>
<% end %>
