<%= bootstrap_form_for(pdf_template_element) do |f| %>
  <% if pdf_template_element.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pdf_template_element.errors.count, "error") %> prohibited this pdf_template_element from being saved:</h2>
      <ul>
        <% pdf_template_element.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-lg-12 row">
    <div class="col-lg-6 form-group">
      <%= f.text_field :title, required: true, placeholder: "Enter Title" %>
    </div>

    <div class="col-lg-6 form-group">
      <%= f.select :pdf_template_id, options_for_select(PdfTemplate.all.map{ |p| [p.title , p.id]}, f.object.pdf_template_id),{include_blank: "Select Template"}, class: "form-control chosen-select" %>
    </div>

    <div class="col-lg-12 form-group">
      <%= f.text_area :content, placeholder: "Enter Content", rows: 12 %>
    </div>

    <div class="col-lg-12 form-group">
      <%= f.text_area :comment, placeholder: "Enter Comment" %>
    </div>
  </div>
  <%=f.object.id.nil? ? (f.submit class: "btn btn-success mr-4", style: "float: right")  :  (f.submit class: "btn btn-warning mr-4", style: "float: right")%>
<% end %>
