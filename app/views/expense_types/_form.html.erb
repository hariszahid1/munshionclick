<%= bootstrap_form_for(expense_type) do |f| %>
      <% if expense_type.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(expense_type.errors.count, "error") %> prohibited this expense_type from being saved:</h2>
    
          <ul>
          <% expense_type.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="col-lg-12 form-group float-left">
          <%= f.label :title do %>
            <%= ExpenseType.human_attribute_name :title %>
            <i class="fas fa-language"></i> 
          <% end %>
          <%= f.text_field :title,required:true, placeholder:"Enter Title", hide_label: true ,class: 'urdu-font'%>
      </div>
    
      <div class="col-lg-12 form-group float-left">
        <%= f.text_area :comment , placeholder:"Enter Comment"%> 
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        <%=f.object.id.nil? ? (f.submit class: "btn btn-success mr-4", style: "float: right")  :  (f.submit class: "btn btn-warning mr-4", style: "float: right")%>
      </div>

    <% end %>
  </div>
