$( document ).ready(function() {

  const ctx = document.getElementById('myChart');
  var agentName=$('#agentName').val().split(' ')
  var agentCount=$('#agentCount').val().split(' ')
  Chart.defaults.font.size = 16;
  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: agentName,
      datasets: [{
        label: 'Created Clients',
        data: agentCount,
        borderWidth: 1,
        backgroundColor: ['red','blue'],
      }],
    },
    options: {
      
      maintainAspectRatio: false,
      plugins: {
            title: {
                display: true,
                text: 'Total Users by Agents Bar Chart',
                font: {
                  size: 16
                }
            }
          

        }
      
    }
  });
  
});

