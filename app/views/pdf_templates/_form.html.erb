<%= bootstrap_form_for(pdf_template) do |f| %>
  <% if pdf_template.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pdf_template.errors.count, "error") %> prohibited this pdf_template from being saved:</h2>
      <ul>
        <% pdf_template.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-lg-12 row">
    <div class="col-lg-6 form-group">
      <%= f.text_field :title, required:true, placeholder: "Enter Title" %>
    </div>

    <div class="col-lg-6 form-group">
      <%= f.text_field :table_name, required: true, placeholder: "Enter Table Name" %>
    </div>

    <div class="col-lg-6 form-group">
      <%= f.text_field :method_name, required: true, placeholder: "Enter Table Name" %>
    </div>

    <div class="col-lg-12 form-group">
      <%= f.text_area :content, placeholder: "Enter Content", rows: 12 %>
    </div>

    <div class="col-lg-12 form-group">
      <%= f.text_area :comment, placeholder: "Enter Comment" %>
    </div>
    <div class="custom-file col-lg-6 form-group">
      <%= f.file_field :logo, accept: 'image/*', class: "cursor-pointer" %>
    </div>
  </div>
  <%=f.object.id.nil? ? (f.submit class: "btn btn-success mr-4", style: "float: right")  :  (f.submit class: "btn btn-warning mr-4", style: "float: right")%>
<% end %>
