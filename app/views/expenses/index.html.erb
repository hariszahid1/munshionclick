        <li class="nav-item">
          <a class="nav-link tab-label" data-toggle="tab" href="#import-export" role="tab"><i class="fa fa-exchange-alt mr-2"></i>Import/Export</a>
        </li>
      <%end%>
    </ul>
  </div>
  <%= link_to '', analytics_expenses_path, id: 'analytics-path', class: 'd-none', remote: true %>     
