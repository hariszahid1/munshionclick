var theType = $('#theType').val().split(' ')
var rails_type  = '<%=@the_type_join%>'

const data = {  
  labels: rails_label.split('&amp;'),
  datasets: [
    {
      label: 'Total Expense',
      data: ExpenseType,      
      yAxisID: 'y',

    }
  ]
};


// config

  const config = {
  type: 'pie',
  data: data,
  options: {
    
    stacked: false,
    plugins: {
            title: {
                display: true,
                text: 'Pie Chart by Expense Date',
                font: {
                  size: 20
                },
            }
          

        },
    
  },
};

// chart render
const myChart = new Chart(
      document.getElementById('myChart'),
      config
    );

})

