<tr class="nested-fields">
  <td>
    <%= f.hidden_field :expense_id %>
    <%= f.hidden_field :id %>
    <%=f.number_field :amount,step: :any,class:'expense', required: true, hide_label: true,placeholder: :Amount,onchange:"expenseUpdate()",onkeyup:"expenseUpdate()"%>
  </td>
  <td><%= f.select :expense_type_id, options_from_collection_for_select(@expense_types, 'id', 'title', f.object.expense_type_id), {prompt: "Select the Expense Type", hide_label: true},class: "form-control chosen-select", required: true %></td>
  <td><%= f.select :account_id , options_from_collection_for_select(@accounts, 'id', 'title', f.object.account_id), {prompt: "Select the Account", hide_label: true},class: "form-control chosen-select", required: true%></td>
  <td><%= f.text_area :comment , hide_label: true%></td>

  <td class="links"><%= link_to_remove_association "Remove", f , class: "btn btn-info" %></td>
  <script>
    $(document).ready(function() {
      setTimeout(function(){
        $(".chosen-select").chosen({
  allow_single_deselect: true,
  width: '100%'
});
      }, 50);
      expenseUpdate();
    });
  </script>
</tr>
