<%= bootstrap_form_for(expense) do |f| %>
  <% if expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>
      <ul>
      <% expense.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <thead>
      <th><%= f.label :comment do %>
        <%= Expense.human_attribute_name :comment %>
        <i class="fas fa-language"></i>
        <% end %></th>
      <th>Total Expence</th>
      <th>Created At</th>
    </thead>
    <tbody>
      <tr>
        <td><%= f.text_area :comment, placeholder:"Enter Comment" , hide_label: true ,class: 'urdu-font' %></td>
        <td> <%= f.hidden_field :expense%><h1 class="expense_total_bill">0.00</h1></td>
        <td> <%= f.date_select :created_at,{}, hide_label: true,class: "form-control" %> </td>
      </tr>
      <tr>
    </tbody>
  </table>
  <%= f.fields_for :expense_entries do |expense_entry| %>
    <%= render 'expenses_fields_new', f: expense_entry %>
  <% end %>
  <div id="new_links">
    <div class="links">
      <%= link_to_add_association 'Add More', f, :expense_entries, partial: 'expenses_fields_new', class: "btn btn-info" %>
    </div>
  </div>
  <br>
  <div class="clearfix"></div>
  <hr>
  <div class="col-lg-12 row ">
    <div class="col-lg-6 form-group float-left">
      <%= link_to expenses_path do %>
      <i class="fa fa-arrow-left " aria-hidden="true"></i>
      <% end %>
    </div>
    <div class="col-lg-6 form-group float-left">
      <div class="form-group float-right">
        <%=f.object.id.nil? ? (f.submit class: "btn btn-success", style: "float: left")  :  (f.submit class: "btn btn-warning", style: "float: left")%>
      </div>
    </div>
  </div>
<% end %>

<%= javascript_include_tag 'hover', 'data-turbolinks-track': 'reload' %>
