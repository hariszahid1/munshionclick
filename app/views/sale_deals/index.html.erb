      <li class="breadcrumb-item">
        <a href="<%= root_path %>">Dashboard</a>
      </li>
      <li class="breadcrumb-item active">
        <a href="<%= sale_deals_path %>">Sale Deals</a>
      </li>
    </ol>
  </div>
  <div id="new_sale_deal">
    <% if params['q'].try(:[], 'transaction_type_eq') == '8' %>
