<div class="row-lg-12 m-4">
  <div class="float-left">
    <h2 class="ml-2 logo-back"><i class="fas fa-tag mr-2"></i>
      <%= params['q'].try(:[], 'transaction_type_eq') == '8' ? 'Re Sale Deal' : 'Fresh Sale Deal' %>
    </h2>
