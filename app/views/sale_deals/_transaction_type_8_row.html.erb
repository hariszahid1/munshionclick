<div class="row mb-4 ml-1 mr-1">
  <div class="col-lg-12">
    <div class="row">      
      <div class="col-xl-4 col-sm-6 mb-2">
        <%= link_to sale_deals_path('q[purchase_sale_items_size_7_eq]': 'Token Payment') do %> 
          <div class="card shadow">
            <div class="card-content">
              <div class="card-body">
                <div class="media d-flex">
                  <div class="align-self-center">
                    <i class="fa fa-coins fa-3x logo-back float-left"></i>
                  </div>
                  <div class="media-body text-right">
                    <h3><%= @payment_status_count['Token Payment'] || 0 %></h3>
                    <span>Token Payments</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>  
      </div>
      <div class="col-xl-4 col-sm-6 mb-2">
        <%= link_to sale_deals_path('q[purchase_sale_items_size_7_eq]': 'Advance Payment') do %>
          <div class="card shadow">
            <div class="card-content">
              <div class="card-body">
                <div class="media d-flex">
                  <div class="align-self-center">
                    <i class="fa fa-money-check-alt logo-back fa-3x float-left"></i>
                  </div>
                  <div class="media-body text-right">
                    <h3><%=  @payment_status_count['Advance Payment'] || 0 %></h3>
                    <span>Advance Payments</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>  
      </div>
      <div class="col-xl-4 col-sm-6 mb-2">
        <%= link_to sale_deals_path('q[purchase_sale_items_size_7_eq]': 'Full Payment') do %>
          <div class="card shadow">
            <div class="card-content">
              <div class="card-body">
                <div class="media d-flex">
                  <div class="align-self-center">
                    <i class="fa fa-money-bill-alt logo-back fa-3x float-left"></i>
                  </div>
                  <div class="media-body text-right">
                    <h3><%= @payment_status_count['Full Payment'] || 0 %></h3>
                    <span>Full Payments</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>  
      </div>
      <div class="col-xl-4 col-sm-6">
        <%= link_to sale_deals_path('q[purchase_sale_items_size_4_eq]': 'Transfer') do %>
          <div class="card shadow">
            <div class="card-content">
              <div class="card-body">
                <div class="media d-flex">
                  <div class="align-self-center">
                    <i class="fa fa-exchange-alt logo-back fa-3x float-left"></i>
                  </div>
                  <div class="media-body text-right">
                    <h3><%= @deal_count['Transfer'] || 0 %></h3>
                    <span>Transfer</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>  
      </div>
      <div class="col-xl-4 col-sm-6">
        <%= link_to sale_deals_path('q[purchase_sale_items_size_4_eq]': 'Seller Free') do %>
          <div class="card shadow">
            <div class="card-content">
              <div class="card-body">
                <div class="media d-flex">
                  <div class="align-self-center">
                    <i class="fa fa-receipt logo-back fa-3x float-left"></i>
                  </div>
                  <div class="media-body text-right">
                    <h3><%= @deal_count['Seller Free'] || 0 %></h3>
                    <span>Seller Free</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>  
      </div>
    </div>  
  </div>    
</div>