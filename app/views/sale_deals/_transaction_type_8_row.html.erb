<div class="row mb-4 ml-1 mr-1">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-xl-4 col-sm-6">
        <%= link_to sale_deals_path(q: {transaction_type_eq: 8},'q[payment_method_in]': [2]) do %>
          <div class="card shadow">
            <div class="card-content">
              <div class="card-body">
                <div class="media d-flex">
                  <div class="align-self-center">
                    <div class="circle-icon">
                      <i class="fa fa-receipt fa-2x circle-margin no_stamp_card"></i>
                    </div>                  
                  </div>
                  <div class="media-body text-right">
                    <h2><%= @no_stamps_count %></h2>
                    <span>SELLER FREE</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="col-xl-4 col-sm-6">
        <%= link_to sale_deals_path(q: {transaction_type_eq: 8}, 'q[payment_method_in]': [0, 3]) do %>
          <div class="card shadow">
            <div class="card-content">
              <div class="card-body">
                <div class="media d-flex">
                  <div class="align-self-center">
                    <div class="circle-icon">
                      <i class="fa fa-user-tie fa-2x circle-margin seller_stamp_card"></i>
                    </div>                   
                  </div>
                  <div class="media-body text-right">
                    <h2><%= @seller_stamps_count.to_i + @both_count.to_i %></h2>
                    <span>SELLER STAMP</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="col-xl-4 col-sm-6">
        <%= link_to sale_deals_path(q: {transaction_type_eq: 8}, 'q[payment_method_in]': [1, 3]) do %>
          <div class="card shadow">
            <div class="card-content">
              <div class="card-body">
                <div class="media d-flex">
                  <div class="align-self-center">
                    <div class="circle-icon">
                      <i class="fa fa-user fa-2x circle-margin buyer_stamp_card"></i>
                    </div>                  
                  </div>
                  <div class="media-body text-right">
                    <h2><%= @buyer_stamps_count.to_i + @both_count.to_i %></h2>
                    <span>BUYER STAMP</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>  
      </div>

    </div>
  </div>
</div>