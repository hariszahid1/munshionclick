<h1>Salaries Book by <%=@departments&.fourth&.title%></h1>

<div class="col-lg-12 col-sm-12">
  <div class="col-lg-2 form-group float-left">
    <%= link_to pather_salary_details_path, class: "btn btn-primary" do %>
      <i class="fa fa-male" aria-hidden="true"></i>
      <%=@departments&.first&.title%> Book
    <% end %>
  </div>
  <div class="col-lg-2 form-group float-left">
    <%= link_to khakar_salary_details_path, class: "btn btn-primary" do %>
      <i class="fa fa-truck" aria-hidden="true"></i>
      <%=@departments&.second&.title%> Book
    <% end %>
  </div>
  <div class="col-lg-2 form-group float-left">
    <%= link_to nakasi_salary_details_path, class: "btn btn-primary" do %>
      <i class="fa fa-align-justify" aria-hidden="true"></i>
      <%=@departments&.third&.title%> Book
    <% end %>
  </div>
</div>
<div class="clearfix"></div>
<div class="row">
  <%= search_form_for @q, url: vehicle_salary_details_path, class: "admin-controls", method: "get" do |f| %>
    <div class="col-lg-12 col-sm-12">
      <div class="col-lg-3 form-group float-left">
        <%= f.select :id_eq, options_from_collection_for_select(@salary_searchs, "id", ->(st){"#{st.name} \u{27F6} #{st.father} \u{27F6} #{st.code}"},@id),{:include_blank => "Select Staff"},:class=>"form-control chosen-select" %>
      </div>
      <div class="col-lg-2 form-group float-left">
        <%= f.search_field :salary_details_created_at_gteq, class: 'form-control input-sm datepicker', value: @created_at_gteq,'datepicker' => true,placeholder: "YYYY-MM-DD" %>
      </div>
      <div class="col-lg-2 form-group float-left">
        <%= f.search_field :salary_details_created_at_lteq, class: 'form-control input-sm datepicker', value: @created_at_lteq,'datepicker' => true ,placeholder: "YYYY-MM-DD"%>
      </div>
      <div class="col-lg-2 form-group float-left">
        <button class="form-control btn btn-primary" name="search_submit" type="submit" value="Search" style="width:100px"><i class="fa fa-search"></i></button>
      </div>
    </div>
    <div class="col-lg-12 col-sm-12 float-left">
      <div class="col-lg-2 form-group float-left">
        <button class="form-control btn btn-secondary" name="submit_pdf" type="submit" value="Full PDF" formtarget="_blank"><i class="fa fa-file-pdf"></i> Full PDF</button>
      </div>
      <div class="col-lg-2 form-group float-left">
        <button class="form-control btn btn-secondary" name="submit_pdf_staff_with" type="submit" value="PDF With Price" formtarget="_blank"><i class="fa fa-file-pdf"></i> With Price</button>
      </div>
      <div class="col-lg-2 form-group float-left">
        <button class="form-control btn btn-secondary" name="submit_pdf_staff_without" type="submit" value="PDF Without Price" formtarget="_blank"><i class="fa fa-print"></i> Without Price</button>
      </div>
      <div class="col-lg-2 form-group float-left">
        <button class="form-control btn btn-info" name="email" type="submit" value="Email"><i class="fas fa-envelope"></i> email</button>
      </div>
    </div>
  <% end %>
  </div>
<table data-toggle="table" data-search="true">
  <thead>
    <tr>
      <th><%= sort_link(@q, :code, 'code') %></th>
      <th><%= sort_link(@q, :name, 'Staff') %></th>
      <th><%= sort_link(@q, :salary_details_wage_rate, 'Credit Rate') %></th>
      <th><%= sort_link(@q, :salary_details_khakar_credit, 'Credit/Jama') %></th>
      <th><%= sort_link(@q, :salary_details_total_balance, 'Balance') %></th>
      <th><%= sort_link(@q, :salary_details_comment, 'Comment') %></th>
      <th><%= sort_link(@q, :salary_details_created_at, 'Date') %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @salary_details.each do |staff| %>
      <%@wage_debit=0%>
      <%@wage_credit=0%>
      <% staff.salary_details.each do |salary_detail| %>
        <tr>
          <td><%= salary_detail.staff.code %></td>
          <td><%= salary_detail.staff_full_name %></td>
          <td><<%= salary_detail.wage_rate.to_f.round(2) %>> <%= salary_detail.amount.to_f.round(2) %></td>
          <td><%= @wage_credit+=salary_detail.amount.to_f.round(2) %></td>
          <td><%= salary_detail.total_balance.to_f.round(2) %></td>
          <td><%= salary_detail.comment %></td>
          <td><%= salary_detail.created_at.strftime("%A,  %d-%b-%y") if salary_detail.created_at%></td>
          <td>

            <% if can?(:update, :all) %>
            <%= link_to edit_salary_detail_path(salary_detail) do %>
            <i class="fas fa-edit" aria-hidden="true"></i> |
            <%end%>
            <%end%>
            <% if can?(:destory, :all) %>
          <%= link_to  salary_detail, method: :delete, data: {title: 'Confirmation' ,confirm: 'Are you sure?', commit: 'Sure!'} do%>
          <i class="fas fa-trash" aria-hidden="true"></i> |

          <%end%>
          <%end%>
          <%= link_to salary_detail do %>
          <i class="fas fa-eye" aria-hidden="true"></i>
          <%end%>

        </td>
        </tr>
      <%end%>
    <% end %>
    <tr>
      <td><h5>Total</h5></td>
      <td></td>
      <td></td>
      <td><h5><%= @credit_total %></h5></td>
      <td><h5></h5></td>
      <td><h5></h5></td>
      <td><h5></h5></td>
    </tr>

  </tbody>
</table>

<div class="clearfix"></div>
<div class="row">
  <div class="col-lg-4 col-sm-4">
    <%= page_entries_info @salary_details %>
  </div>
  <div class="col-lg-8 col-sm-8 pagination-left">
    <%= paginate @salary_details %>
  </div>
</div>

