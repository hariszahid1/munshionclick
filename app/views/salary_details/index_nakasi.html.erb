<h1>Salaries Book by Nakasi</h1>

<div class="row ml-2 my-4">
  
    <%= link_to pather_salary_details_path, class: "btn btn-info mr-2" do %>
      <i class="fa fa-male" aria-hidden="true"></i>
      Pather Book
    <% end %>
  
  
    <%= link_to khakar_salary_details_path, class: "btn btn-success mr-2" do %>
      <i class="fa fa-truck" aria-hidden="true"></i>
      Khakar Book
    <% end %>


    <%= link_to vehicle_salary_details_path, class: "btn btn-warning mr-2" do %>
      <i class="fa fa-truck" aria-hidden="true"></i>
      Vehicle Book
    <% end %>

</div>
  <ul class="nav nav-pills" role="tablist">    
      <li class="nav-item">
        <a class="nav-link tab-label active ml-2 " data-toggle="tab" href="#search" role="tab">Search</a>
      </li>			
	</ul>

<div class="clearfix"></div>
<div class="row card border-radius-1 shadow m-2 p-3">
  <%= search_form_for @q, url: nakasi_salary_details_path, class: "admin-controls", method: "get" do |f| %>
    <div class="row d-flex p-2">
      <div style="width:200px;" class="mr-2">
        <%= f.select :id_in, options_from_collection_for_select(@salary_searchs, "id", ->(st){"#{st.name} \u{27F6} #{st.father} \u{27F6} #{st.code}"},f.object.id_in),{:include_blank => "Select Nakasi"},{:multiple => true,:class=>"form-control chosen-select", :data => {:placeholder => "Select the Nakasi"}}%>
      </div>
      <div style="width:180px;" class="mr-2">
        <%= f.search_field :salary_details_created_at_gteq, class: 'form-control input-sm datepicker',value: @created_at_gteq, 'datepicker' => true,placeholder: "YYYY-MM-DD" %>
      </div>
      <div style="width:180px;" class="mr-2">
        <%= f.search_field :salary_details_created_at_lteq, class: 'form-control input-sm datepicker',value: @created_at_lteq, 'datepicker' => true ,placeholder: "YYYY-MM-DD"%>
      </div>
      <div class="">
        <button class="form-control btn btn-primary" name="search_submit" type="submit" value="Search" style="width:100px"><i class="fa fa-search"></i></button>
      </div>
      <div class="dropdown my-dropdown mr-2 ml-auto">
               <button type="button" class="form-control bg-danger text-light"><i class="fa fa-file-pdf mr-2"></i>PDF List</button>
            <div style="width:160px;" class="dropdown-content my-dropdown-content p-1">
              <button class="form-control btn-danger my-2" name="submit_pdf" type="submit" value="Full PDF" formtarget="_blank"><i class="fa fa-file-pdf"></i> Full PDF</button>
              <button class="form-control btn-danger my-2" name="submit_pdf_staff_with" type="submit" value="PDF With Price" formtarget="_blank"><i class="fa fa-file-pdf"></i> With Price</button>
              <button class="form-control btn-danger my-2" name="submit_pdf_staff_without" type="submit" value="PDF Without Price" formtarget="_blank"><i class="fa fa-file-pdf"></i> Without Price</button>
              <button class="form-control btn-danger my-2" name="submit_pdf_staff_list" type="submit" value="Daily PDF" formtarget="_blank"><i class="fa fa-file-pdf"></i> Daily PDF</button>
              <button class="form-control btn-danger my-2" name="submit_pdf_work" type="submit" value="Daily PDF" formtarget="_blank"><i class="fa fa-file-pdf"></i> Full Work</button>
            </div>
          </div>
          <button style="width:100px;" class="form-control btn btn-info" name="email" type="submit" value="Email"><i class="fas fa-envelope"></i> Email</button>
     </div>
   <% end %>
 </div>
 <div class="card border-radius-1 shadow p-2 mx-2 my-4">
<table data-toggle="table" data-search="true">
  <thead>
    <tr>
      <th><%= sort_link(@q, :code, 'code') %></th>
      <th><%= sort_link(@q, :name, 'Staff') %></th>
      <th><%= sort_link(@q, :salary_details_quantity, 'quantity') %></th>
      <th><%= sort_link(@q, :salary_details_raw_wage_rate, 'Debit Rate') %></th>
      <th><%= sort_link(@q, :salary_details_wage_rate, 'Credit Rate') %></th>
      <th><%= sort_link(@q, :salary_details_khakar_debit, 'Debit/Benam') %></th>
      <th><%= sort_link(@q, :salary_details_khakar_credit, 'Credit/Jama') %></th>
      <th><%= sort_link(@q, :salary_details_total_balance, 'Balance') %></th>
      <th><%= sort_link(@q, :salary_details_created_at, 'Date') %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @salary_details.each do |staff| %>
      <%@wage_debit=0%>
      <%@wage_credit=0%>
      <% staff.salary_details.each do |salary_detail| %>
        <tr>
          <td><%= salary_detail.staff.code %></td>
          <td><%= salary_detail.staff_full_name %></td>
          <td><%= salary_detail.quantity.to_f.round(0) %></td>
          <td><<%= salary_detail.raw_wage_rate.to_f.round(3) %>> <%= salary_detail.wage_debit.to_f.round(2) %></td>
          <td><<%= salary_detail.wage_rate.to_f.round(3) %>> <%= salary_detail.amount.to_f.round(2) %></td>
          <td><%= @wage_debit+=salary_detail.wage_debit.to_f.round(0) %></td>
          <td><%= @wage_credit+=salary_detail.amount.to_f.round(2) %></td>
          <td><%= @wage_credit+=salary_detail.total_balance.to_f.round(2) %></td>
          <td><%= salary_detail.created_at.strftime("%A,  %d-%b-%y") if salary_detail.created_at%></td>
          <td>
            <% if can?(:update, :all) %>
            <%= link_to edit_salary_detail_path(salary_detail) do %>
                       <i class="fa fa-edit" aria-hidden="true"></i> |
            <% end %>
            <% end %>
            <% if can?(:delete, :all) %>
             <%= link_to salary_detail, method: :delete, data: {title: 'Confirmation' ,confirm: 'Are you sure?', commit: 'Sure!'}, :remote => true, :class => 'delete' do %>
                        <i class="fa fa-trash" aria-hidden="true"></i> |
              <% end %>
              <% end %>
              <%= link_to salary_detail do %>
                         <i class="fa fa-eye" aria-hidden="true"></i>
             <% end %>
           </td>
        </tr>
      <%end%>
    <% end %>
    <tr>
      <td><h5>Total</h5></td>
      <td></td>
      <td><h5><%= @quantity %></h5></td>
      <td><h5><%= @debit_total %></h5></td>
      <td><h5><%= @credit_total %></h5></td>
      <td><h5></h5></td>
      <td><h5></h5></td>
      <td><h5></h5></td>
      <td><h5></h5></td>
    </tr>
  </tbody>
</table>
</div>

<div class="clearfix"></div>
<div class="row">
  <div class="col-lg-4 col-sm-4">
    <%= page_entries_info @salary_details %>
  </div>
  <div class="col-lg-8 col-sm-8 pagination-left">
    <%= paginate @salary_details %>
  </div>
</div>
<script>
  $(document).ready(function() {
    if ($(".bootstrap-table").length == 0){
      $("table").bootstrapTable();
    }
  });
</script>
