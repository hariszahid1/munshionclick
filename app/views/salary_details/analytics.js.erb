$( document ).ready(function() {

  const ctx = document.getElementById('myChart');
  var staffNames=$('#staffNames').val().split(' ')
  var salaries_amount=$('#salaries_amount').val().split(' ')
  Chart.defaults.font.size = 16;
  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: staffNames,
      datasets: [{
        label: 'Total Amount',
        data: salaries_amount,
        borderWidth: 1,
        backgroundColor: 'red'
      }],
    },
    options: {
      maintainAspectRatio: false,
      plugins: {
            title: {
                display: true,
                text: 'Total Amount Chart Staffs Wise',
                font: {
                  size: 16
                }
            }
        }
    }
  });
});

