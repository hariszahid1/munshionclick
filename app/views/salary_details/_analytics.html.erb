<%= hidden_field_tag "staffNames", @salaries.keys, { id: "staffNames" } %>
<%= hidden_field_tag "salaries_amount", @salaries.values, { id: "salaries_amount" } %>
<%= hidden_field_tag "department_names", @with_department.keys, { id: "department_names" } %>
<%= hidden_field_tag "department_amount_total", @with_department.values, { id: "department_amount_total" } %>
<%= hidden_field_tag "salaries_date", @salaries_date.keys, { id: "salaries_date" } %>
<%= hidden_field_tag "salaries_date_amount", @salaries_date.values, { id: "salaries_date_amount" } %>

<%= search_form_for @q, url: analytics_salary_details_path, class: "admin-controls col-12 row", remote: true, method: "get" do |f| %>
  <%= link_to 'Weekly', analytics_salary_details_path(type: 'weekly'), class: 'btn btn-danger ml-2', remote: true %>
  <%= link_to 'Monthly', analytics_salary_details_path(type: 'monthly'), class: 'btn btn-success ml-2', remote: true %>
  <%= link_to 'Yearly', analytics_salary_details_path(type: 'yearly'), class: 'btn btn-warning ml-2', remote: true %>

  <div class="col-lg-2 ml-5">
    <%= f.search_field :created_at_gteq, class: 'form-control input-sm datepicker', datepicker: true, placeholder: "YYYY-MM-DD" %>
  </div>

  <div class="col-lg-2">
    <%= f.search_field :created_at_lteq, class: 'form-control button-sm datepicker', datepicker: true , placeholder: "YYYY-MM-DD" %>
  </div>
  <button class="btn btn-primary" name="search_submit" type="submit" value="Search"><i class="fa fa-search"></i></button>
<% end %>

