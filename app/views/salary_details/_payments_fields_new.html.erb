<div class="nested-fields">
<%= f.hidden_field :id %>
<div class="row font-weight-bold">
  <%if f.object.account_id.present?%>
    <div class="col-lg-8 form-group float-left"><%= f.select :account_id, options_from_collection_for_select(@accounts, 'id', ->(st){"#{st.title} \u{27F6} #{st.amount}"},f.object.account_id), {hide_label: true,prompt: "Select the Account"},onchange: 'set_sale(this.value,this.id); return false;',class: " product",required: true%></div>
  <%else%>
    <div class="col-lg-8 form-group float-left"><%= f.select :account_id, options_from_collection_for_select(@accounts, 'id', ->(st){"#{st.title} \u{27F6} #{st.amount}"},f.object.account_id), {hide_label: true,prompt: "Select the Account"},onchange: 'set_sale(this.value,this.id); return false;',class: " product"%></div>
  <%end%>
  <div class="col-lg-2 form-group float-left"><%= f.number_field :credit,step: :any,class:'quantity-price', hide_label: true,placeholder: :credit,readonly:true%></div>
  <div class="col-lg-2 form-group float-left"><%= f.number_field :debit,step: :any,class:'cost-price',hide_label: true, placeholder: :debit,readonly:true%></div>
  <div class="col-lg-12 form-group float-left"><%= f.text_area :comment,value: (f.object.comment=="Return From Staff" ? "Return From Staff" : f.object.comment)%></div>
</div>
</div>
<script>
  $(document).ready(function() {
    FontAwesome.dom.i2svg();
    setTimeout(function(){
      $(".chosen-select").chosen({
  allow_single_deselect: true,
  width: '100%'
});
    }, 60);
  });
</script>
