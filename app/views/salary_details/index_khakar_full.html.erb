<h1>Salaries Book by Khakar</h1>

<div class="row col-lg-9 form-group float-left">
  <div class="col-lg-3">
    <%= link_to pather_salary_details_path, class: "btn btn-primary" do %>
      <i class="fa fa-male" aria-hidden="true"></i>
      Pather Book
    <% end %>
  </div>
  <div class="col-lg-3">
    <%= link_to nakasi_salary_details_path, class: "btn btn-primary" do %>
      <i class="fa fa-align-justify" aria-hidden="true"></i>
      Nakasi Book
    <% end %>
  </div>
  <div class="col-lg-3 form-group float-left">
    <%= link_to vehicle_salary_details_path, class: "btn btn-primary" do %>
      <i class="fa fa-truck" aria-hidden="true"></i>
      Vehicle Book
    <% end %>
  </div>
</div>
<div class="clearfix"></div>
<div class="row">
  <%= search_form_for @q, url: khakar_full_salary_details_path, class: "admin-controls", method: "get" do |f| %>
  <div class="col-lg-12 col-sm-12">
      <div class="col-lg-3 form-group float-left">
        <%= f.select :staff_id_eq, options_from_collection_for_select(@salary_searchs, "id", ->(st){"#{st.name} \u{27F6} #{st.father} \u{27F6} #{st.code}"},@name),{:include_blank => "Select Name"},:class=>"form-control chosen-select" %>
      </div>
      <div class="col-lg-3 form-group float-left">
        <%= f.search_field :created_at_gteq, class: 'form-control input-sm datepicker', value: @created_at_gteq,'datepicker' => true,placeholder: "YYYY-MM-DD" %>
      </div>
      <div class="col-lg-3 form-group float-left">
        <%= f.search_field :created_at_lteq, class: 'form-control input-sm datepicker',value: @created_at_lteq, 'datepicker' => true ,placeholder: "YYYY-MM-DD"%>
      </div>
      <div class="col-lg-2 form-group float-left">
        <button class="form-control btn btn-primary" name="search_submit" type="submit" value="Search" style="width:100px"><i class="fa fa-search"></i></button>
      </div>
      </div>
    <div class="col-lg-12 col-sm-12 float-left float-left">
      <div class="col-lg-3 form-group float-left">
        <button class="form-control btn btn-secondary" name="submit_pdf" type="submit" value="Full PDF A4" formtarget="_blank"><i class="fa fa-file-pdf"></i> Full</button>
      </div>
      <div class="col-lg-3 form-group float-left">
        <button class="form-control btn btn-secondary" name="submit_pdf_staff_with" type="submit" value="With Price PDF A4" formtarget="_blank"><i class="fa fa-file-pdf"></i> With Price</button>
      </div>
      <div class="col-lg-3 form-group float-left">
        <button class="form-control btn btn-secondary" name="submit_pdf_staff_without" type="submit" value="Without Price PDF A8" formtarget="_blank"><i class="fa fa-print"></i> Without Price</button>
      </div>
      <div class="col-lg-3 form-group float-left">
        <button class="form-control btn btn-secondary" name="submit_pdf_staff_rate" type="submit" value="Without Price PDF A8" formtarget="_blank"><i class="fa fa-file-pdf"></i> Daily</button>
      </div>
    </div>
    <% end %>
  </div>


<table data-toggle="table" data-search="true">
  <thead>
    <tr>
      <th><%= sort_link(@q, :code, 'code') %></th>
      <th><%= sort_link(@q, :name, 'Staff') %></th>
      <th><%= sort_link(@q, :name, 'Raw-P') %></th>
      <th><%= sort_link(@q, :salary_details_khakar_quantity, 'quantity') %></th>
      <th><%= sort_link(@q, :salary_details_khakar_wast, 'wast') %></th>
      <th><%= sort_link(@q, :salary_details_extra, 'After Kat') %></th>
      <th><%= sort_link(@q, :salary_details_raw_wage_rate, 'Debit Rate') %></th>
      <th><%= sort_link(@q, :salary_details_wage_rate, 'Credit Rate') %></th>
      <th><%= sort_link(@q, :salary_details_location, 'location') %></th>
      <th><%= sort_link(@q, :salary_details_khakar_debit, 'Debit/Benam') %></th>
      <th><%= sort_link(@q, :salary_details_khakar_credit, 'Credit/Jama') %></th>
      <th><%= sort_link(@q, :salary_details_created_at, 'Date') %></th>
    </tr>
  </thead>

  <tbody>
    <%@salary_details.each do |sal|%>
    <tr>
      <td><%staff=Staff.find_by_id(sal.first)%><%=staff.code%></td>
      <td><%=staff.full_name%></td>
      <td><%=RawProduct.find(sal[1]).title%></td>
      <td><%=sal[2]%></td>
      <td><%=sal[3]%></td>
      <td><%=sal[4]%></td>
      <td><%=(sal[5].to_f*1000).round(0)%> | <%=sal[7]%></td>
      <td><%=sal[6].to_f.round(0)%> | <%=sal[8]%></td>
      <td><%=sal[9]%></td>
      <td><%=sal[10]%></td>
      <td><%=sal[11]%></td>
      <td><%=sal[12]%></td>
    </tr>
    <%end%>
    <% @salary_details.each do |staff| %>
      <%wage_debit=0%>
      <%wage_credit=0%>


    <% end %>
    <tr>
      <td><h5>Total</h5></td>
      <td></td>
      <td></td>
      <td><h5><%= @salary_detail_total.first[0] %></h5></td>
      <td><h5><%= @salary_detail_total.first[1] %></h5></td>
      <td><h5><%= @salary_detail_total.first[2] %></h5></td>
      <td><h5><%= @salary_detail_total.first[3] %></h5></td>
      <td><h5><%= @salary_detail_total.first[4] %></h5></td>
      <td><h5><%= @salary_detail_total.first[5] %></h5></td>
      <td><h5><%= @salary_detail_total.first[6] %></h5></td>
      <td><h5><%= @salary_detail_total.first[7] %></h5></td>
      <td><h5></h5></td>
    </tr>

  </tbody>
</table>

<div class="clearfix"></div>
<div class="row">
  <div class="col-lg-4 col-sm-4">
    <% page_entries_info @salary_details %>
  </div>
  <div class="col-lg-8 col-sm-8 pagination-left">
    <%= paginate @salary_details %>
  </div>
</div>

<script>
  $(document).ready(function() {
    if ($(".bootstrap-table").length == 0){
      $("table").bootstrapTable();
    }
  });
</script>
