<h1>Salaries Credit Detail</h1>

<div class="row col-lg-9 form-group float-left">
  <% if can?(:add, :all) %>
  <div class="col-lg-4">
    <%= link_to new_salary_detail_path, class: "btn btn-success" do %>
       <i class="fa fa-plus" aria-hidden="true"></i>
        Return From Staff
    <% end %>
  </div>
  <div class="col-lg-4">
    <%= link_to advance_all_salary_details_path, class: "btn btn-success" do %>
       <i class="fa fa-plus" aria-hidden="true"></i>
        Credit Salaries
    <% end %>
  </div>
  <% end %>
</div>
<div class="clearfix"></div>
<div class="row">
  <div class="col-lg-12 col-sm-12">
    <%= search_form_for @q, url: salary_details_path, class: "admin-controls", method: "get" do |f| %>
      <div class="col-lg-4 form-group float-left">
        <%= f.select :staff_id_in, options_from_collection_for_select(@staffs, "id", ->(st){"#{st.name} \u{27F6} #{st.father} \u{27F6} #{st.code}"},f.object.staff_id_in),{:include_blank => "Select Staff"},{:multiple => true,:class=>"form-control chosen-select", :data => {:placeholder => "Select the Staff"}}%>
      </div>
      <div class="col-lg-2 form-group float-left">
        <%= f.search_field :created_at_gteq, class: 'form-control input-sm datepicker', 'datepicker' => true,placeholder: "YYYY-MM-DD" %>
        <%= f.search_field :quantity_or_raw_quantity_gt,value: '0', class: 'hidden' %>
      </div>
       <div class="col-lg-2 form-group float-left">
          <%= f.select :staff_department_id_eq, options_from_collection_for_select(@departments, 'id', 'title', @department), {hide_label:true,title: "Select the Department" ,prompt: "Select the Department"},:class=>"form-control chosen-select"%>
        </div>
      <div class="col-lg-2 form-group float-left">
        <%= f.search_field :created_at_lteq, class: 'form-control button-sm datepicker', 'datepicker' => true ,placeholder: "YYYY-MM-DD"%>
      </div>
      <div class="col-lg-2 form-group float-left">
        <button class="form-control btn btn-primary" name="search_submit" type="submit" value="Search" style="width:100px"><i class="fa fa-search"></i></button>
      </div>
      <div class="col-lg-1 form-group float-right">
        <button class="form-control btn btn-secondary" name="submit_pdf" type="submit" value="Day Out Print" formtarget="_blank"><i class="fa fa-file-pdf"></i></button>
      </div>
    <% end %>
  </div>
</div>

<table data-toggle="table" data-search="true">
  <thead>
    <tr>
      <th><%= sort_link(@q, :id, 'ID') %></th>
      <th><%= sort_link(@q, :staff_name, 'Staff') %></th>
      <th><%= sort_link(@q, :wage_rate, 'Wage Rate') %></th>
      <th><%= sort_link(@q, :quantity, 'Quantity') %></th>
      <th><%= sort_link(@q, :amount, 'Total Amount') %></th>
      <th><%= sort_link(@q, :remarks, 'Balance') %></th>
      <th><%= sort_link(@q, :comment, 'Comment') %></th>
      <th><%= sort_link(@q, :created_at, 'Date') %></th>
        <th class="border_none">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @salary_details.each do |salary_detail| %>
      <tr>
        <td><%= salary_detail.id %></td>
        <td><%= salary_detail.staff.name %> <%= salary_detail.staff.father %></td>
        <td><%= salary_detail.wage_rate.to_f.round(2) %></td>
        <td><%= salary_detail.quantity.to_f.round(2) %></td>
        <td><%= salary_detail.amount.to_f.round(2) %></td>
        <td><%= salary_detail.remarks.to_f.round(2) %></td>
        <td><%= salary_detail.comment %></td>
        <td><%= salary_detail.created_at.strftime("%d%b%y") %></td>
        <td>
          <% if can?(:update, :all) %>
            <%= link_to edit_salary_detail_path(salary_detail) do %>
              <i class="fa fa-edit " aria-hidden="true"></i> |
            <%end %>
          <% end %>
          <% if can?(:delete, :all) %>
            <%= link_to salary_detail, method: :delete, data: {title: 'Confirmation' ,confirm: 'Are you sure?', commit: 'Sure!'}, :remote => true, :class => 'delete' do %>
              <i class="fa fa-trash " aria-hidden="true"></i> |
            <%end %>
          <% end %>
          <% if can?(:view, :all) %>
            <%= link_to salary_detail do %>
              <i class="fa fa-eye " aria-hidden="true"></i>
            <%end %>
          <%end%>
        </td>
      </tr>
    <% end %>
    <tr>
      <td><h5>Total</h5></td>
      <td></td>
      <td></td>
      <td></td>
      <td><h5><%=@salary_details.sum(:amount)%></h5></td>
      <td></td>
    </tr>
  </tbody>
</table>

<div class="clearfix"></div>
<div class="row">
  <div class="col-lg-4 col-sm-4">
    <%= page_entries_info @salary_details %>
  </div>
  <div class="col-lg-8 col-sm-8 pagination-left">
    <%= paginate @salary_details %>
  </div>
</div>

<script>
  $(document).ready(function() {
    if ($(".bootstrap-table").length == 0){
      $("table").bootstrapTable();
    }
  });
</script>
