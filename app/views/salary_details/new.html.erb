<div class="card">
  <div class="card-header">
    <h3>Staff Payment</h3>
  </div>
  <div class="card-body">
    Balance: <h1><span id='balance'>0.00</span></h1>
    <%if @pos_type_batha%>
      <%= render 'form_batha', salary_detail: @salary_detail %>
    <%elsif pos_setting_sys_type=="HousingScheme"%>
      <%= render 'form_hscheme', salary_detail: @salary_detail %>
    <%else%>
      <%= render 'form_batha', salary_detail: @salary_detail %>
    <%end%>
  </div>
</div>
