<div class="card shadow mb-4">
  <!-- Card Header - Accordion -->
  <a href="#collapseCardExample" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample">
    <h6 class="m-0 font-weight-bold text-primary"><h1>Outward Order Details</h1></h6>
  </a>
  <!-- Card Content - Collapse -->
  <div class="collapse show" id="collapseCardExample" style="">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-12 col-sm-12">
          <div class="col-lg-3 form-group float-left card mb-4 py-3 border-left-primary shadow h-100 py-2">
            <h3>Transaction Type:<h5 class='urdu-font'> <%= @order.transaction_type %></h5></h3>
          </div>
          <div class="col-lg-3 form-group float-left card mb-4 py-3 border-left-primary shadow h-100 py-2">
            <h3>Name:<h5 class='urdu-font'><%= @order.sys_user.name %></h5></h3>
          </div>
          <div class="col-lg-3 form-group float-left card mb-4 py-3 border-left-primary shadow h-100 py-2">
            <h3>Amount:<h5><%= @order.amount %></h5> </h3>
          </div>
          <div class="col-lg-3 form-group float-left card mb-4 py-3 border-left-primary shadow h-100 py-2">
            <h3>Status:<h5><%= @order.status %></h5></h3>
          </div>
        </div>
      </div>
      <% @order.order_items.each do |order_item|%>
        <div class="row">
          <div class="col-lg-12 col-sm-12">
            <div class="col-lg-2 form-group float-left card mb-4 py-3 border-left-primary shadow h-100 py-2">
              <h3>Prodcut: <h5 class='urdu-font'><%= order_item.product.title  %></h5></h3>
            </div>
            <div class="col-lg-2 form-group float-left card mb-4 py-3 border-left-primary shadow h-100 py-2">
              <h3>Marka: <h5><%= order_item.marka %></h5></h3>
            </div>
            <div class="col-lg-2 form-group float-left card mb-4 py-3 border-left-primary shadow h-100 py-2">
              <h3>Builty No: <h5><%= order_item.builty_no  %></h5></h3>
            </div>
            <div class="col-lg-2 form-group float-left card mb-4 py-3 border-left-primary shadow h-100 py-2">
              <h3>Vehicle No: <h5><%= order_item.vehicle_no  %></h5></h3>
            </div>
            <div class="col-lg-2 form-group float-left card mb-4 py-3 border-left-primary shadow h-100 py-2">
              <h3>Challan No: <h5><%= order_item.challan_no %></h5></h3>
            </div>
            <div class="col-lg-2 form-group float-left card mb-4 py-3 border-left-primary shadow h-100 py-2">
              <h3>Quantity: <h5><%= order_item.quantity %></h5></h3>
            </div>
          </div>
        </div>
      <% end %>
      <br>
      <div class="row">
        <div class="col-lg-1 float-left">
          <%= link_to pos_settings_path do %>
          <i class="fa fa-arrow-left " aria-hidden="true"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
