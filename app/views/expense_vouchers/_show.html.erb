<div class="modal fade" id="showdData" tabindex="-1" role="dialog" aria-labelledby="showdDataLabel">
  <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
    <div class="modal-content">
       <div class="modal-header">
         <h3 class="modal-title ml-4" id="myModalLabel">Expense Voucher Details</h3>
         <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
         </button>
       </div>
      <div class="modal-body">     
          <div class="card shadow mb-4">
              <!-- Card Content - Collapse -->
              <div class="collapse show" id="collapseCardExample" style="">
                 <div class="card-body">
                    <div class="card shadow">
                      <ul class="list-group list-group-flush">
                          <li class="list-group-item mb-2"><span class="float-left h5">Comment:</span><span class="float-right"><%= @expense_voucher.comment %></span></li>
                          <li class="list-group-item mb-2"><span class="float-left h5">Total Expense:</span><span class="float-right"><%= @expense_voucher.amount.to_f.round(2) %></span></li>
                          <li class="list-group-item mb-2"><span class="float-left h5">Date:</span><span class="float-right"><%if @expense_voucher.created_at.strftime("%d%b%y")!=@expense_voucher.updated_at.strftime("%d%b%y")%>
                            <%= @expense_voucher.created_at.present? ? @expense_voucher.created_at.strftime("%d%b%y at %H:%M%p") : '' %> | <%= @expense_voucher.updated_at.present? ? @expense_voucher.updated_at.strftime("%d%b%y at %H:%M%p") : '' %>
                            <%else%>
                             <%= @expense_voucher.created_at.present? ? @expense_voucher.created_at.strftime("%A,  %d-%b-%y at %H:%M%p") : '' %>
                             <%end%></span>
                           </li>
                       </ul>
                    </div>                
                      <br>
                    <div class="row">
                      <div class="col-lg-12 col-sm-12">
                        <table>                    
                          <tr style="background-color:lightgray;">                  
                            <th>Expense type</th>
                            <th>Ammount</th>
                            <th>Comment</th>
                          </tr>                     
                      <tbody>
                        <% @expense_voucher.expense_entry_vouchers.each do |expense_entry| %>
                          <tr>
                            <td><%= expense_entry.expense_type.title%></td>
                            <td><%= expense_entry.amount%></td>
                            <td>  <%= expense_entry.comment%></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>