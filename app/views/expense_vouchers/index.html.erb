              </tr>
            </tbody>
          </table>
          </div>
          <div class="col-lg-12 digg_pagination mt-3">
            <div class="float-left page_info">
              <%= page_entries_info @expense_vouchers %>
            </div>
            <div class="float-right">
            <%= paginate @expense_vouchers, :container => false %>
            </div>
          </div>
       </div>
      </div>
    </div>
  <% end %>
</div>
