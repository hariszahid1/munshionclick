<div class="hidden" id="production_list">

  <h1>Product Production Formulas</h1>
  <% if can?(:add, :all) %>
        <%= link_to new_production_path, class: "btn btn-success" do %>
           <i class="fa fa-plus" aria-hidden="true"></i>
           Production Formula
        <% end %>
        <% end %>
  <div class="clearfix"></div>
  <div class="row">
    <div class="col-lg-12 col-sm-12">
      <%= search_form_for @q, url: productions_path, class: "admin-controls", method: "get" do |f| %>
        <div class="col-lg-3 form-group float-left">
          <%= f.search_field :title_cont, value: @title, placeholder: "Title", title: "Title" ,:class=>"form-control" %>
        </div>
        <div class="col-lg-2 form-group float-left">
          <button class="form-control btn btn-primary" name="search_submit" type="submit" value="Search" style="width:100px"><i class="fa fa-search"></i></button>
        </div>
      <% end %>
    </div>
  </div>

  <table data-toggle="table" data-search="true">
    <thead>
      <tr>
        <th>Product</th>
        <th>Operation cost</th>
        <th>Cost price</th>
        <th>Sale price</th>
        <th>Comment</th>
        <th>Status</th>

        <th class="border_none"></th>
        <th class="border_none">Action</th>
        <th class="border_none"></th>
      </tr>
    </thead>

    <tbody>
      <% @productions.each do |production| %>
        <tr>
          <td><%= production.product.title %> - <%= production.product&.product_category&.title %> </td>
          <td><%= number_with_delimiter production.operation_cost %></td>
          <td><%= number_with_delimiter production.cost_price %></td>
          <td><%= number_with_delimiter production.sale_price %></td>
          <td><%= production.comment %></td>
          <td><%= production.status %></td>


          <td>
            <% if can?(:update, :all) %>
              <%= link_to edit_production_path(production) do %>
                <i class="fa fa-edit " aria-hidden="true"></i> |
              <%end %>
            <% end %>
            <% if can?(:delete, :all) %>
              <%= link_to production, method: :delete, data: {title: 'Confirmation' ,confirm: 'Are you sure?', commit: 'Sure!'}, :remote => true, :class => 'delete' do %>
                <i class="fa fa-trash " aria-hidden="true"></i> |
              <%end %>
            <% end %>
            <% if can?(:view, :all) %>
              <%= link_to production do %>
                <i class="fa fa-eye " aria-hidden="true"></i>
              <%end %>
            <%end%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="clearfix"></div>
<div class="row">
  <div class="col-lg-4 col-sm-4">
    <%= page_entries_info @productions %>
  </div>
  <div class="col-lg-8 col-sm-8 pagination-left">
    <%= paginate @productions %>
  </div>
</div>

<script>
  $(document).ready(function() {
    if ($(".bootstrap-table").length == 0){
      $("table").bootstrapTable();
    }
    $("#production_list").removeClass('hidden');
  });
</script>
