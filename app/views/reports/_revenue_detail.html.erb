<%@daily=0%>
<%@total=0%>
<div class="row">
  <div class="col-lg-12 col-sm-12">
    <div id = "expenses_detail">
      <table data-toggle="table">
        <thead>
          <tr>
            <th>Year</th>
            <th>Month</th>
            <th>Daily Sale</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
            <%@revenue_by_type.each do |ex|%>
              <tr>
                <%total=0%>
                <td><%=ex.first.last%></td>
                <td><%=ex.first.first%></td>
                <td><%=ex.last.first%> <%@daily=@daily+ex.last.first%></td>
                <td><%=ex.last.last%> <%@total=@total+ex.last.last%></td>
              </tr>
            <%end%>
            <tr>
              <td><h5>Total</h5></td>
              <td><h5><%=@daily%></h5></td>
              <td><h5><%=@total%></h5></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="clearfix">

</div>


  <div id="chart_div1111"></div>




  <script type="text/javascript">
    google.charts.load('current', {packages: ['corechart', 'bar']});
  google.charts.setOnLoadCallback(drawBasic);

  function drawBasic() {

        var data = google.visualization.arrayToDataTable([
          ['months', 'total Revenue by day',],
          ['jan', 400 ],
          ['fab', 800]
          ]);

        var options = {
          title: 'Total Revenue Report By Day',
          chartArea: {width: '50%'},
          hAxis: {
            title: 'toatl Revenue',
            minValue: 0
          },
          vAxis: {
            title: 'months'
          }
        };

        var chart = new google.visualization.BarChart(document.getElementById('chart_div1111'));

        chart.draw(data, options);
      }

  </script>


<script>
  $(document).ready(function() {
    if ($(".bootstrap-table").length == 0){
      $("table").bootstrapTable();
    }
    $("#expenses_list").removeClass('hidden');
  });
</script>
