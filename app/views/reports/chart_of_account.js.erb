$( document ).ready(function() {

const ctx = document.getElementById('myChart');
  var uGroupKeys=$('#uGroupKeys').val().split(' ')
  var uGroupCount=$('#uGroupCount').val().split(' ')
  Chart.defaults.font.size = 16;
  new Chart(ctx, {
    type: 'pie',
    data: {
      labels: uGroupKeys,
      datasets: [{
        label: 'Users ',
        data: uGroupCount,
        borderWidth: 1,
      }],
    },
    options: {
      
      maintainAspectRatio: false,
      plugins: {
            title: {
                display: true,
                text: 'Pie Chart',
                font: {
                  size: 16
                }
            }
          

        }
      
    }
  });
  
});

