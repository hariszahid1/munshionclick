<% if params[:staff_ledger_book_asc_op].present? || params[:staff_ledger_book_desc_op].present? %>
  <%= render 'staff_ledger_book_ob' %>
<% else %>
  <%if  params[:bulk].present?%>
    <%= render 'index_bulk'%>
  <%elsif pos_setting_sys_type=="batha" or pos_setting_sys_type=="Factory"%>
    <%= render 'index_batha'%>
  <%elsif pos_setting_sys_type=="HousingScheme"%>
    <%= render 'staff_ledger_books/hscheme/index'%>
  <%elsif pos_setting_sys_type=="ColdStorage"%>
    <%= render 'cold_storage_index'%>
  <%else%>
    <%= render 'index'%>
  <%end%>
<%end%>
