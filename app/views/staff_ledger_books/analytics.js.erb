$( document ).ready(function() {

  const ctx = document.getElementById('myChart');
  var staffNames=$('#staffNames').val().split(' ')
  var staffDebit=$('#staffDebit').val().split(' ')
  Chart.defaults.font.size = 16;
  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: staffNames,
      datasets: [{
        label: 'Total Debit/Benam',
        data: staffDebit,
        borderWidth: 1,
        backgroundColor: '#FF5C5C'
      }],
    },
    options: {
      maintainAspectRatio: false,
      plugins: {
            title: {
                display: true,
                text: 'Total Credit Chart Staff Wise',
                
            }
        }
    }
  });
});

