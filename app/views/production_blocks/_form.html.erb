<%= form_with(model: production_block, local: true) do |form| %>
  <% if production_block.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(production_block.errors.count, "error") %> prohibited this production_block from being saved:</h2>

      <ul>
      <% production_block.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-lg-6 form-group float-left">
    <%= form.label :production_block_type_id %>
    <%= form.text_field :production_block_type_id %>
  </div>

  <div class="col-lg-6 form-group float-left">
    <%= form.label :title %>
    <%= form.text_field :title , placeholder:"Enter Title"%>
  </div>

  <div class="col-lg-6 form-group float-left">
    <%= form.label :bricks_quantity %>
    <%= form.number_field :bricks_quantity %>
  </div>

  <div class="col-lg-6 form-group float-left">
    <%= form.label :tile_quantity %>
    <%= form.number_field :tile_quantity %>
  </div>

  <div class="col-lg-6 form-group float-left">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="col-lg-6 form-group float-left">
    <%= form.label :status %>
    <%= form.number_field :status %>
  </div>

  <div class="col-lg-6 form-group float-left">
    <%= form.label :comment %>
    <%= form.text_area :comment , placeholder:"Enter Comment" %>
  </div>
  <div class="clearfix">
    <hr>
    <div class="col-lg-12 row ">

            <div class="col-lg-6 form-group float-left">
              <%= link_to production_blocks_path do %>
              <i class="fa fa-arrow-left " aria-hidden="true"></i>
              <% end %>
            </div>
              <div class="col-lg-6 form-group float-left">
                <div class="col-lg-6 form-group float-left">
                  <%=form.object.id.nil? ? (form.submit class: "btn btn-success", style: "float: left")  :  (form.submit class: "btn btn-warning", style: "float: left")%>
                </div>
              </div>
            <% end %>
</div>
