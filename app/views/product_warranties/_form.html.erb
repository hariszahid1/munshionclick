<%= bootstrap_form_for(product_warranty) do |form| %>
  <% if product_warranty.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product_warranty.errors.count, "error") %> prohibited this warranty from being saved:</h2>

      <ul>
      <% product_warranty.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
      <div class="col-lg-6 form-group float-left">
        <%= form.select :purchase_sale_detail_id, options_from_collection_for_select(@purchase_sale_detail, 'id', ->(st){"#{st.id} \u{27F6} #{st.sys_user.name} \u{27F6} #{st.total_bill}"},form.object.purchase_sale_detail_id), {hide_label: true,prompt: "Select the Purchase Sale Detail"},required: true,:class=>"form-control chosen-select"%>
      </div>
    <div class="col-lg-6 form-group float-left">
      <%= form.select :product_id, options_from_collection_for_select(@product, 'id', ->(st){"#{st.title} \u{27F6} #{st.code}"},form.object.product_id), {hide_label: true,prompt: "Select the Product"},required: true,:class=>"form-control chosen-select"%>
    </div>
        <div class="col-lg-12 form-group float-left">
                <%= form.text_area :serial , placeholder:"Enter Serial"%>
              </div>

              <div class="clearfix">
                <hr>
                <div class="col-lg-12 row ">

                        <div class="col-lg-6 form-group float-left">
                          <%= link_to product_warranties_path do %>
                          <i class="fa fa-arrow-left " aria-hidden="true"></i>
                          <% end %>
                        </div>
                          <div class="col-lg-6 form-group float-left">
                            <div class="col-lg-6 form-group float-left">
                              <%=form.object.id.nil? ? (form.submit class: "btn btn-success", style: "float: left")  :  (form.submit class: "btn btn-warning", style: "float: left")%>
                            </div>
                          </div>
                        <% end %>
              </div>
