<tr>
  <td><%= check_box_tag 'object_ids[]', department.id %></td>
  <td><%= department.id %></td>
  <td><%= department.code %></td>
  <td class= 'urdu-font'><%= department.title %></td>
  <td><span title="<%= department.comment %>" class='truncate-text'><%= department.comment %></span></td>
  <td>
        <div class="icon-container-1">
            <div class="my-icon-1 my-view-1">
              <div class="my-tooltip-1">
         <div class="icon-container">
          <div class="my-icon my-view">
          <div class="my-tooltip">
            Edit
          </div>
          <span class="icon-div mt-3">
                <% if can?(:update, :all) %>
              <%= link_to edit_department_path(department), remote: true do %>
                <i class="fa fa-edit mt-2" aria-hidden="true"></i>
              <%end %>
            <% end %>
          </span>
        </div>

          <div class="my-icon my-view">
              <div class="my-tooltip">
                Delete
              </div>
                <span class="icon-div mt-3">
                  <% if can?(:delete, :all) %>
                    <%= link_to department, method: :delete, data: {title: 'Confirmation' ,confirm: 'Are you sure?', commit: 'Sure!'}, :remote => true, :class => 'delete' do %>
                    <i class="fa fa-trash mt-2" aria-hidden="true"></i>
                  <%end %>
                <% end %>
              </span>
          </div>

      <div class="my-icon my-view">
                <div class="my-tooltip">
                  Show
                </div>
                <span class="icon-div mt-3">
                   <% if can?(:view, :all) %>
                    <%= link_to department_path(department), remote: true do %>
                    <i class="fa fa-eye mt-2" aria-hidden="true"></i>
                <%end %>
            <%end%>
          </span>
      </div>

      <div class="my-icon my-view">
            <div class="my-tooltip">
              PDF
            </div>
            <span class="icon-div mt-3">
                <%= link_to departments_path('q[id_eq]':department.id,'pdf':true), title: 'Download PDF', target: '_blank' do %>
      <i class="fa fa-file-pdf text-danger mt-2 " aria-hidden="true"></i>
    <%end %>
            </span>
      </div>

       <div class="my-icon my-view">
            <div class="my-tooltip">
              CSV
            </div>
            <span class="icon-div mt-3">
                 <%= link_to departments_path('q[id_eq]':department.id,'csv':true), title: 'Download CSV' do%>
      <i class="fa fa-file-excel mt-2 text-success" aria-hidden="true"></i>
    <%end %>
            </span>
          </div>
          </div>
            </div>
            <span class="icon-div-1">
                  <i class="fa fa-ellipsis-v mt-2" aria-hidden="true"></i>
            </span>
        </div>
    </div>
  </td>
</tr>
