$( document ).ready(function() {

  const ctx = document.getElementById('myChart');
  var blockKeys=$('#blockKeys').val().split(' ')
  var blockCount=$('#blockCount').val().split(' ')
  Chart.defaults.font.size = 16;
  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: blockKeys,
      datasets: [{
        label: 'Total Revenue ',
        data: blockCount,
        borderWidth: 1,
        backgroundColor: '#FF5C5C'
      }],
    },
    options: {
      
      maintainAspectRatio: false,
      plugins: {
            title: {
                display: true,
                text: 'Total Revenue generated per Block - Bar Chart',
                font: {
                  size: 16
                }
            }
          

        }
      
    }
  });
  
});

