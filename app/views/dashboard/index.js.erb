$( document ).ready(function() {

  const ctx = document.getElementById('myChart');
  Chart.defaults.font.size = 16;
  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['Units/Inventories', 'Users', 'Staffs', 'Bookings', 'Installments', 'Expenses', 'Transfers'],
      datasets: [{
        label: 'Total ',
        data: ['<%= @product_count %>', '<%= @sys_user_count %>', '<%= @staff_count %>', '<%= @total_booked.count.to_f.round(2) rescue 0 %>', '<%= @total_sale_slips %>', '<%= @total_expense_slips%>','<%= @total_transfer.count %>'],
        borderWidth: 1,
        backgroundColor: '#FF5C5C'
      }],
    },
    options: {
      
      maintainAspectRatio: false,
      plugins: {
            title: {
                display: true,
                text: 'Bar Chart',
                font: {
                  size: 16
                }
            }
          

        }
      
    }
  });
  
});
  
