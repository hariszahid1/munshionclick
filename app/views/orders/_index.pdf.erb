<% @date = Date.today  %>
<% @time = DateTime.now %>
<% @time = Time.zone.now %>
<p style="border-bottom: double 4px;  margin: 0;"></p>
<h1 style="text-align: center; margin: 0;"><%=params[:sale].present? ? "Total Sale" : "Total Purchase"%> => <%=@products_sale_total%></h1>
<p style="border-bottom: double 4px;  margin: 0;"></p>
<p style="text-align: center;margin: 0;" class = "urdu-font">Report by: <%=current_user.name%></p>
<div style="width:90vw;">
  <table>
    <th></th>
    <th></th>
    <tr>
      <td style="width:67vw;">DateTime: <span><%=Time.zone.now%></span> </td>
      <td style="width:33vw;">Customer Type: <span> </span></td>
    </tr>
    <tr>
      <td style="">Payment by: Cash</td>
      <td style="">Platform: POS</td>
    </tr>
  </table>
</div>
<p style="border-bottom: dotted 3px;  margin: 0;"></p>
<div style="width:90vw;">
  <table>
    <th style="width:40vw;">Items</th>
    <th style="width:20vw;">Qty</th>
    <th style="width:20vw;">total</th>
    <% @products_count.each_with_index do |item,i|%>
      <tr>
        <td style="border-bottom: 1px solid #000; " class = "urdu-font"><%=item.first %></td>
        <td style="border-bottom: 1px solid #000; "><%=item.last.to_f.round(2) %></td>
        <td style="border-bottom: 1px solid #000; "><%=@products_sale[item.first].round(2) %></td>
      </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td><%=params[:sale].present? ? "Total Sale" : "Total Purchase"%> : <%=@products_sale_total%></td>
    </tr>
  </table>
</div>
