      <%= form.label :expense_type_id %><br>
      <%= form.text_field :expense_type_id %>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="field">
      <%= form.label :account_id %><br>
      <%= form.text_field :account_id %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <div class="field">
      <%= form.label :status %>
      <%= form.number_field :status %>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="field">
      <%= form.label :comment %><br>
      <%= form.text_area :comment %>
