<% @sys_user_balance=0%>
<% @date = Date.today  %>
<% @time = DateTime.now %>
<% @time = Time.zone.now %>
<p style="border-bottom: double 4px;  margin: 0;"></p>
<h1 style="text-align: center; margin: 0;">customers details</h1>
<p style="border-bottom: double 4px;  margin: 0;"></p>
<p style="text-align: center;margin: 0;">Report by: <%=current_user.name%></p>
<div >
  <table>
    <thead>
      <tr class="lite-gray">
        <th>Code</th>
        <th>Name</th>
        <th>User type</th>
        <th>User group</th>
        <th>Status</th>
        <th>Credit status</th>
        <th>Credit limit</th>
        <th>balance</th>
      </tr>
    </thead>

    <tbody>
      <% @sys_users.each do |sys_user| %>
          <tr>
           <td><%= sys_user.code %></td>
           <td><%= sys_user.name %></td>
           <td><%= sys_user.user_type.title %></td>
           <td><%= sys_user.user_group %></td>
           <td><%= sys_user.status %></td>
           <td><%= sys_user.credit_status %></td>
           <td><%= sys_user.credit_limit %></td>
           <td><%= sys_user.balance.abs %><%@sys_user_balance += sys_user.balance.abs %> </td>
          </tr>
        <% end %>
      <tr class="lite-gray">
        <td><h4>total</h4></td>
        <td><%= %></td>
        <td><%= %></td>
        <td><%= %></td>
        <td><%= %></td>
        <td><%= %></td>
        <td><%=  %></td>
        <td><h4><%=@sys_user_balance %></h4></td>

      </tr>
    </tbody>

  </table>
</div>