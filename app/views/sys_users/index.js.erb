$( document ).ready(function() {
  var userCount=$('#userCount').val().split(' ')
  const ctx = document.getElementById('myChart');
  Chart.defaults.font.size = 16;
  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['Jama / Payable','Benam / Receivable', 'Nil'],
      datasets: [{
        label: 'Total Users',
        data: userCount,
        borderWidth: 1,
        backgroundColor: ["blue", "red", "green"],
      }],
    },
    options: {
      
      maintainAspectRatio: false,
      plugins: {
            title: {
                display: true,
                text: 'Total Users by Balance Bar Chart',
                font: {
                  size: 16
                }
            }
          

        }
      
    }
  });
  
});

