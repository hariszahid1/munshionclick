<%@sys_user_balance = 0 %>
<div class="hidden" id="sys_users_list">
  <div class="row">
    <div class="col-lg-12 col-sm-12">
        <div class="main-content-header">
            <h1 class="ml-2">Receiveable Details</h1>
            <ol class="breadcrumb">
              <li class="breadcrumb-item">
                <a href="<%= root_path %>">Dashboard</a>
              </li>
              <li class="breadcrumb-item active">
                <a href="<%= sys_users_path %>">Receiveable Details</a>
              </li>
            </ol>
          </div>
        <div class="float-right">
          <div class="dropdown ml-auto mr-4">
            <span class="btn btn-info" title= "About This page">Help</span>
              <div class="dropdown-content">
                <% if @help.present? %>
                <% @help&.help_links.each do |link| %>
                <a type="button" class="" target="_blank" href="<%= link[1] %>" >Help in <%= link[0] %></a>
                <% end %>
                <% end %>
              </div>
          </div>
        </div>
        <div class="mb-4">
           <span class=' mt-2'>
               <%= link_to sys_users_path, class: "btn btn-success" do %>
                 <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                 User's List
               <% end %>
           </span>
           <span class='ml-2'>
               <%= link_to payable_sys_users_sys_users_path, class: "btn btn-danger" do %>
               <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
               Payable
               <% end %>
           </span>
        </div>
        <ul class="nav nav-pills" role="tablist">
          <li class="nav-item">
            <a class="nav-link tab-label active" data-toggle="tab" href="#search" role="tab">Search</a>
          </li>
          
          <li class="nav-item">
           <a class="nav-link tab-label" data-toggle="tab" href="#import-export" role="tab">Import/Export</a>
          </li>
      </ul>
      <%= search_form_for @q, url: receiveable_sys_users_path, class: "admin-controls", method: "get" do |f| %>
         <div class="tab-content mb-3 mt-2">
            <div class="tab-pane active card border-radius-1 shadow" id="search" role="tabpanel">
              <p>
                <%= search_form_for @q, url: receiveable_sys_users_path, class: "admin-controls", method: "get" do |f| %>
                  <div class="mt-4 col-lg-12">
                    <span class="col-lg-3 form-group ">
                       <%= f.select :name_or_code_cont, options_from_collection_for_select(@all_user, "name", ->(st){"#{st.name} \u{27F6} #{st.code} , #{st.balance}"},f.object.name_or_code_cont),{:include_blank => "Select Name/Code"},:class=>"form-control chosen-select" %>
                    </span>
                    <span class='col-lg-2 form-group '>
                     <%= f.select :user_group_eq, options_for_select(SysUser.user_groups, f.object.user_group_eq), {:include_blank => "Select User group"},:class=>"form-control chosen-select" %>
                    </span>
                    <span class="col-lg-2 form-group ">
                    <%= f.select :status_eq, SysUser.statuses.map { |key, value| [key.humanize, value] },{hide_label:true,class: "form-control", required: true},:class=>"form-control chosen-select" %>
                    </span>
                    <span class="col-lg-1 form-group ">
                       <button class="form-control btn btn-primary" name="search_submit" type="submit" value="Search" style="width:100px"><i class="fa fa-search"></i></button>
                    </span>                
                   <span class="col-lg-5">
                      <button style="width:100px;" class="form-control btn  btn-danger " title="Download customer pdf" name="submit_pdf_staff_with" type="submit" value="Accounts PDF A4" formtarget="_blank"><i class="fa fa-file-pdf mr-2"></i>PDF</button>                
                      <button style="width:100px;"  class="form-control btn btn-warning" title="Download receiveable csv" name="submit_csv_sys_user_receivable" type="submit" value="Accounts CSV A4"><i class="fa fa-file-excel mr-2"></i>CSV </button>
                      <button class="form-control btn btn-info" type="button" data-toggle="modal" data-target="#exampleModalCenter" style="width:100px"><i class="fa fa-envelope mr-2"></i>Email</button>
                       <!-- Modal -->
                      <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLongTitle">Enter your email to recieve files.</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                              <% @pos_setting = PosSetting.first %>
                                <label>Email:</label>
                                <%= text_field_tag 'email_value',{}, value: current_user.email, class: 'form-control email-fields', type: 'email'%>
                                <br />
                                <label>Subject:</label>
                                  <%= text_field_tag 'subject', "#{@pos_setting.display_name} - Users List Detail report from MunshiOnClick", class: 'form-control email-fields'%>
                                <br />
                                <label>Body:</label><br />
                                  <%= text_area_tag 'body', nil, class: 'form-control'%>
                                <br />
        
                              <label>Please select one of them.</label>
                              <div>
                                <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'CSV', required: 'required' %> CSV</label><br />
                                <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'PDF', required: 'required' %> PDF</label><br />
                                <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'Both', required: 'required' %> Both(CSV + PDF)</label><br />
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                              <button name="email" type="submit" value="email" class="btn btn-primary email-send-btn">Send</button>
                            </div>
                            </div>
                        </div>
                      </div>
                   </span>
                  </div>
                <% end %>
              </p>
            </div>
              <div class="tab-pane card border-radius-1 shadow" id="import-export" role="tabpanel">
                <p>
                  <div class="d-flex">
                    <button class="btn btn-success ml-2" name="export_data" type="submit" value="export_data">Export Data</button>
                    <button class="btn btn-primary ml-2" type="button" data-toggle="modal" data-target="#importFile">Import Data</button>
                  </div>
                </p>
              </div>
        </div>
     <% end %>  

<div class='card p-3 border-radius-1 shadow'>
  <table data-toggle="table" data-search="true" class="overflow-hidden border-radius-1">
    <button class='btn btn-outline-danger float-right delete-selected' type='button' style="width:163px"value='SysUser' >Delete Selected</button>
    <thead>
      <tr>
        <th><input type="checkbox" id="master" class='select-all-checkbox'></th>
        <th>ID<div class='float-right'><%= sort_link(@q, :id, "", {}, class: 'sorting-button') %></div></th>
        <th>Profile Image</th>
        <th>Code<div class='float-right'><%= sort_link(@q, :code, "", {}, class: 'sorting-button') %></div></th>
        <th class="urdu-font">Name<div class='float-right'><%= sort_link(@q, :name, "", {}, class: 'sorting-button') %></div></th>
        <th><div class='float-right'>User Type<%= sort_link(@q, :user_type, "", {}, class: 'sorting-button') %></div></th>
        <th><div class='float-right'>User Group<%= sort_link(@q, :user_group, "", {}, class: 'sorting-button') %></div></th>
        <th>Status</th>
        <th>Occupation</th>
        <th>Opening</th>
        <th><div class='float-right'>Balance<%= sort_link(@q, :balance, "", {}, class: 'sorting-button') %></div></th>
        <th><div class='float-right'>Ledger created_at<%= sort_link(@q, :ledger_book_created_at, "", {}, class: 'sorting-button') %></div></th>
        <th class="border_none">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @sys_users.each do |sys_user| %>
      <% if  (sys_user.balance < 0 )  %>
        <% date = (sys_user.ledger_books.present? ? sys_user.ledger_books.last.created_at : sys_user.created_at)%>
        <tr class=<%=((DateTime.now.to_datetime-date.to_datetime).to_i>30 && !sys_user.balance.to_i.zero?) ? 'table-danger' : ''%>>
          <td><%= check_box_tag 'object_ids[]', sys_user.id %></td>
          <td><%= sys_user.id %></td>
          <td>
            <% if  sys_user.profile_image.attached? %>
              <%= image_tag sys_user.profile_image.service_url, width: 100 %>
            <% end %>
          </td>
          <td><%= sys_user.code %></td>
          <td class="urdu-font"><b><%= sys_user.name %></b></td>
          <td><%= sys_user.user_type.title %></td>
          <td><%= sys_user.user_group %></td>
          <td><%= sys_user.status %></td>
          <td><%= sys_user.occupation %></td>
          <td><b><%= number_with_delimiter sys_user.opening_balance %></b></td>
          <td><b><%= number_with_delimiter sys_user.balance %><%@sys_user_balance += sys_user.balance.abs %></b></td>
          <td><%= date.strftime("%d%b%y at %I:%M%p") %> </td>
          <td>
            <div class="icon-container-1">
                <div class="my-icon-1 my-view-1">
                  <div class="my-tooltip-1">
                    <div class="icon-container">
                      <div class="my-icon my-view">
                        <div class="my-tooltip">
                            Edit
                          </div>
                          <% if can?(:update, :all) %>
                            <%= link_to edit_sys_user_path(sys_user), title: "Edit customers" , class:"icon-div" do %>
                              <i class="fa fa-edit mt-2" aria-hidden="true"></i>
                            <%end %>
                          <% end %>
                        </div>
                        <div class="my-icon my-view">
                          <div class="my-tooltip">
                            Delete
                          </div>
                            <% if can?(:delete, :all) %>
                              <%= link_to sys_user, method: :delete, data: {title: 'Confirmation' ,confirm: 'Are you sure?', commit: 'Sure!'}, title: "Delete customer", :remote => true, :class => 'delete icon-div' do %>
                              <i class="fa fa-trash mt-2" aria-hidden="true"></i>
                              <%end %>
                            <% end %>
                        </div>
                        <div class="my-icon my-view">
                          <div class="my-tooltip">
                            Show
                          </div>
                          <% if can?(:view, :all) %>
                            <%= link_to sys_user, title: "View customer detail", class:"icon-div" do %>
                              <i class="fa fa-eye mt-2" aria-hidden="true"></i>
                              <%end %>
                            <%end%>
                        </div>
                        <div class="my-icon my-view">
                          <div class="my-tooltip">
                            PDF
                          </div>
                          <%= link_to sys_users_path('q[id_eq]':sys_user.id,'pdf':true), title: 'Download PDF', target: '_blank', class:"icon-div" do %>
                            <i class="fa fa-file-pdf text-danger mt-2 " aria-hidden="true"></i>
                          <%end %>
                        </div>
                        <div class="my-icon my-view">
                          <div class="my-tooltip">
                            CSV
                          </div>
                            <%= link_to sys_users_path('q[id_eq]':sys_user.id,'csv':true), title: 'Download CSV', class:"icon-div" do%>
                            <i class="fa fa-file-excel mt-2 text-success" aria-hidden="true"></i>
                          <%end %>
                        </div>
                        <div class="my-icon my-view">
                          <div class="my-tooltip">
                            Ledger book
                          </div>
                          <a href="<%=ledger_books_path('q[sys_user_id_eq]':sys_user.id) %>" title="Ledger book", class="icon-div">
                            <i class="fa fa-address-book mt-2 text-info" aria-hidden="true"></i>
                          </a>
                        </div>
                    </div>
                  </div>
                    <span class="icon-div-1">
                      <i class="fa fa-ellipsis-v mt-2" aria-hidden="true"></i>
                    </span>
                </div>
              </div>
          </td>
        </tr>
        <% end %>
      <% end %>
      <tr>
        <td><h5>total</h5></td>
        <td><%= %></td>
        <td><%= %></td>
        <td></td>
        <td><%= %></td>
        <td><%= %></td>
        <td><%= %></td>
        <td><%= %></td>
        <td><h5><%= number_with_delimiter @sys_user_balance %></h5></td>
      </tr>
    </tbody>
  </table>
</div>

