<div class="hidden" id="sys_users_list">
  <div class="row">
    <div class="col-lg-12 col-sm-12">
      <h1>User's List</h1>
      <div class="col-lg-2 form-group float-left">
        <% if can?(:add, :all) %>
        <%= link_to new_sys_user_path, class: "btn btn-success" do %>
          <i class="fa fa-plus" aria-hidden="true"></i>
          New User
        <% end %>
        <% end %>
      </div>
      <div class="col-lg-2 form-group float-left">
        <%= link_to payable_sys_users_sys_users_path, class: "btn btn-primary" do %>
          <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
          Payable
        <% end %>
      </div>
      <div class="col-lg-2 form-group float-left">
        <%= link_to receiveable_sys_users_path, class: "btn btn-primary" do %>
          <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
          Reciveable
        <% end %>
      </div>
      <div class="col-lg-3 form-group float-left">
        <%= link_to transfer_ledger_books_path, class: "btn btn-success" do %>
          <i class="fa fa-credit-card" aria-hidden="true"></i>
          Payment Transfer
       <% end %>
     </div>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="row">
    <div class="col-lg-12 col-sm-12">
      <%= search_form_for @q, url: sys_users_path, class: "admin-controls", method: "get" do |f| %>
        <div class="col-lg-3 form-group float-left">
          <%= f.select :id_eq, options_from_collection_for_select(@all_user, "id", ->(st){"#{st.name} \u{27F6} \u{27F6} #{st.code} "},@name),{:include_blank => "Select Name/Code"},:class=>"form-control chosen-select" %>
        </div>
        <div class="col-lg-2 form-group float-left">
          <%= f.select :user_group_eq, options_for_select(SysUser.user_groups, @user_group), {:include_blank => "Select User group"},:class=>"form-control chosen-select" %>
        </div>
        <div class="col=lg-2 form-group float-left">
          <%= f.select :status_eq, SysUser.statuses.map { |key, value| [key.humanize, value] },{include_blank: "Select Status", hide_label:true, required: true },:class=>"form-control chosen-select" %>
        </div>
        <div class="col-lg-2 form-group float-left">
          <button class="form-control btn btn-primary" name="search_submit" type="submit" value="Search" style="width:100px"><i class="fa fa-search"></i></button>
        </div>
				<div class="col-lg-1 form-group float-right">
					<button class="form-control btn  badge badge-pill badge-success" name="submit_csv_staff_with" type="submit" value="User CSV" formtarget="_blank"> <i class="fa fa-file-excel" aria-hidden="true"></i></button>
				</div>

        
        <div class="col-1 float-right d-flex">
          <button class="form-control btn  badge badge-pill badge-danger" name="submit_pdf_staff_with" type="submit" value="Customer/Salesman PDF A4" formtarget="_blank">Users &nbsp;<i class="fa fa-file-pdf"></i></button>
        </div>
      <% end %>
    </div>
  </div>
  <table data-toggle="table" data-search="true">
    <thead>
      <tr>
        <th>Profile Image</th>
        <th><%= sort_link(@q, :code, 'Code') %></th>
        <th><%= sort_link(@q, :cnic, 'Name') %></th>
        <th><%= sort_link(@q, :user_group, 'User group') %></th>
        <th>Status</th>
        <th>Occupation</th>
        <th>Opening Balance</th>
        <th><%= sort_link(@q, :balance, 'balance') %></th>
        <th>Jama/Benam</th>
        <th>Address</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @sys_users.each do |sys_user| %>
        <% date = (sys_user.ledger_books.present? ? sys_user.ledger_books.last.created_at : sys_user.created_at)%>
        <tr class=<%=((DateTime.now.to_datetime-date.to_datetime).to_i>30 && !sys_user.balance.to_i.zero?) ? 'table-danger' : ''%>>
          <td>
          <% if  sys_user.profile_image.attached? %>
            <%= image_tag sys_user.profile_image.service_url, width: 100 %>
          <% end %>
          </td>
          <td><%= sys_user.code %></td>
          <td class="urdu-font">
            <%= link_to ledger_books_path('q[sys_user_id_eq]':sys_user.id) do%>
              <i class="fa fa-address-book"></i><%= sys_user.name %>
            <%end %>
          </td>
          <td><%= sys_user.user_group %></td>
          <td><%= sys_user.status %></td>
          <td><%= sys_user.occupation %></td>
          <td><b><%= sys_user.opening_balance.to_f.round(2) %></b></td>
          <td><b><%= sys_user.balance.to_f.round(2) %></b> </td>
           <td>
            <%if (sys_user.balance.to_f > 0 ) %>
              <b style="font-size:20px;color:blue;">Jama</b>
            <%elsif (sys_user.balance.to_f < 0 ) %>
              <b style="font-size:20px;color:red;">Benam</b>
            <%else%>
              <b style="font-size:20px;color: #6cec53 ;">Nill</b>
            <%end%>
          </td>
          <td>
            <%if sys_user.contact.present?%>
            <%=sys_user.contact.city.title if sys_user.contact.city.present?%>
            <%end%>
          </td>
          <td>
            <% if can?(:update, SysUser) %>
              <%= link_to edit_sys_user_path(sys_user) do %>
                <i class="fa fa-edit " aria-hidden="true"></i> |
              <%end %>
            <% end %>
            <% if can?(:delete, SysUser) %>
              <%= link_to sys_user, method: :delete, data: {title: 'Confirmation' ,confirm: 'Are you sure?', commit: 'Sure!'}, :remote => true, :class => 'delete' do %>
                <i class="fa fa-trash " aria-hidden="true"></i> |
              <%end %>
            <% end %>
            <% if can?(:view, SysUser) %>
              <%= link_to sys_user do %>
                <i class="fa fa-eye " aria-hidden="true"></i> |
              <%end %>
            <%end%>
            <%= link_to ledger_books_path('q[sys_user_id_eq]':sys_user.id) do%>
              <i class="fa fa-address-book"></i>
            <%end %>
          </td>
        </tr>
        <% end %>

      <tr>
        <td><h5>total</h5></td>
        <td><%= %></td>
        <td><%= %></td>
        <td><%= %></td>
        <td></td>
        <td><%= %></td>
        <td><%= %></td>
        <td><b><%=@sys_user_balance.to_f.round(2) %></b></td>

      </tr>
    </tbody>
  </table>
</div>

<div class="clearfix"></div>
<div class="row">
  <div class="col-lg-4 col-sm-4">
    <%= page_entries_info @sys_users %>
  </div>
  <div class="col-lg-8 col-sm-8 pagination-left">
    <%= paginate @sys_users %>
  </div>
</div>

<script>
  $(document).ready(function() {
    if ($(".bootstrap-table").length == 0){
      $("table").bootstrapTable();
    }
    $("#sys_users_list").removeClass('hidden');
    FontAwesome.dom.i2svg();
  });
</script>
