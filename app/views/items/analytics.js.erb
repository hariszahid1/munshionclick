$( document ).ready(function() {

  const ctx = document.getElementById('myChart');
  var typeKeys=$('#typeKeys').val().split(' ')
  var typeCount=$('#typeCount').val().split(' ')
  Chart.defaults.font.size = 20;
  new Chart(ctx, {
    type: 'pie',
    data: {
      labels: typeKeys,
      datasets: [{
        label: 'Total Items',
        data: typeCount,
        borderWidth: 1,
        
      }],
    },
    options: {
      maintainAspectRatio: false,
      plugins: {
            title: {
                display: true,
                text: 'Total Items by Item Types Chart',
                
            }
        }
    }
  });
});

