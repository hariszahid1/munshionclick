<%= search_form_for @q, url: analytics_items_path, class: "admin-controls col-12 row mb-3", remote: true, method: "get" do |f| %>
  <%= link_to 'Daily', analytics_items_path(type: 'daily'), class: 'btn btn-info ml-2 mb-2', remote: true %>
  <%= link_to 'Weekly', analytics_items_path(type: 'weekly'), class: 'btn btn-danger ml-2 mb-2', remote: true %>
  <%= link_to 'Monthly', analytics_items_path(type: 'monthly'), class: 'btn btn-success ml-2 mb-2', remote: true %>
  <%= link_to 'Yearly', analytics_items_path(type: 'yearly'), class: 'btn btn-warning ml-2 mb-2', remote: true %>

  <div class="col-lg-2">
    <%= f.search_field :created_at_gteq, class: 'form-control input-sm datepicker mb-2', datepicker: true, placeholder: "YYYY-MM-DD" %>
  </div>

  <div class="col-lg-2">
    <%= f.search_field :created_at_lteq, class: 'form-control button-sm datepicker mb-2', datepicker: true , placeholder: "YYYY-MM-DD" %>
  </div>
  
  <button class="form-control btn btn-primary ml-3" style="width: 100px;" name="search_submit" type="submit" value="Search"><i class="fa fa-search"></i></button>
<% end %>

