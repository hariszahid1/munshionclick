
<%= bootstrap_form_for(@deal) do |f| %>
  <% if @deal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@deal.errors.count, "error") %> prohibited this deal from being saved:</h2>
      <ul>
        <% @deal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-lg-12 row">
    <div class="col-lg-6 form-group">
      <%= f.select :staff_id, options_from_collection_for_select(Staff.where(staff_type: 'active'), 'id', 'name', f.object&.staff_id), {label: "Select Agent Name",prompt: "Select Agent Name"}, class: 'chosen-select form-control'%>
    </div>
    <div class="col-lg-6 form-group">
      <%= f.number_field :comission, label: 'Commission' %>
    </div>
    <div class="col-lg-6 form-group">
      <%= f.number_field :file_share, label: 'Office Share' %>
    </div>
    <div class="col-lg-6 form-group">
      <%= f.number_field :agent_earning, label: 'Agent Share' %>
    </div>
    <div class="col-lg-6 form-group">
      <%= f.text_area :deal_detail %>
    </div>
  </div>
  <div class="modal-footer mt-2">
    <%= link_to 'Back', deals_path, class: 'btn btn-danger'%>
    <%=f.object.id.nil? ? (f.submit 'Create', class: "btn btn-success mr-2", style: "float: right")  :  (f.submit 'Update', class: "btn btn-warning mr-2", style: "float: right")%>
  </div>
<% end %>
