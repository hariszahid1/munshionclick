<div class="nested-fields duplicate-staff">
  <div class="bg-white nested-fields">
    <div class="row">
      <%= f.hidden_field :attendance_id %>
      <%= f.hidden_field :id %>
      <div class="col-lg-3 form-group float-left">
        <%= f.select :staff_id, options_from_collection_for_select(@staffs, 'id', 'name',f.object&.staff_id.present? ? f.object&.staff_id : nil ),{include_blank: "Please Select Staff"}, required: true %>
      </div>
      <div class="col-lg-3 form-group float-left">
        <%= f.time_select :check_in, selected: (f.object.check_in.present? ? f.object.check_in : nil), prompt: { hour: "Hours", minute: "Minutes" } %>
      </div>
      <div class="col-lg-3 form-group float-left">
        <%= f.time_select :check_out, selected: (f.object.check_out.present? ? f.object.check_out : nil), prompt: { hour: "Hours", minute: "Minutes" } %>
      </div>
      <div class="col-lg-2 form-group float-left">
        <%= f.text_area :comment, label: 'Reason' %>
      </div>
      <div class="col-lg-1 form-group float-left">
        <div class="mt-4 pt-4"><%= link_to_remove_association "", f , class: "fa fa-trash fa-2x cursor-pointer text-danger" %></div>
      </div>
    </div>
  </div>
</div>
