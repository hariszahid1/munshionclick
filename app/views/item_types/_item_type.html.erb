<tr>
  <td><%= check_box_tag 'object_ids[]', item_type.id %></td>
  <td><%=item_type.id%></td>
  <td class='urdu-font'><%= item_type.title %></td>
  <td><%= item_type.code %></td>
  <td><span title="<%= item_type.comment %>" class='truncate-text'><%= item_type.comment %></span></td>
  <td>
    <% if can?(:update, :all) %>
      <%= link_to edit_item_type_path(item_type), remote: true do %>
        <i class="fa fa-edit " aria-hidden="true"></i> |
      <%end %>
    <% end %>
    <% if can?(:delete, :all) %>
      <%= link_to item_type, method: :delete, data: {title: 'Confirmation' ,confirm: 'Are you sure?', commit: 'Sure!'}, :remote => true, :class => 'delete' do %>
        <i class="fa fa-trash " aria-hidden="true"></i> |
      <%end %>
    <% end %>
    <% if can?(:view, :all) %>
      <%= link_to item_type, remote: true do %>
        <i class="fa fa-eye " aria-hidden="true"></i>
      <%end %>
    <%end%>|
    <%= link_to item_types_path('q[id_eq]':item_type.id,'pdf':true), title: 'Download PDF', target: '_blank' do %>
      <i class="fa fa-file-pdf text-danger mr-2 ml-2 " aria-hidden="true"></i>
    <%end %>|
    <%= link_to item_types_path('q[id_eq]':item_type.id,'csv':true), title: 'Download CSV' do%>
      <i class="fa fa-file-excel mr-2 ml-2 text-success" aria-hidden="true"></i>
    <%end %>
  </td>
</tr>
