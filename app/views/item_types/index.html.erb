<div id="custom-alert" class="alert alert-danger d-none">
  <span class="custom-alert-text"></span>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">Ã—</span>
  </button>
</div>
  <div class="hidden" id="item_types_list">
          <div class="main-content-header">
            <h1 class="ml-2">Item Types</h1>
            <ol class="breadcrumb">
              <li class="breadcrumb-item">
                <a href="<%= root_path %>">Dashboard</a>
              </li>
              <li class="breadcrumb-item active">
                <a href="<%= item_types_path %>">Item Types</a>
              </li>
            </ol>
          </div>
        <%if (check_can_create(@module_permission))%>
            <div id="new_item_type">
              <%= link_to new_item_type_path, remote: true,class: "btn btn-success mb-4" do %>
                <i class="fa fa-plus" aria-hidden="false"></i>
                    Create
              <% end %>
            </div>
        <% end %>
        <div class="float-right">
              <div class="dropdown ml-auto mr-4">
                <span class="btn btn-info" title= "About This page"><i class="fa fa-question-circle mr-1"></i>Help</span>
                  <div class="dropdown-content">
                      <% if @help.present? %>
                      <% @help&.help_links.each do |link| %>
                      <a type="button" class="" target="_blank" href="<%= link[1] %>" >Help in <%= link[0] %></a>
                      <% end %>
                      <% end %>
                  </div>
              </div>
         </div>
  </div>
  <%= search_form_for @q, url: item_types_path, class: "admin-controls", method: "get" do |f| %>
	<ul class="nav nav-pills" role="tablist">
		<li class="nav-item">
			<a class="nav-link tab-label active" data-toggle="tab" href="#search" role="tab">Search</a>
		</li>

		<%if (check_can_import_export(@module_permission))%>
			<li class="nav-item">
				<a class="nav-link tab-label" data-toggle="tab" href="#import-export" role="tab">Import/Export</a>
			</li>
		<%end%>
</ul>
  <div class="tab-content">
    <div class="tab-pane active mb-3 card shadow-sm mt-2 border-radius-1" id="search" role="tabpanel">
     <div class="row d-flex mt-3 mr-2">
      <div class="col">
      <div class='col-lg-4 form-group float-left'>
      <%= f.select :id_eq, options_for_select(@options_for_select.map{ |p| [p.title , p.id]}, f.object.id_eq),{:include_blank => "Select Title"},:class=>"form-control chosen-select" %>
      </div>
      <div class='col-lg-4 form-group float-left'>
      <%= f.search_field :title_or_comment_or_code_cont, placeholder: "Search in Item types", title: "Enter city name" ,:class=>"form-control" %>
      </div>
      <div class='col-lg-3 form-group float-left'>
      <button class="form-control btn btn-primary" title="search item types" name="search_submit"type="submit" value="Search" style="width:100px"><i class="fa fa-search"></i></button>
      </div>
      </div>
      <div class="col">
      <%if (check_can_download_pdf(@module_permission))%>
        <button class="form-control d-flex ml-2 btn btn-danger float-right justify-content-center" style="width:100px" title= "download pdf" name="pdf" type="submit" value="pdf" formtarget="_blank" >PDF &nbsp;<i class="fa fa-file-pdf mt-1"></i></button>
      <% end %>

      <%if (check_can_download_csv(@module_permission))%>
        <button class="form-control d-flex ml-2 btn btn-warning float-right justify-content-center mr-2" style="width:100px" title= "download csv" name="csv" type="submit" value="csv">CSV &nbsp;<i class="fa fa-file-excel mt-1"></i></button>
      <% end %>

      <%if (check_can_send_email(@module_permission))%>
        <button class="form-control d-flex ml-2 btn btn-info float-right justify-content-center mr-2" style="width:100px" type="button" data-toggle="modal" data-target="#exampleModalCenter" ><i class="fa fa-envelope mr-1"></i>&nbsp;Mail</button>
         <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Enter your email to recieve files.</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
              <% @pos_setting = PosSetting.first %>
              <label>Email:</label>
              <%= text_field_tag 'email_value',{}, value: current_user.email, class: 'form-control email-fields', type: 'email'%>
              <br />
              <label>Subject:</label>
              <%= text_field_tag 'subject', "#{@pos_setting.display_name} - Item Types Detail report from MunshiOnClick", class: 'form-control email-fields'%>
              <br />
              <label>Body:</label><br />
              <%= text_area_tag 'body', nil, class: 'form-control'%>
              <br />

              <label>Please select one of them.</label>
              <div>
                <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'CSV', required: 'required' %> CSV</label><br />
                <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'PDF', required: 'required' %> PDF</label><br />
                <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'Both', required: 'required' %> Both(CSV + PDF)</label><br />
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
              <button name="email" type="submit" value="email" class="btn btn-primary email-send-btn">Send</button>
            </div>
            </div>
        </div>
        </div>
      <% end %>

      </div>
      </div>
    </div>
     
    <div class="tab-pane mb-3 card shadow-sm mt-2 border-radius-1" id="import-export" role="tabpanel">
      <p>
        <div class="d-flex ml-2">
        <button class="btn btn-danger ml-2" name="export_data" type="submit" value="export_data">Export Data</button>
        <button class="btn btn-info ml-2" type="button" data-toggle="modal" data-target="#importFile">Import Data</button>
        </div>
      </p>
    </div>
    </div>
  <% end %>


  <%= render 'map_columns/map_column_partials' %>
<div class='card p-3'>
  <div class="row d-flex" style="position: absolute;">
    <div>
      <%if (check_can_delete(@module_permission))%>
	      <button class="btn btn-outline-danger delete-selected mt-4 ml-3" type='button' value='ItemType'>
	      	Delete Selected
	      </button>		
      <%end%>
    </div>  
    <%= search_form_for @q, url: item_types_path, class: "admin-controls ml-4", method: "get" do |f| %>
      <div class="d-flex mt-4" style="width: 150%;">
        <i class="fa fa-filter fa-2x mt-1 mr-1 text-primary"></i>
        <%= select_tag :limit, options_for_select(['Show Entries',5, 10, 15, 20, 25], selected: @custom_pagination), id: 'pagination-limit', title:'Show Entries', style:'cursor: pointer;' %>
      </div>
    <% end %>
  </div>
  <div class="mt-3">
  <table data-toggle="table" data-search="true" id="item_type_table" class="overflow-hidden border-radius-1">

    <thead>
      <tr>
        <th><input type="checkbox" id="master" class='select-all-checkbox'>
        </th>
        <th>ID<div class='float-right'><%= sort_link(@q, :id, "", {}, class: 'sorting-button') %></div></th>
        <th>Title<div class='float-right'><%= sort_link(@q, :expense_type, "", {}, class: 'sorting-button') %></div></th>
        <th>Code<div class='float-right'><%= sort_link(@q, :expense, "", {}, class: 'sorting-button') %></div></th>
        <th>Comment<div class='float-right'><%= sort_link(@q, :comment, "", {}, class: 'sorting-button') %></div></th>
        <th class="border_none">Action</th>
      </tr>
    </thead>

    <tbody>
    <%= render partial: 'item_type', collection: @item_types %>
    </tbody>
  </table>
  </div>
<div class="row">
  <div class="col-lg-4 col-sm-4">
    <%= page_entries_info @item_types %>
  </div>
  <div class="col-lg-8 col-sm-8 pagination-left">
    <%= paginate @item_types %>
  </div>
</div>
</div>
<%= form_for :bulk_import, url: bulk_import_data_path, method: :post, html: {class: "bulk-import-form"} do |f| %>
  <div class="modal fade" id="importFile" tabindex="-1" role="dialog" aria-labelledby="importFileTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Import file</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= f.file_field :file, required: true, accept: '.csv' %>
          <%= f.hidden_field :table_name, value: 'ItemType' %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit 'Import', class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="show-data"></div>

