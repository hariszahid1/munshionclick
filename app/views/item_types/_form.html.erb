<%= bootstrap_form_for(item_type) do |f| %>
  <% if item_type.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(item_type.errors.count, "error") %> prohibited this item_type from being saved:</h2>
        <ul>
        <% item_type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
      <% end %>
      <div class="col-lg-12 form-group float-left">
        <%= f.label :title do %>
              <%= ItemType.human_attribute_name :title %>
              <i class="fas fa-language"></i> 
            <% end %>
        <%= f.text_field :title,required:true,placeholder: "Enter the title", hide_label: true, class: 'urdu-font' %>
      </div>

    <div class="col-lg-12 form-group float-left">
        <%= f.text_field :code, {placeholder: "Enter the code", required: true , value: (f.object.code.nil? ? ("AGC-"+"%.4i" % (ItemType.maximum(:id).present? ? ItemType.maximum(:id).next : 1)) : (f.object.code ))} %>
      </div>

      <div class="col-lg-12 form-group float-left">
        <%= f.text_area :comment %>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-light btn-outline-secondary" data-dismiss="modal">Cancel</button>
        <%=f.object.id.nil? ? (f.submit "Save",class: "btn btn-primary mr-4", style: "float: right")  :  (f.submit "Update", class: "btn btn-warning ", style: "float: right")%>
      </div>

    <% end %>
</div>
