<div class="modal fade" id="showdData" tabindex="-1" role="dialog" aria-labelledby="showdDataLabel">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
          <div class="modal-body">
            <!-- Card Header - Accordion -->
            <div class="modal-header">
          <h2 class="modal-title" id="myModalLabel">Item Type Details</h2>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
             <!-- Card Content - Collapse -->
              <div class="collapse show" id="collapseCardExample" style="">
                <div class="card-body">
                   <div class="card">
                      <table  class="table table-bordered table-shadow">
                        <thead class="thead-color">
                          <h2><th>Id</th></h2>
                          <h2><th>Title</th></h2>
                          <h2><th>Code</th></h2>
                          <h2><th>Comment</th></h2>
                        </thead>
                        <tbody>
                          <tr>
                            <h3><td><%= @item_type.id %></td></h3>
                            <h3><td><%= @item_type.title %> </td></h3>
                            <h3><td><%= @item_type.code %> </td></h3>
                            <h3><td><%= @item_type.comment %></td></h3>
                          </tr>
                      </tbody>
                      </table>
                    </div>
                 <div class='card mt-3'>
                  <h2 class="mb-2">Total Changes</h2>
                  <table class='table table-bordered table-shadow'>
                    <thead class='thead-color'>
                    <th>Changed by</th>
                    <th>Title</th>
                    <th>Comments</th>
                    <th>Updated at</th>
                    </thead>
                    <%@item_type.versions.each do |version|%>
                      <tbody>
                        <tr>
                          <% next if version.whodunnit.nil? %>
                          <td><h6><%= User.find(version.whodunnit).user_name %></h6></td>
                          <td><h6><%= version.changeset.try(:[], 'title') %><h6></td>
                          <td><h6><%= version.changeset.try(:[], 'comment') %><h6></td>
                          <td><%= version.created_at.strftime("%d-%b-%y at %I:%M %p")%></td>
                        </tr>
                      </tbody>
                    <% end%>
                  </table>
                </div>
                </div>
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger float-right" data-dismiss="modal" aria-label="Close">
              <span class="text-light p-2">Close</span>
            </button>
          </div>
     </div>
    </div>
    </div>
  </div>
</div>