<div class="modal fade" id="showdData" tabindex="-1" role="dialog" aria-labelledby="showdDataLabel">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title ml-4" id="myModalLabel">Product Category Details</h3>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
           </button>
      </div>
        <div class="modal-body">
              <!-- Card Content - Collapse -->
              <div class="collapse show" id="collapseCardExample" style="">
                <div class="card-body">
                  <table>
                    <thead>
                      <th><h5>Id</h5></th>
                      <th><h5>Code</h5></th>
                      <th><h5>Title</h5></th>
                      <th><h5>Comment</h5></th>
                   </thead>
                    <tbody>
                      <tr>
                        <td><%= product_category.id %></td>
                        <td><%= product_category.code %></td>
                        <td><%= product_category.title %> </td>
                        <td><%= product_category.comment %></td>
                      </tr>
                   </tbody>
                  </table>
                  <table>
                      <thead>
                        <th><h4>Modifier</h4></th>
                        <th><h4>Changes</h4></th>
                        <th>Updated at</th>
                    </thead>
                      <tbody>
                        <%@product_category.versions.each do |version|%>
                          <tr>
                            <% next if version.whodunnit.nil? %>
                            <td><h6><%= User.find(version.whodunnit).user_name %></h6></td>
                                <td>
                                <table>
                                <thead>
                                <th>Title</th>
                                <th>Comments</th>
                                </thead>
                                <tbody>
                                <tr>
                                <td><h6><%= version.changeset.try(:[], 'title') %><h6></td>
                                <td><h6><%= version.changeset.try(:[], 'comment') %><h6></td>
                                </tr>
                                </tbody>
                                </table>
                              </td>
                            <td><%= version.created_at%></td>
                          </tr>
                        <% end%>
                    </tbody>
                    </table>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
</div>