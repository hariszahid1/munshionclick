<%= search_form_for @q, url: product_categories_path, class: "admin-controls", method: "get" do |f| %>
  <div class="tab-content mb-5">
    <div class="tab-pane active mb-3 card shadow-sm mt-2 border-radius-1" id="search" role="tabpanel">
      <p>
        <div class="col-lg-10 form-group d-flex">
            <div class='col-lg-3'>
              <%= f.select :id_eq, options_for_select(@options_for_select.map{ |p| [p.title.to_s + '--->' + p.code.to_s, p.id]}, f.object.id_eq),{include_blank: "Select Unit Category"}, class: "form-control chosen-select" %>
            </div>
          <div class='col-lg-3'>
            <%= f.search_field :title_or_code_or_comment_cont, placeholder: "Search in categories", title: "Enter title" ,:class=>"form-control" %>
          </div>
          <button class="form-control btn btn-primary" name="search_submit" type="submit" value="Search" style="width:100px;"><i class="fa fa-search"></i></button>
          <%if (check_can_download_pdf(@module_permission))%>
            <button class="form-control d-flex btn btn-danger ml-2" style="width:150px" title= "download Unit Categories pdf" name="pdf" type="submit" value="pdf" formtarget="_blank">Categories &nbsp;<i class="fa fa-file-pdf mt-1 ml-1"></i></button>
          <% end %>
          <%if (check_can_download_csv(@module_permission))%>
            <button class="form-control d-flex  btn btn-success ml-2" style="width:150px" title= "download Unit Categories csv" name="csv" type="submit" value="csv">Categories &nbsp;<i class="fa fa-file-excel mt-1 ml-1"></i></button>
          <% end %>
          <%if (check_can_send_email(@module_permission))%>
            <button class="d-flex btn btn-info ml-2" type="button" data-toggle="modal" data-target="#exampleModalCenter" ><i class="fa fa-envelope mr-1"></i>Mail</button>
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Enter your email to recieve files.</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                  <div class="modal-body">
                    <% @pos_setting = PosSetting.first %>
                    <label>Email:</label>
                    <%= text_field_tag 'email_value',{}, value: current_user.email, class: 'form-control email-fields', type: 'email'%>
                    <br />
                    <label>Subject:</label>
                    <%= text_field_tag 'subject', "#{@pos_setting.display_name} - Unit Categories Detail report from MunshiOnClick", class: 'form-control email-fields'%>
                    <br />
                    <label>Body:</label><br />
                    <%= text_area_tag 'body', nil, class: 'form-control'%>
                    <br />
                  <br />
                    <label>Please select one of them.</label>
                    <div>
                      <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'CSV', required: 'required' %> CSV</label><br />
                      <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'PDF', required: 'required' %> PDF</label><br />
                      <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'Both', required: 'required' %> Both(CSV + PDF)</label><br />
                    </div>
                 </div>
                    <div class="modal-footer">
                     <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                      <button name="email" type="submit" value="email" class="btn btn-primary email-send-btn">Send</button>
                    </div>
                 </div>
              </div>
            </div>
          <% end %>
        </div>
      </p>
  </div>
  
  <div class="tab-pane mb-3 card shadow-sm mt-2 border-radius-1" id="import-export" role="tabpanel">
    <p>
      <div class="d-flex">
      <button class="btn btn-success ml-2" name="export_data" type="submit" value="export_data">Export Data</button>
      <button class="btn btn-primary ml-2" type="button" data-toggle="modal" data-target="#importFile">Import Data</button>
      </div>
    </p>
  </div>
</div>
<% end %>



