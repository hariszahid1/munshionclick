$( document ).ready(function() {
  const ctx = document.getElementById('myChart');
  var categoryTitle=$('#categoryTitle').val().split(' ')
  var categoryUnit=$('#categoryUnit').val().split(' ')
  Chart.defaults.font.size = 16;
  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: categoryTitle,
      datasets: [{
        label: 'Unit Categories',
        data: categoryUnit,
        borderWidth: 1,
        backgroundColor: '#0070C0'
      }]
    },
    options: {
      
      maintainAspectRatio: false,
      plugins: {
            title: {
                display: true,
                text: 'Units Bar Chart'
            }
        }
      
    }
  });

});
  

