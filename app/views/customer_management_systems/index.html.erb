<div id="custom-alert" class="alert alert-danger d-none">
  <span class="custom-alert-text"></span>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">Ã—</span>
  </button>
</div>
<div class="hidden" id="city_list">
  <div class="row">
    <div class="col-lg-12 col-sm-12">
      <div class="main-content-header">
        <h1 class="ml-2">Customer Management System</h1>
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="<%= root_path %>">Dashboard</a>
          </li>
          <li class="breadcrumb-item active">
            <a href="<%= customer_management_systems_path %>">CMS</a>
          </li>
        </ol>
      </div>
      <div class="float-right">
        <div class="dropdown ml-auto mr-4">
          <span class="btn btn-info" title= "About This page">Help</span>
          <div class="dropdown-content">
            <% if @help.present? %>
              <% @help&.help_links.each do |link| %>
                <a type="button" class="" target="_blank" href="<%= link[1] %>" >Help in <%= link[0] %></a>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <ul class="nav nav-pills" role="tablist">
		<!--li class="nav-item">
			<a class="nav-link tab-label" data-toggle="tab" href="#search" role="tab">Search</a>
		</li-->
		<%if (check_can_create(@module_permission))%>
			<li class="nav-item">
				<a class="nav-link tab-label active" data-toggle="tab" href="#create" role="tab">Create</a>
			</li>
		<%end%>
		<%if (check_can_download_pdf(@module_permission))%>
			<li class="nav-item">
				<a class="nav-link tab-label" data-toggle="tab" href="#pdf" role="tab">Download pdf</a>
			</li>
		<%end%>
		<%if (check_can_download_csv(@module_permission))%>
			<li class="nav-item">
				<a class="nav-link tab-label" data-toggle="tab" href="#csv" role="tab">Download Csv</a>
			</li>
		<%end%>
		<%if (check_can_send_email(@module_permission))%>
			<li class="nav-item">
				<a class="nav-link tab-label" data-toggle="tab" href="#emails" role="tab">Send Email</a>
			</li>
		<%end%>
		<%if (check_can_import_export(@module_permission))%>
			<li class="nav-item">
				<a class="nav-link tab-label" data-toggle="tab" href="#import-export" role="tab">Import/Export</a>
			</li>
		<%end%>
</ul>

  <%= search_form_for @q, url: customer_management_systems_path, class: "admin-controls", method: "get" do |f| %>
    <div class="tab-content mb-5">
      <div class="tab-pane" id="search" role="tabpanel">
        <p>
          <div class="col-lg-10 form-group d-flex">
            <div class='col-lg-3'>
              <%= f.search_field :cms_data_cont,  placeholder: "title", title: "title" ,:class=>"form-control" %>
            </div>
            <div class="col=lg-2 form-group float-left">
              <%= f.select :status_eq, SysUser.statuses.map { |key, value| [key.humanize, value] },{include_blank: "Select Status", hide_label:true, required: true },:class=>"form-control chosen-select" %>
            </div>

            <div class="col-lg-2 form-group float-left">
              <button class="form-control btn btn-primary" name="search_submit" type="submit" value="Search" style="width:100px"><i class="fa fa-search"></i></button>
            </div>
          </div>
        </p>
      </div>
      <div class="tab-pane active" id="create" role="tabpanel">
        <p>
          <% if can?(:add, :all) %>
            <div id="new_city">
              <%= link_to new_customer_management_system_path, remote: true,class: "btn btn-success ml-3" do %>
                <i class="fa fa-plus" aria-hidden="false"></i>
                Create CMS User
              <% end %>
            </div>
          <% end %>
        </p>
      </div>

      <div class="tab-pane" id="pdf" role="tabpanel">
        <p>
          <div class="col-lg-2 d-flex">
            <button class="form-control btn btn-danger" title= "download customer_management_systems pdf" name="pdf" type="submit" value="pdf" formtarget="_blank" style="width:160px">CMS Users &nbsp;<i class="fa fa-file-pdf"></i></button>
          </div>
        </p>
      </div>

      <div class="tab-pane" id="csv" role="tabpanel">
        <p>
          <div class="col-lg-2 d-flex">
            <button class="btn btn-success" title= "download customer_management_systems csv" name="csv" type="submit" value="csv">CMS Users &nbsp;<i class="fa fa-file-excel"></i></button>
          </div>
        </p>
      </div>

      <div class="tab-pane" id="emails" role="tabpanel">
        <p>
          <div class="col-lg-2 d-flex">
            <button class="form-control btn btn-info" type="button" data-toggle="modal" data-target="#exampleModalCenter" style="width:100px"><i class="fa fa-envelope"></i>&nbsp;Mail</button>
          </div>
        </p>
        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Enter your email to recieve files.</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>

              <div class="modal-body">
                <% @pos_setting = PosSetting.first %>
                <label>Email:</label>
                <%= text_field_tag 'email_value',{}, value: current_user.email, class: 'form-control', type: 'email'%>
                <br/>
                <label>Subject:</label>
                <%= text_field_tag 'subject', "#{@pos_setting.display_name} - CMS Detail report from MunshiOnClick", class: 'form-control'%>
                <br />
                <label>Body:</label><br />
                <%= text_area_tag 'body', nil, class: 'form-control'%>
                <br/>
                <label>Please select one of them.</label>
                <div>
                  <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'CSV', required: 'required' %> CSV</label><br />
                  <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'PDF', required: 'required' %> PDF</label><br />
                  <label style="cursor: pointer"><%= radio_button_tag :email_choice, 'Both', required: 'required' %> Both(CSV + PDF)</label><br />
                </div>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button name="email" type="submit" value="email" class="btn btn-primary">Send</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="tab-pane" id="import-export" role="tabpanel">
        <p>
          <div class="d-flex">
            <button class="btn btn-success ml-2" name="export_data" type="submit" value="export_data">Export Data</button>
            <button class="btn btn-primary ml-2" type="button" data-toggle="modal" data-target="#importFile">Import Data</button>
          </div>
        </p>
      </div>
    </div>
  <% end %>
</div>

<div class='card p-3'>
  <table data-toggle="table" data-search="true" id="sys_user_table">
		<%if (check_can_delete(@module_permission))%>
    	<button class='btn btn-outline-danger float-right delete-selected' type='button' style="width:163px"value='SysUser' >Delete Selected</button>
		<%end%>
    <thead>
      <tr>
        <th><input type="checkbox" id="master" class='select-all-checkbox'></th>
        <th>Client Name</th>
        <th>Client Number</th>
         <th>Client Type</th>
        <th>Category</th>
        <th>Source</th>
        <th>Plot Size</th>
        <th class="border_none text-center">Action</th>
      </tr>
    </thead>

    <tbody>
      <%= render partial: 'sys_users', collection: @sys_users %>
    </tbody>
  </table>

  <div class="row">
    <div class="col-lg-4 col-sm-4">
      <%= page_entries_info @sys_users %>
    </div>
    <div class="col-lg-8 col-sm-8 pagination-left">
      <%= paginate @sys_users %>
    </div>
  </div>
</div>

<%= form_for :bulk_import, url: bulk_import_data_path, method: :post, html: {class: "bulk-import-form"} do |f| %>
  <div class="modal fade" id="importFile" tabindex="-1" role="dialog" aria-labelledby="importFileTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Import file</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= f.file_field :file, required: true, accept: '.csv' %>
          <%= f.hidden_field :table_name, value: 'SysUser' %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit 'Import', class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="show-data"></div>

