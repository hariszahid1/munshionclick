<html>
  <head>
    <style>
      .border-bottom{
        border-bottom: double 4px;
      }
      .text-center{
        text-align: center;
      }
    </style>
  </head>
  <body>
    <% @date = Date.today  %>
    <% @time = DateTime.now %>
    <% @time = Time.zone.now %>
    <div>
      <p class="border-bottom"></p>
      <h1 class="text-center">System Users</h1>
      <h1 class="text-center">
        Date: <b><span><%= @time.strftime("%d")%>/<%=@time.strftime("%b")%>/<%= @time.strftime("%y")%></span>
        Time: <span><%=@time.strftime("at %I:%M%p")%></span></b>
      </h1>
      <p class="border-bottom"></p>
      <p class="text-center">Report by: <%=current_user.name%></p>
    </div>
    <div>
      <table>
        <thead class="lite-gray">
          <th class="text-center">ID</th>
          <th class="text-center">Code</th>
          <th class="text-center">Cnic</th>
          <th class="text-center">Name</th>
          <th class="text-center">User Type Id</th>
          <th class="text-center">User Group</th>
          <th class="text-center">Status</th>
          <th class="text-center">Occupation</th>
          <th class="text-center">Credit Status</th>
          <th class="text-center">Credit Limit</th>
          <th class="text-center">Opening Balance</th>
          <th class="text-center">Balance</th>
          <th class="text-center">GST</th>
          <th class="text-center">NTN</th>
          <th class="text-center">father</th>
          <th class="text-center">Nominee Name</th>
          <th class="text-center">Nominee Father Name</th>
          <th class="text-center">Nominee CNIC</th>
          <th class="text-center">Nominee Relation</th>
          <th class="text-center">Address</th>
          <th class="text-center">Home</th>
          <th class="text-center">Office</th>
          <th class="text-center">Mobile</th>
          <th class="text-center">Fax</th>
          <th class="text-center">Email</th>
          <th class="text-center">Comment</th>
          <th class="text-center">Status</th>
          <th class="text-center">City Id</th>
          <th class="text-center">Country Id</th>
          <th class="text-center">Permanent Address</th>
        </thead>
        <tbody>
          <% data.each_with_index do |sys_user, index| %>
            <tr>
              <th class="text-center"><%= sys_user['id'] %></th>
              <td class="text-center"><%= sys_user['code'] %></td>
              <td class="text-center"><%= sys_user['cnic'] %></td>
              <th class="text-center"><%= sys_user['name'] %></th>
              <td class="text-center"><%= sys_user['user_type_id'] %></td>
              <td class="text-center"><%= sys_user['user_group'] %></td>
              <th class="text-center"><%= sys_user['status'] %></th>
              <td class="text-center"><%= sys_user['occupation'] %></td>
              <td class="text-center"><%= sys_user['credit_status'] %></td>
              <th class="text-center"><%= sys_user['credit_limit'] %></th>
              <td class="text-center"><%= sys_user['opening_balance'] %></td>
              <td class="text-center"><%= sys_user['balance'] %></td>
              <th class="text-center"><%= sys_user['gst'] %></th>
              <td class="text-center"><%= sys_user['ntn'] %></td>
              <td class="text-center"><%= sys_user['father'] %></td>
              <td class="text-center"><%= sys_user['nom_name'] %></td>
              <th class="text-center"><%= sys_user['nom_father'] %></th>
              <td class="text-center"><%= sys_user['nom_cnic'] %></td>
              <td class="text-center"><%= sys_user['nom_relation'] %></td>
              <td class="text-center"><%= sys_user[:contact]['address'] %></td>
              <td class="text-center"><%= sys_user[:contact]['home'] %></td>
              <td class="text-center"><%= sys_user[:contact]['office'] %></td>
              <td class="text-center"><%= sys_user[:contact]['mobile'] %></td>
              <td class="text-center"><%= sys_user[:contact]['fax'] %></td>
              <td class="text-center"><%= sys_user[:contact]['email'] %></td>
              <td class="text-center"><%= sys_user[:contact]['comment'] %></td>
              <td class="text-center"><%= sys_user[:contact]['status'] %></td>
              <td class="text-center"><%= sys_user[:contact]['city_id'] %></td>
              <td class="text-center"><%= sys_user[:contact]['country_id'] %></td>
              <td class="text-center"><%= sys_user[:contact]['permanent_address'] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </body>
</html>
