<div class="nested-fields">
      <%= f.hidden_field :purchase_sale_detail_id %>
      <%= f.hidden_field :id %>

      <div class="row font-weight-bold challan-stock-container">
        <div class="col-lg-2 form-group float-left">
          <%= f.select :product_id, options_from_collection_for_select(@products, 'id', ->(st){"#{st.title} \u{27F6} #{st.code}"}, f.object.product_id), {hide_label: true,prompt: "Select the products"}, class: "chosen-select product",required: true %>
        </div>
        <div class="col-lg-2 form-group float-left">
          <%= f.text_field :size_13, hide_label: true, placeholder: "Marka", value: "#{(f.object.size_13 == '0' ? nil : f.object.size_13)}"%>
        </div>
        <div class="col-lg-2 form-group float-left">
          <%= f.text_field :size_12, placeholder: "Builty No:", hide_label: true, label: "Builty No:", value: "#{(f.object.size_12 == '0' ? nil : f.object.size_12)}" %>
        </div>
        <div class="col-lg-2 form-group float-left">
          <%= f.text_field :size_11, placeholder: "Vehicle:", hide_label: true, label: "Vehicle:", value: "#{(f.object.size_11 == '0' ? nil : f.object.size_11)}" %>
        </div>
        <div class="col-lg-2 form-group float-left">
          <%= f.text_field :size_10, hide_label: true, placeholder: "Challan", label: "Challen", class: 'challan-no-value', value: "#{(f.object.size_10 == '0' ? nil : f.object.size_10)}"%>
        </div>
        <div class="col-lg-2 form-group float-left">
          <%= f.text_field :size_9, hide_label: true, placeholder: "Stock", label: "Stock", class:'stock-value', readonly: true%>
        </div>
        <%= f.hidden_field :quantity, class: "stock-value" %>
        <%= f.hidden_field :transaction_type, value: "Sale"%>
        <div class="col-lg-1 form-group float-left text-xs font-weight-bold text-danger text-uppercase",onclick="costUpdateReturn()",onkeyup="costUpdateReturn()">
          <%= link_to_remove_association f, class: "return",onclick:"costUpdateReturn()",onkeydown:"costUpdateReturn()", onkeyup:"costUpdateReturn()" do %>
            <i class="fa fa-minus-circle"></i> Drop
          <% end %>
          <span class="span-line text-danger">1</span>
        </div>
      </div>
    </div>