$( document ).ready(function() {
  var staffCount=$('#staffCount').val().split(' ')
  const ctx = document.getElementById('myChart');
  Chart.defaults.font.size = 16;
  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['Jama / Payable','Benam / Receivable', 'Nil'],
      datasets: [{
        label: 'Total Staff',
        data: staffCount,
        borderWidth: 1,
        backgroundColor: ["blue", "red", "green"],
      }],
    },
    options: {
      
      maintainAspectRatio: false,
      plugins: {
            title: {
                display: true,
                text: 'Total Staff by Balance Bar Chart',
            }
          

        }
      
    }
  });
  
});

