<tr>
  <td><%= product_stock.product.title %></td>
  <td><%= number_with_delimiter product_stock.in_stock %></td>
  <td><%= number_with_delimiter product_stock.out_stock %></td>
  <td><%= number_with_delimiter product_stock.stock %></td>
  <td><%= number_with_delimiter product_stock.cost_price %></td>
  <td><%= number_with_delimiter product_stock.sale_price %></td>
  <td><%= product_stock.created_at.strftime("%d/%b/%y at %I:%M %p") %></td>
  <td>
    <div class="icon-container-1">
      <div class="my-icon-1 my-view-1">
        <div class="my-tooltip-1">
          <div class="icon-container">
            <div class="my-icon my-view">
              <div class="my-tooltip">
                Edit
              </div>
              <%if (check_can_update(@module_permission))%>
                <%= link_to edit_product_stock_path(product_stock), class:"icon-div" do %>
                  <i class="fa fa-edit mt-2" aria-hidden="true"></i>
                <%end %>
              <% end %>
            </div>
            <div class="my-icon my-view">
              <div class="my-tooltip">
                Delete
              </div>
              <%if (check_can_delete(@module_permission))%>
                <%= link_to product_stock, method: :delete, data: {title: 'Confirmation' ,confirm: 'Are you sure?', commit: 'Sure!'}, :remote => true, :class => 'delete icon-div' do %>
                  <i class="fa fa-trash mt-2" aria-hidden="true"></i>
                <%end %>
              <% end %> 
            </div>
            <div class="my-icon my-view">
              <div class="my-tooltip">
                Show
              </div>
              <%if (check_can_read(@module_permission))%>
                <%= link_to product_stock_path(product_stock), class:"icon-div" do %>
                  <i class="fa fa-eye mt-2" aria-hidden="true"></i>
                <%end %>
              <%end%>    
            </div>
          </div>
        </div>
        <span class="icon-div-1">
            <i class="fa fa-ellipsis-v mt-2" aria-hidden="true"></i>
        </span>
      </div>
    </div>
  </td>
</tr>
