<tr>
  <td><%= product_stock.product.title %></td>
  <td><%= number_with_delimiter product_stock.in_stock %></td>
  <td><%= number_with_delimiter product_stock.out_stock %></td>
  <td><%= number_with_delimiter product_stock.stock %></td>
  <td><%= number_with_delimiter product_stock.cost_price %></td>
  <td><%= number_with_delimiter product_stock.sale_price %></td>
  <td><%= product_stock.created_at.strftime("%d%b%y at %I:%M %p") %></td>
  <td>
    <% if can?(:update, :all) %>
      <%= link_to edit_product_stock_path(product_stock) do %>
        <i class="fa fa-edit " aria-hidden="true"></i> |
      <%end %>
    <% end %>
    <% if can?(:delete, :all) %>
      <%= link_to product_stock, method: :delete, data: {title: 'Confirmation' ,confirm: 'Are you sure?', commit: 'Sure!'}, :remote => true, :class => 'delete' do %>
        <i class="fa fa-trash " aria-hidden="true"></i> |
      <%end %>
    <% end %>
    <% if can?(:view, :all) %>
      <%= link_to product_stock do %>
        <i class="fa fa-eye " aria-hidden="true"></i>
      <%end %>
    <%end%>

  </td>
</tr>
