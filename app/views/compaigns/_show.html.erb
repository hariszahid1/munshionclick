<div class="modal fade" id="showdData" tabindex="-1" role="dialog" aria-labelledby="showdDataLabel">
  <div class="modal-dialog modal-dialog-centered modal-lg"  role="document">
    <div class="modal-content">
      <div class="modal-body">
            <!-- Card Header - Accordion -->
            <div class="modal-header">
              <h2 class="modal-title" id="myModalLabel">Compaign Details</h2>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="card">
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong class="h5">Name:</strong><br><%= compaign.title %></li>
                <li class="list-group-item"><strong class="h5">Comment:</strong><br><%= compaign.comment %></li>

              </ul>
            </div>
            
          <div class="modal-footer">
            <button type="button" class="btn btn-danger float-right" data-dismiss="modal" aria-label="Close">
              <span class="text-light p-2">Close</span>
            </button>
          </div>
      </div>
    </div>
  </div>
</div>

