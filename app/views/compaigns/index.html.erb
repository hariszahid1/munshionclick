<div class="hidden" id="compaign_list">
  <div class="row mb-4 ">
    <div class="col-lg-12 col-sm-12">
      <div class="main-content-header">
        <h1>Compaigns</h1>
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="<%= root_path %>">Dashboard</a>
          </li>
          <li class="breadcrumb-item active">
            <a href="<%= compaigns_path %>">Compaigns</a>
          </li>
        </ol>
      </div>
      <% if check_can_create(@module_permission) %>
        <div id="new_compaign">
          <%= link_to new_compaign_path, class: "btn btn-success" do %>
             <i class="fa fa-plus" aria-hidden="true"></i>
             Create
             <% end %>
        </div>
      <% end %>
    </div>
  </div>
    <div class="float-right">
    <div class="dropdown ml-auto mr-4">
     <span class="btn btn-info" title= "About This page"><i class="fa fa-question-circle mr-1"></i>Help</span>
      <div class="dropdown-content">
        <% if @help.present? %>
        <% @help&.help_links.each do |link| %>
        <a type="button" class="" target="_blank" href="<%= link[1] %>" >Help in <%= link[0] %></a>
         <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <ul class="nav nav-pills" role="tablist">
    <li class="nav-item">
      <a class="nav-link tab-label active " data-toggle="tab" href="#search" role="tab">Search</a>
    </li>
	</ul>
  <div class="tab-content">
      <div class="tab-pane active mb-3 card shadow-sm mt-2 p-3 border-radius-1" id="search" role="tabpanel">
        <div class="row mt-3">
          <div class="col-lg-12 col-sm-12">
            <%= search_form_for @q, url: compaigns_path, class: "admin-controls", method: "get" do |f| %>
              <div class="col-lg-2 form-group float-left">
                <%= f.search_field :title_cont, placeholder: "title", title: "title" ,:class=>"form-control" %>
              </div>
              <div class="col-lg-2 form-group float-left">
                <%= f.search_field :comment_cont, placeholder: "Compaigns comment", title: "Compaigns comment" ,:class=>"form-control" %>
              </div>
              <div class="col-lg-2 form-group float-left">
                <%= f.search_field :created_at_gteq,value:@start_date, class: 'form-control input-sm datepicker',placeholder: "YYYY-MM-DD" %>
              </div>
              <div class="col-lg-2 form-group float-left">
                <%= f.search_field :created_at_lteq,value:@end_date,class: 'form-control input-sm datepicker' ,placeholder: "YYYY-MM-DD"%>
              </div>
              <div class="col-lg-1 form-group float-left">
                <button class="form-control btn btn-primary" name="search_submit" type="submit" value="Search" style="width:100px"><i class="fa fa-search"></i></button>
              </div>
              <button class="form-control btn btn-danger float-right mr-2" style="width: 100px;" name="submit_pdf_a4" type="submit" value="Total Expense PDF A4" formtarget="_blank"><i class="fa fa-file-pdf mr-2"></i>PDF</button>
            <% end %>
          </div>
        </div>
      </div>
  </div>    
  <div class="clearfix"></div>
  <div class="card border-radius-1 shadow p-3">
    <table data-toggle="table" data-search="true" id="compaign_table">
      <thead>
        <tr>
          <th><%= sort_link(@q, :id, 'ID') %></th>
          <th><%= sort_link(@q, :title, 'Title') %></th>
          <th><%= sort_link(@q, :comment, 'Comment') %></th>
          <th><%= sort_link(@q, :created_at, 'Date') %></th>
          <th class="border_none">Action</th>
        </tr>
      </thead>

      <tbody>
        <%= render partial: 'compaign', collection: @compaigns %>
      </tbody>
    </table>
    <div class="row">
      <div class="col-lg-4 col-sm-4">
        <%= page_entries_info @compaigns %>
      </div>
      <div class="col-lg-8 col-sm-8 pagination-left">
        <%= paginate @compaigns %>
      </div>
    </div>
  </div>  
</div>



<script>
  $(document).ready(function() {
    if ($(".bootstrap-table").length == 0){
      $("table").bootstrapTable();
    }
    $("#compaign_list").removeClass('hidden');
    FontAwesome.dom.i2svg();
  });
  $(document).ready(function() {
    setTimeout(function(){
      $(".chosen-select").chosen({
  allow_single_deselect: true,
  width: '100%'
});
    }, 50);
  });
</script>
