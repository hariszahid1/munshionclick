<tr class="nested-fields">
  <td>
    <%= f.hidden_field :compaign_id %>
    <%= f.hidden_field :id %>
    <%= f.text_field :name%>
  </td>
  <td><%= f.text_area :phone , hide_label: true%></td>
  <td><%= f.text_area :mobile , hide_label: true%></td>
  <td><%= f.text_area :email , hide_label: true%></td>
  <td><%= f.text_area :comment , hide_label: true%></td>

  <td class="links"><%= link_to_remove_association "Remove", f , class: "btn btn-info" %></td>
  <script>
    $(document).ready(function() {
      setTimeout(function(){
        $(".chosen-select").chosen({
  allow_single_deselect: true,
  width: '100%'
});
      }, 50);
    });
  </script>
</tr>
