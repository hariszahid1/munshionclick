<p id="notice"><%= notice %></p>

<h1>Materials</h1>

<table>
  <thead>
    <tr>
      <th>Production</th>
      <th>Item</th>
      <th>Product</th>
      <th>Cost price</th>
      <th>Sale price</th>
      <th>Quantity</th>
      <th>Comment</th>
      <th>Status</th>
      <th> Action</th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.production %></td>
        <td><%= material.item %></td>
        <td><%= material.product %></td>
        <td><%= material.cost_price %></td>
        <td><%= material.sale_price %></td>
        <td><%= material.quantity %></td>
        <td><%= material.comment %></td>
        <td><%= material.status %></td>
        <% if can?(:update, :all) %>
        <td>
          <% if can?(:update, :all) %>
            <%= link_to edit_material_path(material) do %>
              <i class="fa fa-edit " aria-hidden="true"></i> |
            <%end %>
          <% end %>
          <% if can?(:delete, :all) %>
            <%= link_to material, method: :delete, data: {title: 'Confirmation' ,confirm: 'Are you sure?', commit: 'Sure!'}, :remote => true, :class => 'delete' do %>
              <i class="fa fa-trash " aria-hidden="true"></i> |
            <%end %>
          <% end %>
          <% if can?(:view, :all) %>
            <%= link_to material do %>
              <i class="fa fa-eye " aria-hidden="true"></i>
            <%end %>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

