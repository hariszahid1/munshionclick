<%= bootstrap_form_for(loan ,remote: true) do |f| %>
  <% if loan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(loan.errors.count, "error") %> prohibited this expense from being saved:</h2>
      <ul>
        <% loan.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%if params[:credit].present?%>
    <div class="col-lg-6 form-group float-left">
      <%= f.text_field :credit, {placeholder: "Enter the amount", required: true} %>
    </div>
  <%else%>
    <div class="col-lg-6 form-group float-left">
      <%= f.text_field :debit, {placeholder: "Enter the amount", required: true} %>
    </div>
  <%end%>

  <div class="col-lg-6 form-group float-left">
    <%= f.select :account_id , options_from_collection_for_select(@accounts, 'id', 'title', f.object.account_id), {prompt: "Select the Account"}, required: true%>
  </div>

  <div class="col-lg-6 form-group float-left">
    <%= f.date_select :created_at %>
  </div>

  <div class="col-lg-6 form-group float-left">
    <%= f.label :comment do %>
      <%= Loan.human_attribute_name :comment %>
        <i class="fas fa-language"></i>
      <% end %>
    <%= f.text_area :comment, placeholder:"Enter Comment", hide_label: true ,class: 'urdu-font'%>
  </div>

  <div class="clearfix">
    <hr>
    <div class="col-lg-12 row ">
      <div class="col-lg-6 form-group float-left">
        <%= link_to loans_path do %>
          <i class="fa fa-arrow-left " aria-hidden="true"></i>
        <% end %>
      </div>
      <div class="col-lg-6 form-group float-left">
        <div class="col-lg-6 form-group float-left">
          <%=f.object.id.nil? ? (f.submit class: "btn btn-success", style: "float: left")  :  (f.submit class: "btn btn-warning", style: "float: left")%>
        </div>
      </div>
    </div>
  </div>
<% end %>
